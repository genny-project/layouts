{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "width": "100%",
        "backgroundColor": "#f6f6f6",
        "padding": 20
      },
      "children": [
        {
          "component": "Box",
          "dontShowIf": {
            "query.items": {
              "$size": {
                "$gt": 0
              }
            }
          },
          "props": {
            "flex": 1,
            "width": "100%",
            "justifyContent": "center",
            "alignItems": "center"
          },
          "children": [
            {
              "component": "ActivityIndicator",
              "props": {
                "size": "large"
              }
            }
          ]
        },
        {
          "component": "Container",
          "onlyShowIf": {
            "query.items": {
              "$size": {
                "$gt": 0
              }
            }
          },
          "props": {
            "flexDirection": "column",
            "maxWidth": 700
          },
          "repeat": "_query.items",
          "children": {
            "component": "Link",
            "props": {
              "to": "internships/{{repeater.code}}",
              "marginBottom": 20,
              "padding": 20,
              "backgroundColor": "#ffffff",
              "withFeedback": true,
              "hoverProps": {
                "style": {
                  "transform": [
                    { "scale": 1.02 }
                  ]
                }
              }
            },
            "children": {
              "component": "Box",
              "props": {
                "width": "100%"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginRight": 20,
                    "flexShrink": 0
                  },
                  "children": [
                    {
                      "component": "Image",
                      "props": {
                        "source": "{{repeater.company.attributes.PRI_IMAGE_URL.value}}",
                        "height": 100,
                        "width": 100
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {
                    "flexDirection": "column",
                    "flex": 1,
                    "backgroundColor": "#ffffff"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 5
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "bold": true
                          },
                          "children": "{{repeater.company.attributes.PRI_NAME.value}}"
                        }
                      ]
                    },
                    {
                      "component": "Text",
                      "children": "{{repeater.attributes.PRI_NAME.value}}"
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginTop": 15
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "size": "xs"
                          },
                          "children": "{{repeater.attributes.PRI_INTERNSHIP_DESCRIPTION.value}}"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getLinks",
      "id": "GRP_NEW_ITEMS",
      "as": "items"
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{attributes.LNK_HOST_COMPANY.value}}",
        "as": "company"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "company",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    }
  ]
}
