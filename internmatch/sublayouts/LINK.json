{
    "div": {
        "style": {
            "fontSize": "1em",
            "borderBottom": "1px solid #bbb",
            "borderRadius": 0,
            "padding": "5px",
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "space-around"
        },
        "children": [
            {
                "span": {
                    "children": "BE.link.PRODUCT.PRI_NAME"
                }
            },
            {
                "Selector": {
                    "checkValues": ["USER.PRI_IS_BUYER"],
                    "showValues": ["true"],
                    "children": [
                        {
                            "GennyButton": {
                                "style": {
                                  "width": "100px",
                                  "height": "30px"
                                },
                                "buttonStyle": {
                                  "background": "PROJECT.PRI_COLOR",
                                  "color": "white"
                                },
                                "buttonCode": "BTN_APPLY_BEG",
                                "value": {
                                  "itemCode": "BE.code",
                                  "root": "ROOT"
                                },
                                "children": "Apply"
                            }
                        }    
                    ]
                }
            },
            {
                "GennyButton": {
                    "style": {
                      "width": "100px",
                      "height": "30px"
                    },
                    "buttonStyle": {
                      "background": "PROJECT.PRI_COLOR",
                      "color": "white"
                    },
                    "buttonCode": "BTN_VIEW_BEG",
                    "value": {
                      "itemCode": "BE.code",
                      "root": "ROOT"
                    },
                    "children": "View"
                }
            }
        ]
    }
}
