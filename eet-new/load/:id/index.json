  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{navigation.loadID}}",
      "as": "load"
    },
    {
      "operator": "map",
      "fields": "load"
    },
    {
      "operator": "populateAttributes",
      "code": "{{navigation.loadID}}",
      "as": "attributes"
    },
    {
      "operator": "populateLinkValues",
      "multiple": true,
      "as": "linkBEs"
    },
    {
      "operator": "scope",
      "path": "linkBEs",
      "scope": {
        "operator": "populateAttributes"
      }
    },
    {
      "operator": "scope",
      "path": "linkBEs",
      "as": "owner",
      "scope": {
        "operator": "find",
        "query": { "linkValue": { "$eq": "OWNER" } }
      }
    },
    {
      "operator": "scope",
      "path": "linkBEs",
      "as": "load",
      "scope": {
        "operator": "findOne",
        "query": { "linkValue": { "$eq": "LOAD" } }
      }
    },
    {
      "operator": "scope",
      "path": "linkBEs",
      "as": "offers",
      "scope": {
        "operator": "find",
        "query": { "linkValue": { "$eq": "OFFER" } }
      }
    }
  ]
