{
  "layout": {
    "title": "Chat Conversation",
    "appColor": "dark",
    "header": {
      "variant": "noback"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Box",
      "props": {
        "justifyContent": "center",
        "padding": 20,
        "fontWeight": "bold",
        "backgroundColor": "#f8f8f8",
        "borderBottomWidth": 1,
        "borderColor": "lightgrey",
        "borderStyle": "solid"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "alignItems": "center",
            "flex": 1
          },
          "children": [
            {
              "component" : "BackButton"
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "alignItems": "center",
            "flex": 3
          },
          "children": [
            {
              "component": "Text",
              "children": [
                  {
                    "component": "Join",
                    "renderAsComponent": true,
                    "props": {
                      "delimiter": ", ",
                      "items": "_query.names"
                      }
                  }
                ]

            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "alignItems": "center",
            "flex": 1
          }
        }
      ]
    },
    {
      "component": "Box",
      "props": {
        "justifyContent": "center",
        "flexDirection": "column",
        "backgroundColor": "#f8f8f8"
      },
      "onlyShowIf": {
        "$or": [
          {
            "navigation.itemID": {
              "$exists": true
            }
          },
          {
            "query.requests": {
              "$size": {
                "$gt": 0
              }
            }
          }
        ]
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "cards/introduction/introductions-summary.card",
            "requests": "_query.requests",
            "names": "_query.names"
          },
          "conditional": {
            "if" : {
              "navigation.itemID": {
                "$exists": true
              }
            },
            "then": {
              "layoutName": "cards/introduction/introduction.card",
              "requestID": "{{navigation.itemID}}"
            }
          }
        }
      ]
    },
    {
      "component": "Chat",
      "props": {
        "bubbleRightColor": "#09D0B7",
        "sendIcon": "chevron-right",
        "sendIconColor": "white",
        "sendIconBackgroundColor": "#09D0B7",
        "itemCode": "{{navigation.chatCode}}",
        "users": "_query.users",
        "messages": "_query.messages",
        "names": "_query.names",
        "user": {
          "_id": "{{user.data.code}}"
        }
      }
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{navigation.chatCode}}",
      "as": "chatBE"
    },
    {
      "operator": "scope",
      "path": "chatBE.links",
      "as": "messages",
      "scope": {
        "operator": "find",
        "query": {
          "valueString": {
            "$eq": "message"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "messages",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator":"scope",
      "path":"messages",
      "scope":{
         "operator":"find",
         "query":{
            "code":{
               "$exists":true
            }
         }
      }
    },
    {
      "operator": "scope",
      "path": "messages",
      "scope": {
        "operator": "populateAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "chatBE.links",
      "as": "users",
      "scope": {
        "operator": "find",
        "query": {
          "link.attributeCode": {
            "$eq": "LNK_USER"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator":"scope",
      "path":"users",
      "scope":{
         "operator":"find",
         "query":{
            "code":{
               "$exists":true
            }
         }
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "scope": {
        "operator": "populateAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$ne": "{{user.data.code}}"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "as": "names",
      "scope": {
        "operator": "map",
        "fields": "name"
      }
    },
    {
      "operator":"scope",
      "path":"users",
      "as": "otherUser",
      "scope":{
         "operator":"findOne",
         "query":{
            "code":{
               "$exists":true
            }
         }
      }
    },
    {
      "operator": "getBE",
      "id": "{{user.data.code}}",
      "as": "currentUser"
    },
    {
      "operator": "scope",
      "path": "currentUser",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "currentUser.links",
      "as": "requests",
      "scope": {
        "operator": "find",
        "query": {
          "valueString": {
            "$eq": "REQUEST"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "requests",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator":"scope",
      "path":"requests",
      "scope": {
        "operator":"find",
        "query":{
          "code": {
            "$exists":true
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "requests",
      "scope": {
        "operator": "populateAttributes",
        "as": "attributes"
      }
    },
    {
      "operator":"scope",
      "path": "requests",
      "scope": {
        "operator":"find",
        "query": {
          "$and": [
            {
              "$or": [
                {
                  "$and": [
                    {
                      "attributes.PRI_INTRODUCER_CODE.value": {
                        "$eq": "{{otherUser.code}}"
                      }
                    },
                    {
                      "attributes.PRI_CREATOR_CODE.value": {
                        "$eq": "{{currentUser.code}}"
                      }
                    }
                  ]
                },
                {
                  "$and": [
                    {
                      "attributes.PRI_INTRODUCER_CODE.value": {
                        "$eq": "{{currentUser.code}}"
                      }
                    },
                    {
                      "attributes.PRI_CREATOR_CODE.value": {
                        "$eq": "{{otherUser.code}}"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "$and": [
                {
                  "attributes.PRI_INTRODUCER_CODE.value": {
                    "$exists": true
                  }
                },
                {
                  "attributes.PRI_CREATOR_CODE.value": {
                    "$exists": true
                  }
                }
              ]
            }
          ]
        }
      }
    }
  ]
}
