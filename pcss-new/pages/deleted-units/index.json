{
  "layout": {
    "title": "Deleted Units View",
    "appColor": "white",
    "backgroundColor": "whitesmoke",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Box",
      "children": [
        {
          "component": "Table",
          "props": {
            "renderWrapper": {
              "component": "EventButton",
              "props": {
                "height": "20px",
                "fontWeight": "300",
                "fontSize": 10,
                "eventType": "BTN_CLICK",
                "buttonCode": "BTN_TABLE_SELECT",
                "value": {
                  "itemCode": "_celld.attributeCode",
                  "hint": "GRP_APPLICATIONS_BIN",
                  "userCode": "{{user.data.code}}"
                }
              }
            },
            "columns": [
              {
                "Header": "Action",
                "editable": true,
                "accessor": "actions",
                "renderButton": [
                  {
                    "component": "EventButton",
                    "props": {
                      "buttonCode": "BTN_VIEW_BEG",
                      "color": "#5fa5ec",
                      "textColor": "#fff",
                      "height": 25,
                      "width": "100%",
                      "text": "Property Details",
                      "padding": 15,
                      "size": "xs",
                      "value": {
                        "itemCode":"{{code}}",
                        "hint": "BTN_VIEW_BEG"
                      }
                    }
                  }
                ]
              },
              {
                "Header": "Address Of Property",
                "accessor": "address",
                "filterType": "string"
              },  
              {
                "Header": "Type Of Property",
                "accessor": "type",
                "filterType": "string"
              },
              {
                "Header": "Postcode",
                "accessor": "postcode",
                "filterType": "number"
              }
            ],
            "tableBackgroundColor": "#e05b5b",
            "data": "_query.tableData",
            "height": "500px",
            "width": "500px",
            "itemsPerPage": 15
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_APPLICATIONS_BIN",
      "as": "items"
    },
    {
      "operator": "scope",
      "path": "items.links",
      "as": "items",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}",
        "as": "be"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "be",
        "scope": {
          "operator": "populateBEGAttributes",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "as" : "company",
        "basePath": "baseEntities.data",
        "id": "{{be.attributes.LNK_COMPANY_PROVIDER.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "as" : "items",
        "id": "{{be.attributes.LNK_AGENCY.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "items",
        "scope": {
          "operator": "populateAttributes",
          "as" : "attributes",
          "code": "{{code}}"
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "address": "be.attributes.PRI_ADDRESS_FULL.value",
          "type": "be.attributes.LNK_PROPERTY_TYPE_SELECT.value",
          "postcode": "be.attributes.PRI_ADDRESS_POSTCODE.value"
        }
      }
    }
  ]
}
