{
  "layout": {
    "title": "Networks",
    "backgroundColor": "#f8f8f8",
    "header": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "ScrollView",
      "props": {
        "style": {
          "flex": 1,
          "backgroundColor": "#f8f8f8"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flex": 1,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "padding": 20,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 20
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "props": {
                        "text": "Networks",
                        "size": "xl"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "component": "ActivityIndicator",
              "props": {
                "size": "large"
              },
              "dontShowIf": {
                "query.results.links": {
                  "$exists": true
                }
              }
            },
            {
              "component": "Box",
              "props": {
                "justifyContent": "center",
                "flexDirection": "column"
              },
              "onlyShowIf": {
                "query.results.links": {
                  "$size": {
                    "$gt": 0
                  }
                }
              },
              "repeat": "_query.networks",
              "children": {
                "component": "Sublayout",
                "props": {
                  "layoutName": "cards/sidebar/sidebar.card",
                  "itemID": "{{repeater.code}}",
                  "item": "_repeater"
                }
              }
            },
            {
              "component": "Box",
              "props": {
                "backgroundColor": "white",
                "padding": 20,
                "width": "100%",
                "justifyContent": "center"
              },
              "dontShowIf": {
                "query.results.links": {
                  "$size": {
                    "$gt": 0
                  }
                }
              },
              "children": [
                {
                  "component": "Text",
                  "props": {
                    "text": "No networks to show.",
                    "color": "black",
                    "size": "xs"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "external",
      "name": "getBeWithAttributes",
      "params": {
        "idField": "GRP_NETWORKS",
        "asField": "networkBe"
      }
    },
    {
      "operator": "scope",
      "path": "networkBe",
      "as": "networks",
      "scope": {
        "operator": "find",
        "query": {
          "$exists":true
        }
      }
    },
    {
      "operator": "scope",
      "path": "networks",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator":"scope",
      "path":"networks",
      "scope":{
         "operator":"find",
         "query":{
            "code":{
               "$exists":true
            }
         }
      }
    },
    {
      "operator": "scope",
      "path": "networks",
      "scope": {
        "operator": "populateAttributes",
        "as": "attributes"
      }
    }
  ]
}
