{
  "layout": {
    "title": "Question",
    "appColor": "dark",
    "backgroundColor": "white",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    },
    "sidebarRight": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Container",
      "props": {
        "flexDirection": "column",
        "flex": 1,
        "height": "100%",
        "maxWidth": 700
      },
      "children": [
        {
          "component": "Form",
          "props": {
            "questionGroupCode": "{{navigation.id}}",
            "renderHeading": {
              "component": "Box",
              "props": {
                "marginTop": 20,
                "marginBottom": 20,
                "justifyContent":"center"
              },
              "children": [
                {
                  "component":"Box",
                  "props":{
                    "justifyContent":"center",
                    "marginBottom":20
                  },
                  "children":
                  {
                    "component": "Heading",
                    "props": {
                      "color": "#222",
                      "alignConte":"center",
                      "size": "xxl",
                      "bold":false,
                      "text": "{{heading}}"
                    }
                  }
                }
              ]
            },
            "renderSubheading": {
              "component": "Box",
              "props": {
                "marginY": 20
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "color": "#222",
                    "size": "xlg",
                    "align": "left",
                    "text": "{{subheading}}"
                  }
                }
              ]
            },
            "renderFormInputWrapper": {
              "component": "Box",
              "props": {
                "marginBottom": 20,
                "flexDirection": "column",
                "borderWidth": 1
              }
            },
            "renderFormInput": {
              "component": "FormInput",
              "useThemeFrom": "Input",
              "variant": "default",
              "props": {
                "placeholder": "{{label}}"
              }
            },
            "renderSubmitButtonWrapper": {
              "component": "Box",
              "props": {
                "marginTop": 10,
                "flexDirection": "column"
              }
            },
            "renderSubmitButton": {
              "component": "EventButton",
              "props": {
                "textColor":"#fff",
                "color": "#e05b5b",
                "size": "lg",
                "height": "45px",
                "width": "200px",
                "shape": "rounded",
                "fontFamily":"arial",
                "hoverProps": {
                  "color": "#283a4c",
                  "textColor": "#ffffff"
                }
              }
            },
            "renderLoading": {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "ActivityIndicator",
                  "props": {
                    "size": "large"
                  }
                },
                {
                  "component": "Box",
                  "props": {
                    "marginTop": 10
                  },
                  "children": [
                    {
                      "component": "Text",
                      "props": {
                        "color": "#222",
                        "text": "Loading form..."
                      }
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
