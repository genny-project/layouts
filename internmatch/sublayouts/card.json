{
  "Grid": {
    "rows": 2,
    "cols": 1,
    "style": {
      "background": "white",
      "fontsize": "10px"
    },
    "children": [
      {
        "Grid": {
          "position": [0, 0],
          "rows": 1,
          "cols": 1,
          "children": [
            {
            "GennyStatus": {
              
              "position": [
                0,
                0
              ],
              "root": "BE.code",
              "style": {
                "borderRadius": "none",
                "height": "25px",
                "width": "10px"
              },
              "statusStyle": {
                "height": "100%",
                "width": "10px",
                "maxHeight": "40px"
              }
            }
          }
        ]
        }
      },
      {
        "Grid": {
          "position": [0, 1],
          "rows": 1,
          "cols": 1,
          "children": [
            {
            "GennyDropdown": {
              "inline": true,
              "isSlide": false,
              "animateHeader": false,
              "animateFooter": true,
              "position":[0,0],
              "contentStyle": {
                "backgroundColor": "white",
                "padding": "0"
              },
              "header": [
                {
                "Grid": {
                  "rows": 2,
                  "cols": 1,
                  "children": [{
                      "ImageView": {
                        "position": [
                          0,
                          0
                        ],
                        "style": {
                          "margin": "0px",
                          "maxWidth": "40px",
                          "width": "40px"
                        },
                        "src": "BE.link.APPLICANT.PRI_IMAGE_URL"
                      }
                    },
                    {
                      "Grid": {
                        "position": [
                          0,
                          1
                        ],
                        "rows": 2,
                        "cols": 1,
                        "children": [{
                            "p": {
                              "position": [
                                0,
                                0
                              ],
                              "style": {
                                "margin": "0px"
                              },
                              "children": "BE.PRI_APPLICANT_FULLNAME"
                            }
                          },
                          {
                            "p": {
                              "position": [
                                1,
                                0
                              ],
                              "style": {
                                "margin": "0px"
                              },
                              "children": "BE.PRI_APPLICANT_USERNAME"
                            }
                          }
                        ]
                      }
                    }
                  ]
                }
              }],
              "footer": [{
                "IconSmall": {
                  "name": "arrow_drop_down",
                  "fontSize": "2em",
                  "style": {
                    "padding": "0"
                  }
                }
              }],
              "children": [{
                  "div": {
                    "style": {
                      "borderRadius": "10px",
                      "padding": "10px",
                      "background": "#ddd"
                    },
                    "children": [{
                      "SublayoutLoader": {
                        "layoutCode": "card-buttons",
                        "aliases": {
                          "BE": "BE.code",
                          "GROUP": "ROOT"
                        }
                      }
                    }]
                  }
                }

              ]
            }
          }]
        }
      }
    ]
  }
}
