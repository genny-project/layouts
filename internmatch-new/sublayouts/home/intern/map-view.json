{
  "children": [
    {
      "component": "Box",
      "children": {
        "component": "Box",
        "props": {
          "padding": "20px"
        },
        "children": [
          {
            "component": "Map",
            "props": {
              "zoom": 5,
              "height": "100%",
              "width": "1200px"
            },
            "repeat": "_query.items",
            "repeatCopiesPropsOntoRecursive": true,
            "children": {
              "onlyShowIf": {
                "repeater.attributes.PRI_ADDRESS_LATITUDE.valueDouble": { "$exists": true },
                "repeater.attributes.PRI_ADDRESS_LONGITUDE.valueDouble": { "$exists": true }
              },
              "component": "Marker",
              "props": {
                "lat": "_repeater.attributes.PRI_ADDRESS_LATITUDE.valueDouble",
                "lng": "_repeater.attributes.PRI_ADDRESS_LONGITUDE.valueDouble"
              }
            }
          }
        ]
      }
    }
  ],
  "query": [
    {
      "operator": "getLinks",
      "id": "GRP_NEW_ITEMS",
      "as": "items"
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{attributes.LNK_HOST_COMPANY.value}}",
        "as": "company"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "company",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    }
  ]
}



