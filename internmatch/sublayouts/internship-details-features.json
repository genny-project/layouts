{
    "Grid": {
      "rows": [
        {
          "style": {
            "flexGrow": 1,
            "margin": "10px"
          }
        }, 
        {
          "style": {
            "flexGrow": 1,
            "margin": "10px"
          }
        }
      ],
      "cols": 3,
      "children": [
        {
          "div": {
            "style": {
              "display": "flex",
              "alignItems": "center",
              "height": "100%"
            },
            "position": [0, 0],
            "children": [
              {
                "IconSmall": {
                  "name": "location_on",
                  "style": {
                    "marginRight": "10px"
                  }
                }
              },
              {
                "GennyAddressLabel": {
                  "root": "BE.link.INTERNSHIP.code",
                  "attributePrefix": "PRI_ADDRESS",
                  "hideStreetAddress": true
                }
              }
            ]
          }
        },
        {
          "div": {
            "style": {
              "display": "flex",
              "alignItems": "center",
              "height": "100%"
            },
            "position": [0, 1],
            "children": [
              {
                "IconSmall": {
                  "name": "card_travel",
                  "style": {
                    "marginRight": "10px"
                  }
                }
              },
              {
                "div": {
                  "children": "BE.link.INTERNSHIP.LNK_FIELD_WORK"
                }
              }
            ]
          }
        },
        {
          "div": {
            "style": {
              "display": "flex",
              "alignItems": "center",
              "height": "100%"
            },
            "position": [0, 2],
            "children": [
              {
                "IconSmall": {
                  "name": "attach_money",
                  "style": {
                    "marginRight": "10px"
                  }
                }
              },
              {
                "Selector": {
                  "showValues": ["true"],
                  "checkValues": ["BE.link.INTERNSHIP.PRI_PAID"],
                  "children": [
                    {
                      "p": {
                        "children": "Paid"
                      }
                    }
                  ]
                }
              },
              {
                "Selector": {
                  "checkValues": ["BE.link.INTERNSHIP.PRI_UNPAID"],
                  "showValues": ["true"],
                  "children": [
                    {
                      "p": {
                        "children": "Unpaid"
                      }
                    }
                  ]
                }
              },
                {
                "Selector": {
                  "showIfNull": true,
                  "checkValues": ["BE.link.INTERNSHIP.PRI_PAID"],
                  "children": [
                    {
                      "p": {
                        "children": "Paid"
                      }
                    }
                  ]
                }
              },
            ]
          }
        },
        {
          "div": {
            "style": {
              "display": "flex",
              "alignItems": "center",
              "height": "100%"
            },
            "position": [1, 0],
            "children": [
              {
                "IconSmall": {
                  "name": "access_alarm",
                  "style": {
                    "marginRight": "10px"
                  }
                }
              },
              {
                "DateLabel": {
                  "date": "BE.link.INTERNSHIP.PRI_CLOSE_DATE",
                  "format": "DD/MM/YYYY"
                }
              }
            ]
          }
        },
        {
          "div": {
            "style": {
              "display": "flex",
              "alignItems": "center",
              "height": "100%"
            },
            "position": [1, 1],
            "children": [
              {
                "IconSmall": {
                  "name": "date_range",
                  "style": {
                    "marginRight": "10px"
                  }
                }
              },
              {
                "DateLabel": {
                  "date": "BE.link.INTERNSHIP.PRI_START_DATE",
                  "format": "DD/MM/YYYY"
                }
              }
            ]
          }
        },
        {
          "div": {
            "style": {
              "display": "flex",
              "alignItems": "center",
              "height": "100%"
            },
            "position": [1, 2],
            "children": [
              {
                "IconSmall": {
                  "name": "hourglass_empty",
                  "style": {
                    "marginRight": "10px"
                  }
                }
              },
              {
                  "p": {
                    "children": "BE.link.INTERNSHIP.PRI_DURATION"
