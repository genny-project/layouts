{
  "rootCode": "GRP_ROOT",
  "width": {
    "default": 50,
    "sm": 0
  },
  "flex": 1,
  "inline": true,
  "backgroundColor": "#233a4e",
  "openProps": {
    "default": {
      "width": 300
    },
    "sm": {
      "width": "100vw"
    }
  },
  "renderBody": {
    "component": "Box",
    "conditional": [
      {
        "if": {
          "$and": [
            {
              "sidebar.left.isOpen": {
                "$eq": true
              }
            },
            {
              "$or": [
                {
                  "deviceSize": {
                    "$eq": "md"
                  }
                },
                {
                  "deviceSize": {
                    "$eq": "lg"
                  }
                }
              ]
            }
          ]
        },
        "then": {
          "width": 300
        }
      },
      {
        "if": {
          "$and": [
            {
              "sidebar.left.isOpen": {
                "$eq": true
              }
            },
            {
              "deviceSize": {
                "$eq": "sm"
              }
            }
          ]
        },
        "then": {
          "width": "100vw"
        }
      },
      {
        "if": {
          "$and": [
            {
              "sidebar.left.isOpen": {
                "$eq": false
              }
            },
            {
              "deviceSize": {
                "$eq": "sm"
              }
            }
          ]
        },
        "then": {
          "width": 0
        }
      }
    ],
    "props": {
      "position": "fixed",
      "height": "100vh",
      "left": 0,
      "top": 0,
      "width": 50,
      "flexDirection": "column",
      "transition": "300ms ease all",
      "backgroundColor": "#233a4e"
    },
    "children": [
      {
        "component": "Box",
        "conditional": {
          "if": {
            "sidebar.left.isOpen": {
              "$eq": true
            }
          },
          "then": {
            "paddingRight": 10,
            "justifyContent": "center"
          }
        },
        "props": {
          "justifyContent": "center",
          "paddingBottom": 0,
          "paddingTop": 10,
          "height": 115
        },
        "children": [
          {
            "component": "Box",
            "onlyShowIf": {
              "sidebar.left.isOpen": {
                "$eq": true
              }
            },
            "props": {
              "flex": 1,
              "justifyContent": "center"
            },
            "children": [
              {
                "component": "Image",
                "props": {
                  "source": "https://puu.sh/BB7km.png",
                  "height": 80
                }
              }
            ]
          },
          {
            "component": "Box",
            "conditional": {
              "if": {
                "$and": [
                  {
                    "sidebar.left.isOpen": {
                      "$eq": false
                    }
                  },
                  {
                    "deviceSize": {
                      "$eq": "sm"
                    }
                  }
                ]
              },
              "then": {
                "marginLeft": 50
              }
            },
            "props": {
              "paddingTop": 15
            },
            "children": [
              {
                "component": "Touchable",
                "props": {
                  "withFeedback": true,
                  "onPress": "_onToggle",
                  "testID": "sidebar-menu SEL_SIDEBAR_LEFT"
                },
                "children": {
                  "component": "Icon",
                  "props": {
                    "color": "white",
                    "name": "menu"
                  },
                  "conditional": {
                    "if": {
                      "sidebar.left.isOpen": {
                        "$eq": true
                      }
                    },
                    "then": {
                      "name": "menu"
                    }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "component":"ScrollView",
        "props":{
           "style":{
              "flex":1
           }
        },
        "children":[
          {
            "component": "Box",
            "props": {
              "flexDirection": "column"
            },
            "repeat": "_items",
            "children": {
              "component": "Box",
              "props": {

              },
              "children": [
                {
                  "component": "Sublayout",
                  "onlyShowIf": {
                    "repeater.isDropdown": {
                      "$eq": true
                    }
                  },
                  "props": {
                    "layoutName": "sidebar/sidebar.dropdown",
                    "item": "_repeater",
                    "isSidebarOpen": "_sidebar.left.isOpen"
                  }
                },
                {
                  "component": "Sublayout",
                  "dontShowIf": {
                    "repeater.isDropdown": {
                      "$eq": true
                    }
                  },
                  "props": {
                    "layoutName": "sidebar/sidebar.card",
                    "item": "_repeater",
                    "isSidebarOpen": "_sidebar.left.isOpen"
                  }
                }
              ]
            }
          }
        ]
      }
    ]
  },
  "sortBy": "weight",
  "sortDirection": "asc"
}
