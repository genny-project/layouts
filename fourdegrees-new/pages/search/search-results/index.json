{
  "children": [
    {
      "component": "Box",
      "props": {
        "flex": 1,
        "height": "100%",
        "backgroundColor": "lightgrey",
        "flexDirection": "column"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "padding": 20,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {},
              "children": [
                {
                  "component": "Label",
                  "props": {
                    "text": "result page",
                    "color": "gray",
                    "size": "xs"
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "marginBottom": 20
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "text": "Results",
                    "size": "xl"
                  }
                }
              ]
            }
          ]
        },
        {
          "component": "ScrollView",
          "props": {},
          "repeat": "_query",
          "children": {
            "component": "Sublayout",
            "props": {
              "layoutName": "sublayouts/contact-card/",
              "contactImage": "{{repeater.attributes.PRI_IMAGE_URL.valueString}}",
              "contactName": "{{repeater.attributes.PRI_FIRSTNAME.valueString}} {{repeater.attributes.PRI_LASTNAME.valueString}}",
              "contactCompany": "GADA Technology",
              "contactDegree": "-"
            }
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_RESULTS",
      "as": "results"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "populateAttributes",
        "basePath": "baseEntities.attributes",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "map",
      "fields": "results.links"
    },
    {
      "operator": "sort",
      "by": "weight",
      "direction": "asc"
    }
  ]
}
