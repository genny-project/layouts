                        {
                            "Grid": {
                                "position": [3,0],
                                "rows": 1,
                                "cols": 2,
                                "children": [
                                    {
                                        "GennyButton": {
                                            "position": [0,0],
                                            "buttonCode": "BTN_ACCEPT_OFFER",
