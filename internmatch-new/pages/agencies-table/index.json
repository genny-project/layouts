{
  "layout": {
    "title": "Agencies",
    "appColor": "white",
    "backgroundColor": "whitesmoke",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }  },
  "children": [
    {
      "component": "Box",
      "children": [
        {
          "component": "Table",
          "props": {
            "columns": [
              {
                "Header": "Actions",
                "accessor": "actions",
                "renderButton": [
                  {
                    "component": "EventButton",
                    "props": {
                      "height": "30px",
                      "width": "70px",
                      "backgroundColor": "red",
                      "color": "#5173c6",
                      "textColor": "#fff",
                      "text": "Edit",
                      "buttonCode": "BTN_EDIT_AGENCY",
                      "value": {
                        "itemCode": "{{attributeCode}}"
                      }
                    }
                  },
                  {
                    "component": "EventButton",
                    "props": {
                      "height": "30px",
                      "width": "70px",
                      "backgroundColor": "red",
                      "color": "#5173c6",
                      "textColor": "#fff",
                      "text": "View",
                      "buttonCode": "BTN_VIEW_AGENCY",
                      "value": {
                        "itemCode": "{{attributeCode}}"
                      }
                    }
                  }
              ]
              },
              {
                "Header": "Company Name",
                "accessor": "companyName",
                "filterType": "string"
              },
              {
                "Header": "Email",
                "accessor": "email",
                "filterType": "string"
              },
              {
                "Header": "Phone Number",
                "accessor": "phoneNumber",
                "filterType": "string"
              },
              {
                "Header": "Address ",
                "accessor": "fullAddress",
                "filterType": "string"
              }
            ],
            "tableBackgroundColor": "#cccccc",
            "data": "_query.tableData",
            "height": "500px",
            "width": "500px",
            "itemsPerPage": 15
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_AGENCIES",
      "as": "agencies"
    },
    {
      "operator": "scope",
      "path": "agencies.links",
      "as": "agencies",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.attributes",
        "id": "{{link.targetCode}}",
        "as": "be"
      }
    },
    {
      "operator": "scope",
      "path": "agencies",
      "scope": {
        "operator": "scope",
        "path": "be",
        "scope": {
          "operator": "populateBEGAttributes",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "agencies",
      "scope": {
        "operator": "getBE",
        "as" : "company",
        "basePath": "baseEntities.data",
        "id": "{{be.attributes.LNK_EDU_PROVIDER.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "agencies",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "companyName": "be.attributes.PRI_NAME.value",
          "email": "be.attributes.PRI_EMAIL.value",
          "phoneNumber": "be.attributes.PRI_LANDLINE.value",
          "fullAddress": "be.attributes.PRI_ADDRESS_FULL.value",
          "attributeCode": "code"
        }
      }
    }
  ]
}
