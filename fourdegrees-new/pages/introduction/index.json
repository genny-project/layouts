{
  "layout": {
    "title": "IntroduceMe",
    "appColor": "dark",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "ScrollView",
      "props": {
        "style": {
          "flex": 1,
          "backgroundColor": "#f8f8f8"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flex": 1,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "padding": 20,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "text": "Introduce Me",
                    "size": "xl"
                  }
                },
                {
                  "component": "Text",
                  "props": {
                    "text": "Ask someone in your degrees for an introduction"
                  }
                }
              ]
            },
            {
              "component": "ActivityIndicator",
              "props": {
                "size": "large"
              },
              "dontShowIf": {
                "query.results.links": {
                  "$exists": true
                }
              }
            },
            {
              "component": "Box",
              "props": {
                "justifyContent": "center",
                "flexDirection": "column"
              },
              "onlyShowIf": {
                "query.results.links": {
                  "$size": {
                    "$gt": 0
                  }
                }
              },
              "repeat": "_query.results.links",
              "children": {
                "component": "Sublayout",
                "props": {
                  "layoutName": "cards/contact/contact.default",
                  "itemID": "{{repeater.code}}",
                  "depths": "_query.depths"
                }
              }
            },
            {
              "component": "Box",
              "props": {
                "backgroundColor": "white",
                "padding": 20,
                "width": "100%",
                "justifyContent": "center"
              },
              "onlyShowIf": {
                "query.results.links": {
                  "$size": {
                    "$lt": 1
                  }
                }
              },
              "children": [
                {
                  "component": "Text",
                  "props": {
                    "text": "No results to show.",
                    "color": "black",
                    "size": "xs"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_FIRST_DEGREE_CONNECTIONS",
      "as": "results"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "getLinkDepths",
      "code": "{{user.data.code}}",
      "as": "depths"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "populateAttributes",
        "basePath": "baseEntities.attributes",
        "id": "{{link.targetCode}}"
      }
    }
  ]
}
