{
  "Grid": {
    "rows": 1,
    "cols": [2, 1],
    "style": {
      "height": "initial",
      "backgroundColor": "white",
      "lineHeight": "1.8em"
    },
    "children": [
      {
        "Grid": {
          "position": [0, 0],
          "style": {
            "color": "rgb(72,84,98)",
            "height": "initial",
            "paddingBottom": "50px"
          },
          "rows": [0.1, 1],
          "cols": [
            {
              "style": {
                "flexGrow": 1,
                "marginLeft": "10%"
              }
            }
          ],
          "children": [
            {
              "SublayoutLoader": {
                "position": [0, 0],
                "layoutCode": "internship-details-title",
                "aliases": {
                  "BE": "BE.code",
                  "GROUP": "ROOT"
                }
              }
            },
            {
              "SublayoutLoader": {
                "position": [1, 0],
                "layoutCode": "internship-details-features",
                "style": {
                  "backgroundColor": "#DDD"
                },
                "aliases": {
                  "BE": "BE.code",
                  "GROUP": "ROOT"
                }
              }
            },
            {
              "Selector": {
                "position": [1, 0],
                "showIfNotNull": true,
                "checkValues": ["BE.PRI_COMPANY_CODE"],
                "children": [
                  {
                    "SublayoutLoader": {
                      "layoutCode": "internship-details-host-company",
                      "style": {},
                      "aliases": {
                        "BE": "BE.PRI_COMPANY_CODE",
                        "GROUP": "ROOT"
                      }
                    }
                  }
                ]
              }
            },
            {
              "Selector": {
                "position": [1, 0],
                "checkValues": ["USER.PRI_IS_SELLER"],
                "hideValues": [true],
                "children": [
                  {
                    "Selector": {
                      "showIfNotNull": true,
                      "checkValues": ["BE.LNK_HOST_COMPANY_REP.code"],
                      "children": [
                        {
                          "h4": {
                            "style": {
                              "padding": "5px 0 10px"
                            },
                            "children": "Company Representative"
                          }
                        },
                        {
                          "SublayoutLoader": {
                            "layoutCode": "internship-details-representative",
                            "style": {
                              "backgroundColor": "#DDD"
                            },
                            "aliases": {
                              "BE": "BE.code",
                              "GROUP": "ROOT"
                            }
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "Selector": {
                "position": [1, 0],
                "checkValues": ["USER.PRI_IS_SELLER"],
                "hideValues": [true],
                "children": [
                  {
                    "Selector": {
                      "showIfNotNull": true,
                      "checkValues": ["BE.LNK_INTERN_SUPERVISOR.code"],
                      "children": [
                        {
                          "h4": {
                            "style": {
                              "padding": "5px 0 10px"
                            },
                            "children": "Intern Supervisor"
                          }
                        },
                        {
                          "SublayoutLoader": {
                            "layoutCode": "internship-details-supervisor",
                            "style": {
                              "backgroundColor": "#DDD"
                            },
                            "aliases": {
                              "BE": "BE.code",
                              "GROUP": "ROOT"
                            }
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "SublayoutLoader": {
                "position": [1, 0],
                "layoutCode": "internship-details-required-skills",
                "aliases": {
                  "BE": "BE.code",
                  "GROUP": "ROOT"
                }
              }
            },
            {
              "Selector": {
                "position": [1, 0],
                "checkValues": ["USER.PRI_IS_BUYER"],
                "hideValues": [true],
                "children": [
                  {
                    "Selector": {
                      "position": [1, 0],
                      "checkValues": ["BE.link.REPRESENTATIVE.PRI_NAME"],
                      "showIfNotNull": true,
                      "children": [
                        {
                          "SublayoutLoader": {
                            "position": [1, 0],
                            "layoutCode": "internship-details-representative",
                            "aliases": {
                              "BE": "BE.code",
                              "GROUP": "ROOT"
                            }
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "Selector": {
                "position": [1, 0],
                "checkValues": ["USER.PRI_IS_AGENT"],
                "showValues": [true],
                "children": [
                  {
                    "Selector": {
                      "showIfNotNull": true,
                      "checkValues": ["BE.LNK_INTERNSHIP_REFERRAL_COMPANY.code"],
                      "children": [
                        {
                          "h4": {
                            "style": {
                              "padding": "5px 0 10px"
                            },
                            "children": "Referral Info"
                          }
                        },
                        {
                          "SublayoutLoader": {
                            "layoutCode": "referee",
                            "style": {
                              "backgroundColor": "#DDD"
                            },
                            "aliases": {
                              "BE": "BE.code",
                              "GROUP": "ROOT"
                            }
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "Grid": {
          "position": [0, 1],
          "cols": 1,
          "rows": 2,
          "style": {
            "height": "50%"
          },
          "children": [
            {
              "SublayoutLoader": {
                "style": {
                  "float": "right",
                  "marginRight": "50px"
                },
                "position": [1, 0],
                "layoutCode": "internship-details-button-actions",
                "aliases": {
                  "BE": "BE.code",
                  "GROUP": "ROOT"
                }
              }
            }
          ]
        }
      }
    ]
  }
}
