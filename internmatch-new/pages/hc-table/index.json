{
  "layout": {
    "title": "Host Companies",
    "appColor": "white",
    "backgroundColor": "whitesmoke",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Box",
      "children": [
        {
          "component": "Table",
          "props": {
            "columns": [
              {
                "Header": "Actions",
                "accessor": "actions",
                "renderButton": [
                  {
                    "text": "View",
                    "component": "EventButton",
                    "props": {
                      "height": "30px",
                      "width": "120px",
                      "backgroundColor": "red",
                      "color": "green",
                      "text": "View",
                      "buttonCode": "BTN_EDIT_HOST_COMPANY",
                      "value": {
                        "itemCode": "{{attributeCode}}"
                      }
                    }
                  }
              ]
              },
              {
                "Header": "Company Name",
                "accessor": "firstName",
                "filterType": "string"
              },
              {
                "Header": "Email",
                "accessor": "email",
                "filterType": "string"
              },
              {
                "Header": "Phone Number",
                "accessor": "mobilePhone",
                "filterType": "string"
              },
              {
                "Header": "Address ",
                "accessor": "mobilePhone",
                "filterType": "string"
              }
            ],
            "tableBackgroundColor": "#cccccc",
            "data": "_query.tableData",
            "height": "500px",
            "width": "500px",
            "itemsPerPage": 15
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_HOST_COMPANIES",
      "as": "hostCompanies"
    },
    {
      "operator": "scope",
      "path": "hostCompanies.links",
      "as": "hostCompanies",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}",
        "as": "be"
      }
    },
    {
      "operator": "scope",
      "path": "hostCompanies",
      "scope": {
        "operator": "scope",
        "path": "be",
        "scope": {
          "operator": "populateBEGAttributes",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "hostCompanies",
      "scope": {
        "operator": "getBE",
        "as" : "company",
        "basePath": "baseEntities.data",
        "id": "{{be.attributes.LNK_EDU_PROVIDER.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "hostCompanies",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "firstName": "be.attributes.PRI_NAME.value",
          "email": "be.attributes.PRI_EMAIL.value",
          "mobilePhone": "be.attributes.PRI_LANDLINE.value",
          "uname": "be.attributes.PRI_USERNAME.value",
          "attributeCode": "code"
        }
      }
    }
  ]
}