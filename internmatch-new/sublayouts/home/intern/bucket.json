{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": 1,
        "padding": 20
      },
      "children": [
        {
          "component": "BucketView",
          "props": {
            "tabBarSize": "md",
            "backgroundColor": "#f6f6f6",
            "tabBarBackground": "#3f3f3f",
            "activeTabBackground": "#232323",
            "iconColor": "white",
            "iconSize": "md",
            "labelColor": "white",
            "labelProps": {
              "transform": "upperCase"
            },
            "overflowX": "auto",
            "width": "100%",
            "gutter": 20,
            "contentProps": {
              "minWidth": 240
            }
          },
          "repeat": "_query",
          "children": {
            "component": "List",
            "repeat": "_repeater.items",
            "props": {
              "headerText": "{{repeater.name}}",
              "contentBackground": "#eaeaea",
              "headerProps": {
                "paddingX": 20,
                "paddingY": 15,
                "justifyContent": "space-between",
                "alignItems": "center"
              },
              "headerTextProps": {
                "bold": true
              },
              "showCountInHeader": true,
              "contentBodyProps": {
                "paddingX": 10,
                "paddingY": 20
              },
              "emptyProps": {
                "padding": 10
              },
              "headerCountTextProps": {
                "bold": true,
                "size": "xs"
              },
              "emptyTextProps": {
                "size": "xs"
              },
              "scrollViewProps": {
                "horizontal": true
              }
            },
            "children": {
              "component": "EventButton",
              "props": {
                "padding": 0,
                "paddingX": 0,
                "paddingY": 0,
                "width": "100%",
                "eventType": "BTN_CLICK",
                "buttonCode": "BTN_SELECT",
                "value": {
                  "itemCode": "{{repeater.code}}",
                  "userCode": "{{user.data.code}}"
                },
                "dispatchActionOnClick": {
                  "type": "ALIAS_TOGGLE",
                  "payload": {
                    "alias": "CURRENT_NOTE",
                    "value": "{{repeater.code}}"
                  }
                }
              },
              "children": [
                {
                  "component": "Box",
                  "dontShowIf": {
                    "repeater.company.attributes.PRI_IMAGE_URL.value": {
                      "$exists": true
                    },
                    "repeater.company.attributes.PRI_NAME.value": {
                      "$exists": true
                    },
                    "repeater.internship.attributes.PRI_NAME.value": {
                      "$exists": true
                    }
                  },
                  "props": {
                    "padding": "5px",
                    "width": "100%",
                    "justifyContent": "center",
                    "borderWidth":"1px",
                    "borderColor":"white",
                    "backgroundColor":"#f9f9f9",
                    "marginY": 5
                  
                  },
                  "children": [
                    {
                      "component": "ActivityIndicator",
                      "props": {
                        "size": "small"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "onlyShowIf": {
                    "repeater.company.attributes.PRI_IMAGE_URL.value": {
                      "$exists": true
                    },
                    "repeater.company.attributes.PRI_NAME.value": {
                      "$exists": true
                    },
                    "repeater.internship.attributes.PRI_NAME.value": {
                      "$exists": true
                    }
                  },
                  "props": {
                    "marginY": 5,
                    "borderWidth":"1px",
                    "borderColor":"white",
                    "backgroundColor":"#f9f9f9",
                    "padding": "5px",
                    "width": "100%"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginRight": 10,
                        "flexShrink": 0
                      },
                      "children": [
                        {
                          "component": "Image",
                          "props": {
                            "source": "{{repeater.company.attributes.PRI_IMAGE_URL.value}}",
                            "height": 50,
                            "width": 50
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "flexDirection": "column",
                        "flex": 1
                      },
                      "children": [
                        {
                          "component": "Box",
                          "props": {
                            "marginBottom": 5
                          },
                          "children": [
                            {
                              "component": "Text",
                              "props": {
                                "size": "xs",
                                "bold": true
                              },
                              "children": "{{repeater.company.attributes.PRI_NAME.value}}"
                            }
                          ]
                        },
                        {
                          "component": "Text",
                          "props": {
                            "size": "xxs"
                          },
                          "children": "{{repeater.internship.attributes.PRI_NAME.value}}"
                        }
                      ]
                    },
                    {
                      "component": "Dropdown",
                      "onlyShowIf": {
                        "repeater.attributes.PRI_IS_DEACTIVATED.value": {
                          "$eq": true
                        }
                      },
                      "props": {
                        "facingRight": true,
                        "menuButtonStyle": {
                          "backgroundColor": "transparent",
                          "border": 0,
                          "padding": 5,
                          "fontSize": 16,
                          "cursor": "pointer",
                          "color": "white"
                        },
                        "menuListStyle": {
                          "background": "#233a4e",
                          "borderWidth": 2,
                          "borderColor": "#192835",
                          "borderStyle": "solid"
                        },
                        "menuItemStyle": {
                          "textAlign": "right",
                          "padding": 15,
                          "color": "white"
                        }
                      },
                      "conditional": {
                        "if": {
                          "repeater.attributes.PRI_IS_DEACTIVATED.value": {
                            "$eq": true
                          }
                        },
                        "then": {
                          "items": [
                            {
                              "text": "Sign Document",
                              "buttonCode": "BTN_SHOW_COMPLIANCE_DOCUMENT",
                              "value": {
                                "itemCode": "{{repeater.attributes.PRI_APPLICANT_CODE.baseEntityCode}}",
                                "userCode": "{{user.data.code}}"                            }
                            }
                          ]
                        }
                      },
                      "children": [
                        {
                          "component": "Box",
                          "children": [
                            {
                              "component": "Icon",
                              "props": {
                                "name": "expand_more",
                                "color": "#233a4e",
                                "size": "smd"
                              }
                            }
                          ]
                        }
                      ]
                    }

                    
                  ]
                }
                
              ]
            }
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_APPLICATIONS",
      "as": "applications"
    },
    {
      "operator": "scope",
      "path": "applications.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "as": "be",
        "id": "{{link.targetCode}}",
        "filterOutEmpty": true
      }
    },
    {
      "operator": "map",
      "fields": "applications.links"
    },
    {
      "operator": "sort",
      "by": "weight",
      "direction": "asc"
    },
    {
      "operator": "map",
      "fields": "be"
    },
    {
      "operator": "scope",
      "path": "links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "as": "be",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "map",
      "fields": {
        "name": "name",
        "code": "code",
        "items": "links"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "map",
        "fields": "be"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{attributes.PRI_BEG_CODE.value}}",
        "as": "internship"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "internship",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{internship.attributes.LNK_HOST_COMPANY.value}}",
        "as": "company"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "company",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    }
  ]
}
