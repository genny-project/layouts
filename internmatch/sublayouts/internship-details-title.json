{
    "Grid": {
        "cols": [
            "150",
            2
        ],
        "rows": [
            {
                "style": {
                    "flexGrow": 1,
                    "flexWrap": "nowrap"
                }
            }
        ],
        "style": {
            "padding": "50px",
            "paddingLeft": "0px",
            "paddingBottom": "0px"
        },
        "children": [
            {
                "ImageView": {
                    "position": [
                        0,
                        0
                    ],
                    "src": "BE.link.COMPANY.PRI_IMAGE_URL",
                    "style": {
                        "maxWidth": "150px",
                        "minWidth": "50px"
                    }
                }
            },
            {
                "Grid": {
                    "position": [
                        0,
                        1
                    ],
                    "cols": 1,
                    "rows": 3,
                    "children": [
                        {
                            "h2": {
                                "position": [
                                    0,
                                    0
                                ],
                                "children": "BE.PRI_NAME",
                                "style": {
                                    "margin": "0px",
                                    "fontFamily": "Akkurat",
                                    "fontWeight": "400",
                                    "fontSize": "29px",
                                    "color": "rgb(72,84,98)"
                                }
                            }
                        },
                        {
                            "h4": {
                                "position": [
                                    1,
                                    0
                                ],
                                "children": "${BE.link.COMPANY.PRI_CPY_NAME}",
                                "style": {
                                    "margin": "0px",
                                    "color": "PROJECT.PRI_COLOR"
                                }
                            }
                        },
                        {
                            "span": {
                                "position": [
                                    2,
                                    0
                                ],
                                "style": {
                                    "display": "flex",
                                    "alignItems": "center"
                                },
                                "children": [
                                    {
                                        "span": {
                                            "style": {
                                                "marginRight": "5px"
                                            },
                                            "children": "Posted on:"
                                        }
                                    },
                                    {
                                        "DateLabel": {
                                            "children": "${BE.created}",
                                            "format": "DD MMM YYYY"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}
