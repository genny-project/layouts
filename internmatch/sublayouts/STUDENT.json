{
  "Grid": {
    "rows": 1,
    "cols": [
      "40px",
      1,
      {
        "style": {
          "flex": "0 0 10px",
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "flex-end"
        }
      }
    ],
    "style": {
      "background": "white",
      "fontSize": "10px"
    },
    "children": [
      {
        "div": {
          "position": [0, 0],
          "style": {
            "paddingRight": "10px",
            "paddingBottom": "5px"
          },
          "children": [
            {
              "ImageView": {
                "style": {
                  "margin": "0px",
                  "maxWidth": "40px",
                  "width": "40px"
                },
                "src": "BE.PRI_IMAGE_URL"
              }
            }
          ]
        }
      },
      {
        "div": {
          "position": [0, 1],
          "style": {
            "display": "inline",
            "alignItems": "center"
          },
          "children": [
            {
              "span": {
                "style": {
                  "marginRight": "5px"
                },
                "children": "BE.PRI_FIRSTNAME"
              }
            },
            {
              "span": {
                "children": "BE.PRI_LASTNAME"
              }
            }
          ]
        }
      },
      {
        "Selector": {
          "position": [0, 1],
          "checkValues": "BE.PRI_STUDENT_ID",
          "showIfNotNull": true,
          "children": [
            {
              "p": {
                "position": [0, 0],
                "style": {
                  "margin": "0px"
                },
                "children": "ID: ${BE.PRI_STUDENT_ID}"
              }
            }
          ]
        }
      },
      {
        "p": {
          "position": [0, 1],
          "style": {
            "margin": "0px"
          },
          "children": "BE.PRI_MOBILE"
        }
      },
      {
        "GennyDropdown": {
          "position": [0, 2],
          "inline": false,
          "isSlide": false,
          "animateHeader": false,
          "animateFooter": true,
          "stopPropagationOnClick": true,
          "style": {
            "paddingBottom": "2px",
            "margin": "-5px -5px 0"
          },
          "contentStyle": {
            "backgroundColor": "#fff",
            "boxShadow": "0px 2px 10px 5px rgba(0, 0, 0, 0.25)",
            "display": "flex",
            "flexDirection": "column",
            "width": "120px",
            "left": "100%",
            "padding": "5px 5px 0",
            "transform": "translate(-100%)",
            "top": "20px"
          },
          "tagStyle": {
            "display": "none"
          },
          "header": [
            {
              "IconSmall": {
                "name": "more_horiz",
                "style": {
                  "padding": "0"
                }
              }
            }
          ],
          "children": [
            {
              "GennyButton": {
                "style": {
                  "height": "30px",
                  "marginBottom": "5px"
                },
                "buttonStyle": {
                  "background": "PROJECT.PRI_COLOR"
                },
                "children": "View My Application",
                "buttonCode": "BTN_VIEW_APPLICATION",
                "value": {
                  "itemCode": "BE.code",
                  "hint": "ROOT"
                }
              }
            }
          ]
        }
      }
    ]
  }
}
