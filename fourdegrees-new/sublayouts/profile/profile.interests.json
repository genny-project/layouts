{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "width": "100%"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 10,
            "paddingBottom": 0
          },
          "onlyShowIf": {
            "query.profile.attributes.PRI_INTERESTS.value": {
              "$size": {
                "$gt": 0
              }
            }
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "flexWrap": "wrap",
                "flex": 1
              },
              "children": [
                {
                  "component": "Fragment",
                  "repeat": "_query.profile.attributes.PRI_INTERESTS.value",
                  "children": {
                    "component": "Box",
                    "props": {
                      "backgroundColor": "lightgrey",
                      "shape": "pill",
                      "padding": 10,
                      "marginRight": 10,
                      "marginBottom": 10
                    },
                    "children": [
                      {
                        "component": "Text",
                        "props": {
                          "text": "{{repeater}}",
                          "color": "black",
                          "size": "xs"
                        }
                      }
                    ]
                  }
                },
                {
                  "component": "Box",
                  "props": {
                    "flex": 1,
                    "justifyContent": "flex-end",
                    "alignItems": "center",
                    "marginRight": 10,
                    "marginBottom": 10
                  },
                  "children": [
                    {
                      "component": "EventButton",
                      "props": {
                        "eventType": "ROUTE_CHANGE",
                        "buttonCode": "profile/add-interest",
                        "color": "transparent",
                        "paddingY": 0,
                        "paddingX": 0
                      },
                      "onlyShowIf": {
                        "user.data.code": "{{props.userID}}"
                      },
                      "children": [
                        {
                          "component": "Box",
                          "props": {
                            "padding": 8,
                            "borderWidth": 1,
                            "borderStyle": "solid",
                            "borderColor": "{{layout.appColor}}",
                            "alignItems": "center"
                          },
                          "children": [
                            {
                              "component": "Text",
                              "props": {
                                "text": "Edit Interests",
                                "color": "{{layout.appColor}}",
                                "size": "xs"
                              }
                            },
                            {
                              "component": "Icon",
                              "props": {
                                "name": "edit",
                                "color": "{{layout.appColor}}",
                                "size": "sm"
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "width": "100%",
            "justifyContent": "center"
          },
          "dontShowIf": {
            "query.profile.attributes.PRI_INTERESTS.value": {
              "$size": {
                "$gt": 0
              }
            }
          },
          "children": [
            {
              "component": "Text",
              "props": {
                "text": "No skills to show.",
                "color": "black",
                "size": "xs"
              }
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{props.userID}}",
      "as": "profile"
    },
    {
      "operator": "scope",
      "path": "profile",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    }
  ]
}