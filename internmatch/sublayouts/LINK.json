{
    "Grid": {
        "rows": 1,
        "cols": [1,1,"100px"],
        "style": {
            "padding": "30px",
            "background": "white"
        },
        "children": [
            {
                "ImageView": {
                    "position": [0, 0],
                    "src": "BE.link.COMPANY.PRI_IMAGE_URL",
                    "style": {
                        "width": "50px"
                    }
                }
            },
            {
                "Grid": {
                    "position": [0, 1],
                    "cols": 1,
                    "rows": 2,
                    "children": [
                        {
                            "h3": {
                                "position": [0, 0],
                                "children": "BE.link.INTERNSHIP.PRI_TITLE"
                            }
                        },
                        {
                            "p": {
                                "position": [1, 0],
                                "children": "BE.link.INTERNSHIP.PRI_DESCRIPTION"
                            }
                        }
                    ]
                }   
            },
            {
                "Selector": {
                    "position": [0, 2],
                    "checkValues": ["USER.PRI_IS_BUYER"],
                    "showValues": ["true"],
                    "children": [
                        {
                            "GennyButton": {
                                "style": {
                                  "width": "100px",
                                  "height": "30px"
                                },
                                "buttonStyle": {
                                  "background": "PROJECT.PRI_COLOR",
                                  "color": "white"
                                },
                                "buttonCode": "BTN_APPLY_BEG",
                                "value": {
                                  "itemCode": "BE.code",
                                  "root": "ROOT"
                                },
                                "children": "Apply"
                            }
                        }    
                    ]
                }
            },
            {
                "GennyButton": {
                    "position": [0, 2],
                    "style": {
                      "width": "100px",
                      "height": "30px",
                      "marginTop":"10px"
                    },
                    "buttonStyle": {
                      "background": "PROJECT.PRI_COLOR",
                      "color": "white"
                    },
                    "buttonCode": "BTN_VIEW_BEG",
                    "value": {
                      "itemCode": "BE.code",
                      "root": "ROOT"
                    },
                    "children": "View"
                }
            }
        ]
    }
}
