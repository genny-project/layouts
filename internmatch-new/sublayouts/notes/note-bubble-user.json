{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "position": "relative",
        "marginBottom": 15
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "marginBottom": 5
          },
          "children": [
            {
              "component": "Date",
              "props": {
                "date": "{{props.created}}",
                "format": "calendar",
                "size": "xxs",
                "color": "#959595"
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "marginBottom": 10
          },
          "children": [
            {
              "component": "Text",
              "props": {
                "text": "{{props.creatorName}}",
                "size": "xs",
                "color": "#959595"
              }
            }
          ]
        },
        {
          "component": "Box",
          "onlyShowIf": {
            "props.creatorCode": {
              "$eq": "{{user.data.code}}"
            }
          },
          "props": {
            "position": "absolute",
            "right": 5,
            "top": 0,
            "zIndex": 5
          },
          "children": [
            {
              "component": "Dropdown",
              "props": {
                "facingRight": true,
                "menuButtonStyle": {
                  "backgroundColor": "transparent",
                  "border": 0,
                  "padding": 5,
                  "fontSize": 16,
                  "cursor": "pointer",
                  "color": "black"
                },
                "menuListStyle": {
                  "background": "#fff",
                  "borderWidth": 2,
                  "borderColor": "#ddd",
                  "borderStyle": "solid"
                },
                "menuItemStyle": {
                  "textAlign": "right",
                  "padding": 15,
                  "color": "black"
                },
                "items": [
                  {
                    "text": "Edit",
                    "buttonCode": "BTN_EDIT_NOTE",
                    "value": {
                      "itemCode": "{{props.code}}",
                      "hint": "{{props.creatorCode}}"
                    }
                  },
                  {
                    "text": "Delete",
                    "buttonCode": "BTN_DELETE_NOTE",
                    "value": {
                      "itemCode": "{{props.code}}",
                      "hint": "{{props.creatorCode}}"
                    }
                  }
                ]
              },
              "children": [
                {
                  "component": "Box",
                  "children": [
                    {
                      "component": "Icon",
                      "props": {
                        "name": "more_horiz",
                        "color": "#959595",
                        "size": "md"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "flexDirection": "column",
            "paddingX": 10,
            "paddingY": 15,
            "backgroundColor": "#fff",
            "marginBottom": 15,
            "borderRadius": 10
          },
          "children": [
            {
              "component": "Text",
              "props": {
                "text": "{{props.text}}"
              }
            }
          ]
        }
      ]
    }
  ]
}
