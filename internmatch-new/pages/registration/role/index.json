{
  "layout": {
    "title": "Registration",
    "appColor": "white",
    "backgroundColor": "#e3e3e3",
    "header": {
      "variant": "public-transparent"
    }
  },
  "children": [
    {
      "component": "Container",
      "props": {
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": 1
      },
      "children": [
        {
          "component": "Image",
          "props": {
            "source": "https://i.imgur.com/0fodSXE.png",
            "width": "50%"
          }
        },
        {
          "component": "Heading",
          "props": {
            "size": "lg",
            "align": "center",
            "color": "black"
          },
          "children": "Select your role"
        },
        {
          "component": "Box",
          "props": {
            "height": 40
          }
        },
        {
          "component": "EventButton",
          "onlyShowIf": {
            "$or": [
              {
                "query.userBe.attributes.PRI_IS_SELLER.value": {
                  "$eq": true
                }
              },
              {
                "$and": [
                  {
                    "query.userBe.attributes.PRI_IS_AGENT.value": {
                      "$exists": false
                    }
                  },
                  {
                    "query.userBe.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
                      "$exists": false
                    }
                  },
                  {
                    "query.userBe.attributes.PRI_IS_SELLER.value": {
                      "$exists": false
                    }
                  },
                  {
                    "query.userBe.attributes.PRI_IS_BUYER.value": {
                      "$exists": false
                    }
                  }
                ]
              }
            ]
          },
          "props": {
            "buttonCode": "BTN_SELECT_ROLE_SELLER",
            "color": "teal",
            "text": "I am an intern",
            "textColor": "#fff",
            "borderWidth": 1,
            "size": "xl",
            "height": "50px",
            "width": "300px",
            "padding": "20px",
            "showSpinnerOnClick": true,
            "hoverProps": {
              "color": "darkcyan",
              "textColor": "white"
            },
            "testID": "BTN_SELECT_ROLE_SELLER"
          }
        },
        {
          "component": "Box",
          "props": {
            "height": 10
          }
        },
        {
          "component": "EventButton",
          "onlyShowIf": {
            "$or": [
              {
                "query.userBe.attributes.PRI_IS_BUYER.value": {
                  "$eq": true
                }
              },
              {
                "$and": [
                  {
                    "query.userBe.attributes.PRI_IS_AGENT.value": {
                      "$exists": false
                    }
                  },
                  {
                    "query.userBe.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
                      "$exists": false
                    }
                  },
                  {
                    "query.userBe.attributes.PRI_IS_SELLER.value": {
                      "$exists": false
                    }
                  },
                  {
                    "query.userBe.attributes.PRI_IS_BUYER.value": {
                      "$exists": false
                    }
                  }
                ]
              }
            ]
          },
          "props": {
            "buttonCode": "BTN_SELECT_ROLE_BUYER",
            "text": "I am a Host Company",
            "color": "teal",
            "textColor": "#fff",
            "borderWidth": 1,
            "size": "xl",
            "height": "50px",
            "width": "300px",
            "padding": "20px",
            "showSpinnerOnClick": true,
            "hoverProps": {
              "color": "darkcyan",
              "textColor": "white"
            },
            "testID": "BTN_SELECT_ROLE_BUYER"
          }
        },
        {
          "component": "Box",
          "props": {
            "height": 10
          }
        },
        {
          "component": "EventButton",
          "onlyShowIf": {
            "$or": [
              {
                "query.userBe.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
                  "$eq": true
                }
              },
              {
                "$and": [
                  {
                    "query.userBe.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
                      "$exists": false
                    }
                  },
                  {
                    "query.userBe.attributes.PRI_IS_SELLER.value": {
                      "$exists": false
                    }
                  },
                  {
                    "query.userBe.attributes.PRI_IS_BUYER.value": {
                      "$exists": false
                    }
                  }
                ]
              }
            ]
          },
          "props": {
            "buttonCode": "BTN_SELECT_ROLE_EDU_PROVIDER_STAFF",
            "text": "I am an Education Provider",
            "color": "teal",
            "textColor": "#fff",
            "size": "xl",
            "height": "50px",
            "width": "300px",
            "padding": "20px",
            "borderWidth": 1,
            "showSpinnerOnClick": true,
            "hoverProps": {
              "color": "darkcyan",
              "textColor": "white"
            },
            "testID": "BTN_SELECT_ROLE_EDU_PROVIDER_STAFF"
          }
        },
        {
          "component": "Box",
          "props": {
            "height": 10
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{user.data.code}}",
      "as": "userBe"
    },
    {
      "operator": "scope",
      "path": "userBe",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "clean",
      "fields": ["userBe"]
    }
  ]
}
