{
  "children": [
    {
      "component": "Box",
      "props": {
        "width": "100%",
        "flex": 1,
        "position": "relative"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "width": "100%",
            "maxWidth": 250,
            "minWidth": 200,
            "backgroundColor": "#f6f6f6",
            "flexDirection": "column",
            "padding": 20,
            "paddingTop": 0,
            "overflowY": "auto",
            "maxHeight": "calc(100vh - 65px)",
            "flex": 1,
            "borderRightWidth": 2,
            "borderColor": "#eaeaea",
            "borderStyle": "solid"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "height": 50,
                "alignItems": "flex-end",
                "justifyContent": "center",
                "marginBottom": 20,
                "paddingBottom": 10
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "size": "sm",
                    "align": "center"
                  },
                  "children": "Active Internships"
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Selection",
                  "props": {
                    "mode": "toggle",
                    "selectFirstItemOnMount": true
                  },
                  "repeat": "_query.items",
                  "children": {
                    "component": "EventTouchable",
                    "conditional": {
                      "if": {
                        "selection.isSelected": {
                          "$eq": true
                        }
                      },
                      "then": {
                        "borderLeftWidth": 5,
                        "borderColor": "#1597c5",
                        "borderStyle": "solid",
                        "buttonCode": "DESELECT_EVENT"
                      },
                      "else": {
                        "buttonCode": "SELECT_EVENT"
                      }
                    },
                    "props": {
                      "key": "{{repeater.code}}",
                      "withFeedback": true,
                      "showSpinnerOnClick": false,
                      "value": {
                        "hint": "GRP_NEW_ITEMS",
                        "itemCode": "{{repeater.code}}"
                      },
                      "flexDirection": "column",
                      "onPress": "_selection.onSelect",
                      "dispatchActionOnClick": {
                        "type": "ALIAS_TOGGLE",
                        "payload": {
                          "alias": "CURRENT_NOTE",
                          "value": "{{repeater.code}}"
                        }
                      }
                    },
                    "children": [
                      {
                        "component": "Box",
                        "props": {
                          "backgroundColor": "#FFFFFF",
                          "padding": 15,
                          "flexDirection": "column",
                          "borderBottomWidth": 2,
                          "borderColor": "#f6f6f6",
                          "borderStyle": "solid"
                        },
                        "children": [
                          {
                            "component": "Box",
                            "props": {
                              "marginBottom": 5
                            },
                            "children": [
                              {
                                "component": "Text",
                                "props": {
                                  "size": "xs",
                                  "bold": true,
                                  "text": "{{repeater.attributes.PRI_NAME.value}}"
                                }
                              }
                            ]
                          },
                          {
                            "component": "Text",
                            "props": {
                              "size": "xxs",
                              "text": "{{repeater.company.attributes.PRI_NAME.value}}"
                            }
                          }
                        ]
                      }
                    ]
                  }
                }
              ]
            }
          ]
        },
        {
          "component": "Tabs",
          "props": {
            "flex": 1,
            "tabBarBackground": "#233a4e",
            "tabWrapperProps": {
              "paddingLeft": 20,
              "height": 50,
              "flexBasis": "auto"
            },
            "textColor": "#FFF",
            "tabBackground": "#41505d",
            "activeTabBackground": "#f6f6f6",
            "activeTabTextColor": "#000",
            "tabProps": {
              "paddingX": 20,
              "paddingY": 15,
              "minWidth": 180,
              "justifyContent": "center"
            },
            "tabTitleProps": {
              "size": "xs"
            },
            "activeTabTitleProps": {
              "bold": true
            },
            "inactiveTabProps": {
              "borderColor": "#233a4e",
              "borderRightWidth": 1,
              "borderStyle": "solid"
            },
            "tabs": [
              { "title": "Process Cards", "key": 0 },
              { "title": "Internship Details", "key": 1 }
            ],
            "childProps": {
              "overflow": "auto",
              "maxHeight": "calc(100vh - 65px - 50px)"
            },
            "overflowX": "auto",
            "backgroundColor": "#f6f6f6"
          },
          "children": [
            {
              "component": "Sublayout",
              "props": {
                "layoutName": "home/hostcompany/bucket"
              }
            },
            {
              "component": "Sublayout",
              "props": {
                "layoutName": "home/hostcompany/internship-details"
              }
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getLinks",
      "id": "GRP_NEW_ITEMS",
      "as": "items"
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{attributes.LNK_HOST_COMPANY.value}}",
        "as": "company"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "company",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "sort",
        "by": "created",
        "direction": "asc"
      }
    }
  ]
}
