{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "row",
        "flex": 1,
        "padding": 20
      },
      "children": [
        {
          "component": "Box",
          "props": {
           
            "maxWidth": 350,
            "minWidth": 200,
            "backgroundColor": "#e05b5b",
            "flexDirection": "column",
            "padding": 10,
            "paddingTop": 0,
            "overflowY": "auto",
            "maxHeight": "calc(100vh - 65px)",
            "flex": 1,
            "borderRightWidth": 2,
            "borderColor": "#eaeaea",
            "borderStyle": "solid",
            "position": "absolute"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "height": 50,
                "alignItems": "flex-end",
                "justifyContent": "center",
                "marginBottom": 20,
                "paddingBottom": 10,
                "position": "relative"
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "size": "sm",
                    "align": "center",
                    "color": "white"
                  },
                  "children": "Identified Properties"
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Selection",
                  "props": {
                    "mode": "toggle",
                    "selectFirstItemOnMount": true
                  },
                  "repeat": "_query.items",
                  "children": {
                    "component": "EventTouchable",
                    "conditional": {
                      "if": {
                        "selection.isSelected": {
                          "$eq": true
                        }
                      },
                      "then": {
                        "borderLeftWidth": 5,
                        "borderColor": "#1597c5",
                        "borderStyle": "solid"
                      }
                    },
                    "props": {
                      "key": "{{repeater.code}}",
                      "withFeedback": true,
                      "showSpinnerOnClick": false,
                      "buttonCode": "SELECT_EVENT",
                      "value": {
                        "hint": "GRP_NEW_ITEMS",
                        "itemCode": "{{repeater.code}}"
                      },
                      "flexDirection": "column",
                      "onPress": "_selection.onSelect",
                      "dispatchActionOnClick": {
                        "type": "ALIAS_TOGGLE",
                        "payload": {
                          "alias": "CURRENT_NOTE",
                          "value": "{{repeater.code}}"
                        }
                      }
                    },
                    "children": [
                      {
                        "component": "Box",
                        "props": {
                          "backgroundColor": "#FFFFFF",
                          "padding": 15,
                          "flexDirection": "column",
                          "borderWidth": 2,
                          "borderColor": "#dcb4b4",
                          "borderStyle": "solid"
                        },
                        "children": [
                          {
                            "component": "Box",
                            "props": {
                              "marginBottom": 5
                            },
                            "children": [
                              {
                                "component": "Image",
                                "props": {
                                  "backgroundColor": "#e05b5b"
                                }
                              },
                              {
                                "component": "Text",
                                "props": {
                                  "size": "xs",
                                  "bold": false,
                                  "text": "{{repeater.attributes.PRI_ADDRESS_FULL.value}}"
                                }
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }       
      ]
    }
  ],
  "query": [
    {
      "operator": "getLinks",
      "id": "GRP_NEW_ITEMS",
      "as": "items"
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "code"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{attributes.PRI_COMPANY_CODE.value}}",
        "as": "company"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "company",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    }
  ]
}
