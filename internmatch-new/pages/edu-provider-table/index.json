{
  "layout": {
    "title": "Education Providers",
    "appColor": "white",
    "backgroundColor": "whitesmoke",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }  },
  "children": [
    {
      "component": "Box",
      "children": [
        {
          "component": "Table",
          "props": {
            "renderWrapper": {
              "component": "EventButton",
              "props": {
                "height": "20px",
                "fontWeight": "300",
                "fontSize": 10,
                "eventType": "BTN_CLICK",
                "buttonCode": "BTN_TABLE_SELECT",
                "value": {
                  "itemCode": "_celld.attributeCode",
                  "hint": "GRP_EDU_PROVIDER_REPRESENTATIVES",
                  "userCode": "{{user.data.code}}"
                }
              }
            },
            "columns": [
              {
                "Header": "Actions",
                "accessor": "actions",
                "renderButton": [
                  {
                    "text": "View",
                    "component": "EventButton",
                    "props": {
                      "height": "30px",
                      "width": "120px",
                      "backgroundColor": "red",
                      "color": "#5173c6",
                      "textColor": "#fff",
                      "text": "View",
                      "buttonCode": "BTN_EDIT_EDU_PROVIDER",
                      "value": {
                        "itemCode": "{{attributeCode}}"
                      }
                    }
                  }
              ]
              },
              {
                "Header": "select",
                "accessor": "select",
                "show": false
              },
              {
                "Header": "Provider Name",
                "accessor": "providerName",
                "filterType": "string"
              },
              {
                "Header": "Email",
                "accessor": "email",
                "filterType": "string"
              },
              {
                "Header": "Phone Number",
                "accessor": "mobilePhone",
                "filterType": "string"
              },
              {
                "Header": "Address ",
                "accessor": "address",
                "filterType": "string"
              },
              {
                "Header": "Selcet",
                "accessor": "select",
                "filterType": "string"
              }
            ],
            "tableBackgroundColor": "#cccccc",
            "data": "_query.tableData",
            "height": "500px",
            "width": "500px",
            "itemsPerPage": 15
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_EDU_PROVIDERS",
      "as": "hostCompanies"
    },
    {
      "operator": "scope",
      "path": "hostCompanies.links",
      "as": "hostCompanies",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.attributes",
        "id": "{{link.targetCode}}",
        "as": "be"
      }
    },
    {
      "operator": "scope",
      "path": "hostCompanies",
      "scope": {
        "operator": "scope",
        "path": "be",
        "scope": {
          "operator": "populateBEGAttributes",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "hostCompanies",
      "scope": {
        "operator": "getBE",
        "as" : "company",
        "basePath": "baseEntities.data",
        "id": "{{be.attributes.LNK_EDU_PROVIDER.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "hostCompanies",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "providerName": "be.attributes.PRI_NAME.value",
          "email": "be.attributes.PRI_EMAIL.value",
          "mobilePhone": "be.attributes.PRI_LANDLINE.value",
          "address": "be.attributes.PRI_ADDRESS_STATE.value",
          "attributeCode": "code"

        }
      }
    }
  ]
}
