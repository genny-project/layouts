{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": 1,
        "padding": 20
      },
      "children": [
        {
          "component": "BucketView",
          "props": {
            "tabBarSize": "md",
            "backgroundColor": "#f6f6f6",
            "tabBarBackground": "#3f3f3f",
            "activeTabBackground": "#232323",
            "iconColor": "white",
            "iconSize": "md",
            "labelColor": "white",
            "labelProps": {
              "transform": "upperCase"
            },
            "overflowX": "auto",
            "width": "100%",
            "gutter": 20,
            "contentProps": {
              "minWidth": 240
            }
          },
          "repeat": "_query",
          "children": {
            "component": "List",
            "repeat": "_repeater.items",
            "props": {
              "headerText": "{{repeater.name}}",
              "contentBackground": "#b6b6b6",
              "headerProps": {
                "paddingX": 20,
                "paddingY": 15,
                "justifyContent": "space-between",
                "alignItems": "center"
              },
              "headerTextProps": {
                "bold": true
              },
              "showCountInHeader": false,
              "contentBodyProps": {
                "paddingX": 10,
                "paddingY": 20
              },
              "emptyProps": {
                "padding": 10
              },
              "headerCountTextProps": {
                "bold": true,
                "size": "xs"
              },
              "emptyTextProps": {
                "size": "xs"
              },
              "scrollViewProps": {
                "horizontal": true
              }
            },
            "children": {
              "component": "Link",
              "props": {
                "width": "100%",
                "backgroundColor": "#ffffff",
                "padding": 10,
                "wrapperProps": {
                  "style": {
                    "width": "100%"
                  }
                },
                "hoverProps": {
                  "style": {
                    "transform": [
                      { "scale": 1.02 }
                    ]
                  }
                },
                "key": "{{repeater.code}}",
                "to": "application/{{repeater.code}}"
              },
              "children": [
                {
                  "component": "Box",
                  "dontShowIf": {
                    "repeater.property.attributes.PRI_ADDRESS_FULL.value": {
                      "$exists": true
                    }
                  },
                  "props": {
                    "padding": 15,
                    "width": "100%",
                    "justifyContent": "center"
                  },
                  "children": [
                    {
                      "component": "ActivityIndicator",
                      "props": {
                        "size": "small"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "onlyShowIf": {
                    "repeater.property.attributes.PRI_ADDRESS_FULL.value": {
                      "$exists": true
                    }
                  },
                  "props": {
                    "width": "100%"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginRight": 10,
                        "flexShrink": 0
                      },
                      "children": [
                        {
                          "component": "Image",
                          "props": {
                            "source": "{{repeater.company.attributes.PRI_IMAGE_URL.value}}",
                            "height": 50,
                            "width": 50
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "flexDirection": "column",
                        "flex": 1
                      },
                      "children": [
                        {
                          "component": "Box",
                          "props": {
                            "marginBottom": 5
                          },
                          "children": [
                            {
                              "component": "Text",
                              "props": {
                                "size": "xs",
                                "bold": true
                              },
                              "children": "Address"
                            }
                          ]
                        },
                        {
                          "component": "Text",
                          "props": {
                            "size": "xxs"
                          },
                          "children": "{{repeater.property.attributes.PRI_ADDRESS_FULL.value}}"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_APPLICATIONS",
      "as": "applications"
    },
    {
      "operator": "scope",
      "path": "applications.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "as": "be",
        "id": "{{link.targetCode}}",
        "filterOutEmpty": true
      }
    },
    {
      "operator": "map",
      "fields": "applications.links"
    },
    {
      "operator": "sort",
      "by": "weight",
      "direction": "asc"
    },
    {
      "operator": "map",
      "fields": "be"
    },
    {
      "operator": "scope",
      "path": "links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "as": "be",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "links",
      "scope": {
        "operator": "find",
        "query": {
          "be.code": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "map",
      "fields": {
        "name": "name",
        "code": "code",
        "items": "links"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "map",
        "fields": "be"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{attributes.PRI_BEG_CODE.value}}",
        "as": "property"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "property",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{property.attributes.LNK_HOST_COMPANY.value}}",
        "as": "company"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "company",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    }
  ]
}
