          "flexDirection": "row",
          "justifyContent": "center"
        },
        "children": [
          {
            "component": "Container",
            "props": {
              "flexDirection": "row",
              "display": "flex",
              "flex-wrap": "wrap",
              "width": "100%"
            },
            "children": [
              {
                "component": "Box",
                "props": {
                  "width": "100%",
                  "backgroundColor": "white",
                  "flexDirection": "row",
                  "display": "flex"
                },
                "children": [
                  {
                    "component": "Box",
                    "props": {
                      "backgroundColor": "white",
                      "width": "100px",
                      "justifyContent": "center",
                      "paddingTop": "10px",
                      "padddingBottom": "10px",
                      "paddingLeft": "10px",
                      "paddingRight": "10px"
                    },
                    "children": [
                      {
                        "component": "Image",
                        "props": {
                          "source": " https://i.imgur.com/ziHkxPf.jpg",
                          "height": "100%",
                          "width": "100%",
                          "shape": "circle"
                        }
                      }
                    ]
                  },
                  {
                    "component": "Box",
                    "props": {
                      "width": "70%",
                      "flexDirection": "column",
                      "backgroundColor": "white"
                    },
                    "children": [
                      {
                        "component": "Box",
                        "props": {},
                        "children": [
                          {
                            "component": "Box",
                            "children": {
                              "component": "Text",
                              "children": "Javascript developer",
                              "props": {
                                "color": "#444444",
                                "fontWeight": "bold"
                              }
                            },
                            "props": {
                              "color": "red",
                              "paddingTop": "10px"
                            }
                          }
                        ]
                      },
                      {
                        "component": "Box",
                        "props": {
                          "paddingTop": "5px"
                        },
                        "children": [
                          {
                            "component": "Box",
                            "children": {
                              "component": "Text",
                              "children": "Blaze Acumen",
                              "props": {
                                "color": "#e7a57d"
                              }
                            },
                            "props": {
                              "color": "red"
                            }
                          },
                          {
                            "component": "Box",
                            "children": {
                              "component": "Text",
                              "children": "Ashburton VIC",
                              "props": {
                                "color": "black"
                              }
                            },
                            "props": {
                              "color": "red",
                              "paddingLeft": "20px"
                            }
                          },
                          {
                            "component": "Box",
                            "children": {
                              "component": "Text",
                              "children": "28 days ago",
                              "props": {
                                "color": "black"
                              }
                            },
                            "props": {
                              "color": "red",
                              "paddingLeft": "10px"
                            }
                          }
                        ]
                      },
                      {
                        "component": "Box",
                        "children": [
                          {
                            "component": "Box",
                            "children": {
                              "component": "Text",
                              "children": "Looking for a talented JavaScript Developer (FrontEnd + Backend) to join a growing team of Niche Educational product based organization.",
                              "props": {
                                "color": "#332f2d"
                              }
                            },
                            "props": {
                              "color": "red",
                              "width": "100%",
                              "paddingTop": "15px",
                              "paddingBottom": "10px"
                            }
                          }
                        ]
                      }
                    ]
                  },
                  {
                    "component": "Box",
                    "props": {
                      "backgroundColor": "white",
                      "width": "15%"
                    },
                    "children": [
                      {
                        "component": "Button",
                        "props": {
                          "size": "md",
                          "color": "#283a4c",
                          "fontWeight": "bold",
                          "textColor": "white"
                        },
                        "children": {
                          "component": "Text",
                          "props": { 
                            "color": "#fff"
                          },
                          "children": "View"
                        }
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_NEW_ITEMS",
      "as": "internshipList"
    },
    {
      "operator": "scope",
      "path": "internshipList",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "internshipList.links",
      "as": "items",
      "scope": {
        "operator": "find",
        "query": {
          "valueString": {
            "$eq": "BEG"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "as": "company",
        "basePath": "baseEntities.data",
        "id": "{{attributes.LNK_HOST_COMPANY.value}}"
      }
    }
  ]
}