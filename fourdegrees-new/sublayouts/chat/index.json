{
  "layout": {
    "title": "Chat",
    "appColor": "dark",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "ScrollView",
      "props": {
        "style": {
          "flex": 1,
          "backgroundColor": "#f8f8f8"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flex": 1,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "padding": 20,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 20
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "props": {
                        "text": "Your Messages",
                        "size": "xl"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "justifyContent": "center",
                "flexDirection": "column"
              },
              "repeat": "_query.chats.links",
              "children": {
                "component": "Sublayout",
                "props": {
                  "layoutName": "chat/chat.listitem",
                  "itemID": "{{repeater.code}}"
                }
              },
              "onlyShowIf": {
                "query.chats.links": {
                  "$exists": true
                }
              }
            },
            {
              "component": "Box",
              "props": {
                "justifyContent": "center",
                "alignItems": "center",
                "flexDirection": "column",
                "flex": 1
              },
              "children": {
                "component": "ActivityIndicator",
                "props": {
                  "size": "large"
                },
                "dontShowIf": {
                  "query.chats.links": {
                    "$exists": true
                  }
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_MESSAGES",
      "as": "chats"
    },
    {
      "operator": "scope",
      "path": "chats.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "chats.links",
      "scope": {
        "operator": "populateAttributes",
        "basePath": "baseEntities.attributes",
        "id": "{{link.targetCode}}"
      }
    }
  ]
}
