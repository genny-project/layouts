{
  "layout": {
    "title": "Application",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    },
    "sidebarRight": {
      "variant": "default",
      "onlyShowIf": {
        "$or": [
          {
            "user.attributes.PRI_IS_AGENT.value": {
              "$eq": true
            }
          },
          {
            "user.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
              "$eq": true
            }
          },
          {
            "user.attributes.PRI_IS_BUYER.value": {
              "$eq": true
            }
          }
        ]
      }
    }
  },
  "children": [
    {
      "component": "Box",
      "props": {
        "marginX": "auto",
        "marginY": "100px",
        "maxWidth": "700px",
        "minWidth": "500px",
        "flex": 1,
        "flexDirection": "column"
      },
      "children": [
        {
          "component": "Box",
            "conditional": {
              "if": {
                "error": { "$exists": true }
              },
              "then": {
                "children": [
                  {
                    "component": "DisplayHTML",
                    "props": {
                    "_html": "<p> hello safal </p>"
                  }
                  }
                ]
              },
              "else": {
                "children": [
                  {
                    "component": "PdfViewer",
                    "props": {
                      "file": "https://google.com"
                    }
                  },
                  {
                    "component": "DisplayHTML",
                    "props": {
                      "_html": "<p> hello safal </p>"
                    }
                  }
                ]
              }
            }
        },
        {
          "component": "Form",
          "onlyShowIf": {
            "$or": [
              {
                "$or": [
                  {
                    "user.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
                      "$eq": false
                    }
                  },
                  {
                    "user.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
                      "$exists": false
                    }
                  }
                ]
              },
              {
                "query.application.attributes.PRI_GRP_OFFERED_DATE.value": {
                  "$exists": false
                }
              }
            ]
          },
          "props": {
            "questionGroupCode": "{{navigation.offerId}}",
            "style": {
              "width": "100%",
              "marginTop": "40px"
            },
            "renderSubmitButton": {
              "component": "Button",
              "props": {
                "showSpinnerOnClick": true,
                "color": "green",
                "width": "100%"
              }
            }
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{navigation.id}}",
      "as": "application"
    },
    {
      "operator": "scope",
      "path": "application",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "application",
      "scope": {
        "operator": "populateLinkValues",
        "withAttributes": true,
        "as": "linkValues"
      }
    },
    {
      "operator": "clean",
      "fields": ["application"]
    }
  ]
}
