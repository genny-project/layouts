{
  "layout": {
    "title": "Application Profile",
    "appColor": "white",
    "backgroundColor": "silver"
  },
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "backgroundColor": "rgb(255,255,255)"
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "view-details/header",
            "attributes": {
              "code": "{{props.company.code}}",
              "name": "{{props.company.name}}",
              "imageUrl": "{{props.company.image}}",
              "website": "{{props.company.website}}"
            },
            "mainContent": {
              "component": "Box",
              "renderAsComponent": true,
              "props": {
                "marginTop": "10px"
              },
              "children": [
                {
                  "component": "Box",
                  "children": {
                    "component": "Text",
                    "props": {
                      "color": "blue",
                      "size": "md",
                      "text": "{{props.attributes.website}}"
                    }
                  }
                }
              ]
            }
          }
        }
      ]
    },
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "backgroundColor": "rgb(255,255,255)",
        "marginTop": "20px"
      },
      "children": [
        {
          "component": "Sublayout",
          "onlyShowIf": {
            "props.description": {
              "$exists": true
            }
          },
          "props": {
            "layoutName": "view-details/content",
            "title": "Company Details",
            "content": [
              {
                "label": "Description",
                "content": "{{props.company.description}}"
              }
            ]
          }
        },
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "view-details/content",
            "title": "Details",
            "content": [
              {
                "label": "Email:",
                "text": "{{props.company.email}}"
              },
              {
                "label": "Company Phone Number:",
                "text": "{{props.company.phone}}"
              },
              {
                "label": "Company Address:",
                "text": "{{props.company.address}}"
              },
              {
                "label": "Company ABN:",
                "text": "{{props.company.abn}}"
              },
              {
                "label": "Legal Name:",
                "text": "{{props.company.legalName}}"
              },
              {
                "label": "Company ABN:",
                "text": "{{props.company.postCode}}"
              }
            ]
          }
        }
      ]
    }
  ]
}