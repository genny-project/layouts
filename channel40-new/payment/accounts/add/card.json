{
  "layout": {
    "title": "Add Card",
    "appColor": "dark",
    "header": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Container",
      "props": {
        "flex": 1
      },
      "children": [
        {
          "component": "Payments",
          "props": {
            "type": "card",
            "title": "Add a Card Account",
            "initialValues": {
              "nickname": "",
              "isCardValid": false
            }
          },
          "children": [
            {
              "component": "InputWithLabel",
              "props": {
                "type": "credit-card",
                "label": "Card Details",
                "name": "isCardValid",
                "required": true,
                "marginBottom": 20,
                "marginX": -20,
                "hideErrorMessage": true
              }
            },
            {
              "component": "InputWithLabel",
              "props": {
                "type": "text",
                "label": "Card Nickname",
                "name": "nickname",
                "prefixIcon": "face",
                "required": true
              }
            }
          ]
        }
      ]
    }
  ]
}
