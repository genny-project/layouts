{
  "Grid": {
    "cols": [1, "50px"],
    "rows": 2,
    "style": {
      "height": "initial",
      "backgroundColor": "white",
      "borderRadius": "5px",
      "padding": "10px",
      "boxShadow": "0 1px 3px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24)"
    },
    "children": [
        {
          "SublayoutLoader" : {
              "position":[0, 0],
              "layoutCode": "company-image",
              "aliases": {
                  "BE": "BE.PRI_COMPANY_CODE",
                  "GROUP": "ROOT"
            }
         }
      },
      {
        "h3": {
          "position": [0, 0],
          "style": {
            "margin": "0",
            "marginTop": "10px",
            "textTransform": "uppercase"
          },
          "children": "BE.PRI_NAME"
        }
      },
      {
        "div": {
          "position": [1, 0],
          "style": {
            "padding": "0",
            "display": "flex",
            "marginBottom": "10px",
            "alignItems": "center"
          },
          "children": [
            {
              "Selector": {
                "checkValues": "BE.PRI_COMPANY_CODE",
                "showIfNotNull": true,
                "children": [
                  {
                    "SublayoutLoader": {
                      "layoutCode": "company-name",
                      "aliases": {
                        "BE": "BE.PRI_COMPANY_CODE",
                        "GROUP": "ROOT"
                      }
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "GennyButton": {
          "position": [0, 1],
          "style": {
            "height": "30px"
          },
          "buttonStyle": {
            "background": "PROJECT.PRI_COLOR"
          },
          "children": "View",
          "buttonCode": "BTN_VIEW_INTERNSHIP",
          "value": {
            "itemCode": "BE.code",
            "hint": "ROOT"
          }
        }
      }
    ]
  }
}
