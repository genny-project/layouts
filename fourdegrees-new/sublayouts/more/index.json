{
  "layout": {
    "title": "More",
    "backgroundColor": "#f8f8f8",
    "header": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "ScrollView",
      "props": {
        "style": {
          "flex": 1,
          "backgroundColor": "#f8f8f8"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flex": 1,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "padding": 20,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 20
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "props": {
                        "text": "More",
                        "size": "xl"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "component": "ActivityIndicator",
              "props": {
                "size": "large"
              },
              "dontShowIf": {
                "query.results.links": {
                  "$size": {
                    "$gt": 0
                  }
                }
              }
            },
            {
              "component": "Box",
              "props": {
                "justifyContent": "center",
                "flexDirection": "column"
              },
              "onlyShowIf": {
                "query.results.links": {
                  "$exists": {
                    "$gt": 0
                  }
                }
              },
              "children": {
                "component": "Sublayout",
                "props": {
                  "layoutName": "cards/more/section.card",
                  "title": "Privacy"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
