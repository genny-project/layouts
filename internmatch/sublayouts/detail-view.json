                "layoutCode": "internship-details-title",
                "aliases": {
                  "BE": "BE.code",
                  "GROUP": "ROOT"
                }
              }
            },
            {
              "SublayoutLoader": {
                "position": [
                  1,
                  0
                ],
                "layoutCode": "internship-details-features",
                "style": {
                  "backgroundColor": "#DDD"
                },
                "aliases": {
                  "BE": "BE.code",
                  "GROUP": "ROOT"
                }
              }
            },
            {
              "Selector": {
                "position": [
                  1,
                  0
                ],
                "showIfNotNull": true,
                "checkValues": [
                  "BE.PRI_COMPANY_CODE"
                ],
                "children": [
                        {
                          "h4": {
                            "style": {
                              "padding": "5px 0 10px"
                            },
                            "children": "Host Company"
                          }
                        },
                        {
                          "SublayoutLoader": {
                            "layoutCode": "internship-details-host-company",
                            "style": {
                            },
                            "aliases": {
                              "BE": "BE.PRI_COMPANY_CODE",
                              "GROUP": "ROOT"
                            }
                          
                        }
                      
                    }
                  
                ]
              }
            },
            {
              "Selector": {
                "position": [
                  1,
                  0
                ],
                "showIfNotNull": true,
                "checkValues": [
                  "BE.LNK_HOST_COMPANY_REP.code"
                ],
                "children": [
                  {
                    "h4": {
                      "style": {
                       
                        "padding": "5px 0 10px"
                      },
                      "children": "Company Representative"
                    }
                  },
                  {
                    "SublayoutLoader": {
                      "layoutCode": "internship-details-representative",
                      "style": {
                        "backgroundColor": "#DDD"
                      },
                      "aliases": {
                        "BE": "BE.code",
                        "GROUP": "ROOT"
                      }
                    }
                  }
                ]
              }
            },
            {
              "Selector": {
                "position": [
                  1,
                  0
                ],
                "showIfNotNull": true,
                "checkValues": [
                  "BE.LNK_INTERN_SUPERVISOR.code"
                ],
                "children": [
                  {
                    "h4": {
                      "style": {
                     
                        "padding": "5px 0 10px"
                      },
                      "children": "Intern Supervisor"
                    }
                  },
                  {
                    "SublayoutLoader": {
                      "layoutCode": "internship-details-supervisor",
                      "style": {
                        "backgroundColor": "#DDD"
                      },
                      "aliases": {
                        "BE": "BE.code",
                        "GROUP": "ROOT"
                      }
                    }
                  }
                ]
              }
            },
            {
              "SublayoutLoader": {
                "position": [
                  1,
                  0
                ],
                "layoutCode": "internship-details-required-skills",
                "aliases": {
                  "BE": "BE.code",
                  "GROUP": "ROOT"
                }
              }
            },
            {
              "Selector": {
                "position": [
                  1,
                  0
                ],
                "checkValues": [
                  "USER.PRI_IS_BUYER"
                ],
                "hideValues": [
                  true
                ],
                "children": [
                  {
                    "Selector": {
                      "position": [
                        1,
                        0
                      ],
                      "checkValues": [
                        "BE.link.REPRESENTATIVE.PRI_NAME"
                      ],
                      "showIfNotNull": true,
                      "children": [
                        {
                          "SublayoutLoader": {
                            "position": [
                              1,
                              0
                            ],
                            "layoutCode": "internship-details-representative",
                            "aliases": {
                              "BE": "BE.code",
                              "GROUP": "ROOT"
                            }
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "Grid": {
          "position": [
            0,
            1
          ],
          "cols": 1,
