{
  "layout": {
    "title": "Dashboard",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    },
    "sidebarRight": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Box", 
      "props": {
        "flex":1,
        "position": "relative"
      },
      "children": [
        {
        "component": "Box",
        "props": {
          "position": "absolute",
          "zIndex": 100,
          "right": 0  
        },
        "children": [
          {
            "component": "Dropdown",
            "props": {
              "facingRight": false,
              "menuButtonStyle": {
                "backgroundColor": "transparent",
                "border": 0,
                "padding": 10,
                "width": 60,
                "fontSize": 16,
                "cursor": "pointer",
                "color": "white"
              },
              "menuListStyle": {
                "background": "#233a4e",
                "borderWidth": 2,
                "borderStyle": "solid",
                "padding": 10
              },
              "menuItemStyle": {
                "color": "white",
                "padding": 10,
                "height": 30
              },
              "menuLinkStyle": {
                "textAlign": "right",
                "padding": 15,
                "color": "white"
              },
              "items": [
                {
                  "text": "Internship",
                  "buttonCode": "BTN_ADD_INTERNSHIP",
                  "icon": "person"
                },
                {
                  "text": "Company",
                  "buttonCode": "BTN_ADD_COMPANY"
                },
                {
                  "text": "People",
                  "buttonCode": "BTN_ADD_PEOPLE"
                }
              ]
            },
            "children": [
              {
                "component": "Box",
                "props": {
                  "alignItems": "center"
                },
                "children": [
                  {
                    "component": "Box",
                    "props": {
                      "marginRight": 10
                    },
                    "children": [
                      {
                        "component": "ActivityIndicator",
                        "dontShowIf": {
                          "user.attributes.PRI_FIRSTNAME.value": {
                            "$exists": true
                          }
                        },
                        "props": {
                          "color": "white",
                          "size": "small"
                        }
                      },
                      {
                        "component": "Text",
                        "onlyShowIf": {
                          "user.attributes.PRI_FIRSTNAME.value": {
                            "$exists": true
                          }
                        },
                        "props": {
                          "color": "white",
                          "text": "Add"
                        }
                      }
                    ]
                  },
                  {
                    "component": "Icon",
                    "props": {
                      "name": "expand_more",
                      "color": "white",
                      "size": "xs"
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "component": "Sublayout",
        "onlyShowIf": {
          "user.attributes.PRI_IS_AGENT.value": {
            "$eq": true
          }
        },
        "props": {
          "layoutName": "home/agent"
        }
      },
      {
        "component": "Sublayout",
        "onlyShowIf": {
          "user.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
            "$eq": true
          }
        },
        "props": {
          "layoutName": "home/agent"
        }
      },
      {
        "component": "Sublayout",
        "onlyShowIf": {
          "user.attributes.PRI_IS_SELLER.value": {
            "$eq": true
          }
        },
        "props": {
          "layoutName": "home/intern"
        }
      },
      {
        "component": "Sublayout",
        "onlyShowIf": {
          "user.attributes.PRI_IS_BUYER.value": {
            "$eq": true
          }
        },
        "props": {
          "layoutName": "home/hostcompany"
        }
      }
        
      ]
      
    }
    
  ]
}