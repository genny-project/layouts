{
  "layout": {
    "title": "Internships",
    "appColor": "white",
    "backgroundColor": "white",
    "header":{
      "variant":"default"
  },
  "sidebar":{
      "variant":"default"
  },
  "sidebarRight":{
      "variant":"default",
      "onlyShowIf":{
          "$or": [
              { "user.attributes.PRI_IS_AGENT.value":{"$eq":true } },
              { "user.attributes.PRI_IS_EDU_PROVIDER_STAFF.value":{"$eq":true } }
          ]
      }
  }

    
  },
  "children": [
    {
      "component": "Tabs",
      "props": {
        "flex": 1,
        "tabBarBackground": "#233a4e",
        "tabWrapperProps": {
          "paddingLeft": 20,
          "height": 50,
          "flexBasis": "auto"
        },
        "textColor": "#FFF",
        "tabBackground": "#41505d",
        "activeTabBackground": "#f6f6f6",
        "activeTabTextColor": "#000",
        "tabProps": {
          "paddingX": 20,
          "paddingY": 15,
          "minWidth": 180,
          "justifyContent": "center"
        },
        "tabTitleProps": {
          "size": "xs"
        },
        "activeTabTitleProps": {
          "bold": true
        },
        "inactiveTabProps": {
          "borderColor": "#233a4e",
          "borderRightWidth": 1,
          "borderStyle": "solid"
        },
        "tabs": [
          { "title": "Table View", "key": 0 },
          { "title": "Applications", "key": 1 },
          { "title": "Details View", "key": 2 }
        ],
        "childProps": {
          "overflowX": "auto",
          "overflowY": "auto",
          "maxHeight": "calc(100vh - 50px - 65px)"
        },
        "overflowX": "auto"
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "tables/internship-table"
          }
        },
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "home/agent/bucket"
          }
        },
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "home/agent/internship-details"
          }
        }
      ]
    }
  ]
}