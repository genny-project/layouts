{
  "layout": {
    "title": "Internship Table",
    "appColor": "dark"
  },
  "children": [
    {
      "component": "Box",
      "children": [
        {
          "component": "Table",
          "props": {
            "renderWrapper": {
              "component": "EventButton",
              "props": {
                "height": "20px",
                "fontWeight": "300",
                "fontSize": 10,
                "eventType": "TABLE_SELECT",
                "value": {
                  "itemCode": "{{celld.code}}",
                  "hint": "GRP_NEW_ITEMS",
                  "userCode": "{{user.data.code}}"
                },
                "dispatchActionOnClick": {
                  "type": "ALIAS_ADD",
                  "payload": {
                    "alias": "CURRENT_NOTE",
                    "value": "{{celld.code}}"
                  }
                }
              }
            },
            "columns": [
              {
                "Header": "Actions",
                "accessor": "actions",
                "renderButton": [
                  {
                    "component": "EventButton",
                    "props": {
                      "height": "30px",
                      "width": "80px",
                      "backgroundColor": "red",
                      "color": "#5173c6",
                      "textColor": "#fff",
                      "text": "View",
                      "buttonCode": "BTN_VIEW_BUCKET",
                      "value": {
                        "itemCode": "{{code}}"
                      },
                      "dispatchActionOnClick": {
                        "type": "ALIAS_ADD",
                        "payload": {
                          "alias": "CURRENT_NOTE",
                          "value": "{{code}}"
                        }
                      }
                    }
                  }
                ]
              },
              {
                "Header": "Internship Title",
                "accessor": "name",
                "id": "name",
                "key": "name",
                "filterType": "string"
              },
              {
                "Header": "Host Company",
                "accessor": "company",
                "filterType": "string"
              },
              {
                "Header": "Representative",
                "accessor": "companyRep",
                "filterType": "string"
              },
              {
                "Header": "Contact Number",
                "accessor": "contactNumber",
                "filterType": "string"
              },
              {
                "Header": "Applied",
                "accessor": "countApplied",
                "filterType": "string"
              },
              {
                "Header": "Shortlisted",
                "accessor": "countShortlisted",
                "filterType": "string"
              },
              {
                "Header": "Interviews",
                "accessor": "countInterviews",
                "filterType": "string"
              },
              {
                "Header": "Offered",
                "accessor": "countOffered",
                "filterType": "string"
              },
              {
                "Header": "In Progress",
                "accessor": "countInProgress",
                "filterType": "string"
              },
              {
                "Header": "Placed",
                "accessor": "countPlaced",
                "filterType": "string"
              }
            ],
            "tableBackgroundColor": "#cccccc",
            "data": "_query.tableData",
            "tableHeight": "500px",
            "tableWidth": "100%",
            "itemsPerPage": 15
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_NEW_ITEMS",
      "as": "internships"
    },
    {
      "operator": "scope",
      "path": "internships.links",
      "as": "internships",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "getBE",
        "as": "company",
        "basePath": "baseEntities.data",
        "id": "{{attributes.LNK_HOST_COMPANY.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "scope",
        "path": "company",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "getBE",
        "as": "companyRep",
        "basePath": "baseEntities.data",
        "id": "{{attributes.LNK_HOST_COMPANY_REP.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "scope",
        "path": "companyRep",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "code": "code",
          "name": "attributes.PRI_NAME.value",
          "company": "company.name",
          "companyRep": "companyRep.name",
          "contactNumber": "companyRep.attributes.PRI_MOBILE.value",
          "countApplied": "attributes.PRI_COUNT_GRP_APPLIED.value",
          "countInterviews": "attributes.PRI_COUNT_GRP_INTERVIEWS.value",
          "countInProgress": "attributes.PRI_COUNT_GRP_IN_PROGRESS.value",
          "countOffered": "attributes.PRI_COUNT_GRP_OFFERED.value",
          "countPlaced": "attributes.PRI_COUNT_GRP_PLACED.value",
          "countShortlisted": "attributes.PRI_COUNT_GRP_SHORTLISTED.value"
        }
      }
    }
  ]
}