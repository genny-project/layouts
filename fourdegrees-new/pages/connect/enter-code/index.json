{
  "layout": {
    "title": "Direct Connect",
    "appColor": "dark",
    "backgroundColor": "#f8f8f8",
    "header": {
      "variant": "default"
    }
  },
  "children": [
      {
      "component": "Container",
      "props": {
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": 1,
        "height": "100%",
        "padding": 20
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "marginBottom": 20,
            "marginTop": 30,
            "padding": 20
          },
          "children": [
            {
              "component": "Heading",
              "props": {
                "text": "Direct Connect Code",
                "size": "xl"
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "marginBottom": 20,
            "backgroundColor": "red"
          },
          "children": [
            {
              "component": "Text",
              "props": {
                "text": "Enter a code to connect directly to another member. The other member can go Accounts -> Profile -> Connect, and show you the 4 digit code to enter.",
                "color": "black",
                "size": "xs"
              }
            }
          ]
        },
        {
          "component": "Form",
          "props": {
            "questionGroupCode": "QUE_DIRECT_CONNECT_GRP",
            "renderHeading": {
              "component": "Box",
              "props": {
                "marginTop": 20,
                "marginBottom": 20
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "color": "#202532",
                    "size": "xl",
                    "text": "{{heading}}"
                  }
                }
              ]
            },
            "renderSubheading": {
              "component": "Box",
              "props": {
                "marginY": 20
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "color": "#202532",
                    "size": "lg",
                    "align": "left",
                    "text": "{{subheading}}"
                  }
                }
              ]
            },
            "renderFormInputWrapper": {
              "component": "Box",
              "props": {
                "marginBottom": 20,
                "flexDirection": "column"
              }
            },
            "renderFormInput": {
              "component": "FormInput",
              "useThemeFrom": "Input",
              "variant": "default",
              "props": {
                "placeholder": "{{label}}"
              }
            },
            "renderSubmitButtonWrapper": {
              "component": "Box",
              "props": {
                "marginTop": 10,
                "flexDirection": "column"
              }
            },
            "renderSubmitButton": {
              "component": "Button",
              "props": {
                "inverted": true,
                "showSpinnerOnClick": true,
                "color": "#202532",
                "textColor": "#202532"
              }
            },
            "renderLoading": {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "ActivityIndicator",
                  "props": {
                    "size": "large"
                  }
                },
                {
                  "component": "Box",
                  "props": {
                    "marginTop": 10
                  },
                  "children": [
                    {
                      "component": "Text",
                      "props": {
                        "color": "white",
                        "text": "Loading form..."
                      }
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ]
}

