{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": 1,
        "padding": 20
      },
      "children": [
        {
          "component": "BucketView",
          "props": {
            "tabBarSize": "md",
            "backgroundColor": "#f6f6f6",
            "tabBarBackground": "#3f3f3f",
            "activeTabBackground": "#232323",
            "iconColor": "white",
            "iconSize": "md",
            "labelColor": "white",
            "labelProps": {
              "transform": "upperCase"
            },
            "overflowX": "auto",
            "overflowY": "auto",
            "width": "100%",
            "gutter": 20,
            "contentProps": {
              "minWidth": 240
            }
          },
          "repeat": "_query",
          "children": {
            "component": "List",
            "props": {
              "headerText": "{{repeater.name}}",
              "contentBackground": "#eaeaea",
              "headerProps": {
                "paddingX": 20,
                "paddingY": 15,
                "justifyContent": "space-between",
                "alignItems": "center",
                "backgroundColor": "#eaeaea",
                "position": "sticky",
                "top": 0
              },
              "headerTextProps": {
                "bold": true
              },
              "showCountInHeader": true,
              "contentBodyProps": {
                "paddingX": 10,
                "paddingY": 20
              },
              "emptyProps": {
                "padding": 10
              },
              "headerCountTextProps": {
                "bold": true,
                "size": "xs"
              },
              "emptyTextProps": {
                "size": "xs"
              },
              "scrollViewProps": {
                "horizontal": true
              }
            },
            "repeat": "_repeater.items",
            "children": {
              "component": "Box",
              "props": {
                "width": "100%",
                "backgroundColor": "#ffffff",
                "padding": 10,
                "paddingRight": 35,
                "key": "{{repeater.code}}",
                "position": "relative"
              },
              "children": [
                {
                  "component": "Box",
                  "dontShowIf": {
                    "repeater.code": {
                      "$exists": true
                    }
                  },
                  "props": {
                    "padding": 15,
                    "width": "100%",
                    "justifyContent": "center"
                  },
                  "children": [
                    {
                      "component": "ActivityIndicator",
                      "props": {
                        "size": "small"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "onlyShowIf": {
                    "repeater.code": {
                      "$exists": true
                    }
                  },
                  "conditional": {
                    "if": {
                      "$or": [
                        { "repeater.attributes.PRI_IS_DEACTIVATED.value": { "$eq": true } },
                        { "repeater.attributes.PRI_IS_DECLINED.value": { "$eq": true } }
                      ]
                    },
                    "then": {
                      "opacity": 0.7
                    }
                  },
                  "props": {
                    "width": "100%",
                    "position": "static"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "position": "absolute",
                        "right": 5,
                        "top": 5,
                        "zIndex": 5
                      },
                      "children": [
                        {
                          "component": "Dropdown",
                          "props": {
                            "facingRight": true,
                            "menuButtonStyle": {
                              "backgroundColor": "transparent",
                              "border": 0,
                              "padding": 5,
                              "fontSize": 16,
                              "cursor": "pointer",
                              "color": "white"
                            },
                            "menuListStyle": {
                              "background": "#5cb85c",
                              "borderWidth": 2,
                              "borderColor": "#192835",
                              "borderStyle": "solid"
                            },
                            "menuItemStyle": {
                              "textAlign": "center",
                              "padding": 15,
                              "color": "white"
                            }
                          },
                          "conditional": {
                            "if": {
                              "repeater.attributes.PRI_IS_DEACTIVATED.value": {
                                "$eq": true
                              }
                            },
                            "then": {
                              "items": [
                                {
                                  "text": "Re-Activate",
                                  "buttonCode": "BTN_ACTIVATE_APPLICATION",
                                  "value": {
                                    "itemCode": "{{repeater.code}}",
                                    "hint": "{{parentRepeater.code}}"
                                  }
                                }
                              ]
                            },
                            "else": {
                              "if": {
                                "repeater.attributes.PRI_GRP_IDENTIFIED_DATE.value": {
                                  "$exists": true,
                                  "$ne": "undefined"
                                }
                              },
                              "then": {
                                "items": [
                                  {
                                    "text": "View Detail",
                                    "href": "/application/{{repeater.code}}"
                                  },
                                  {
                                    "text": "Contact By Email",
                                    "buttonCode": "BTN_SHOW_COMPLIANCE_DOCUMENT",
                                    "value": {
                                      "itemCode": "{{repeater.code}}",
                                      "hint": "{{parentRepeater.code}}"
                                    }
                                  },
                                  {
                                    "text": "Contact By Phone",
                                    "buttonCode": "BTN_FINISH_INTERNSHIP",
                                    "value": {
                                      "itemCode": "{{repeater.code}}",
                                      "hint": "{{parentRepeater.code}}"
                                    }
                                  },
                                  {
                                    "text": "Contact By Letter",
                                    "buttonCode": "BTN_DEACTIVATE_APPLICATION",
                                    "value": {
                                      "itemCode": "{{repeater.code}}",
                                      "hint": "{{parentRepeater.code}}"
                                    }
                                  },
                                  {
                                    "text": "Contact By Site Visit",
                                    "buttonCode": "BTN_DEACTIVATE_APPLICATION",
                                    "value": {
                                      "itemCode": "{{repeater.code}}",
                                      "hint": "{{parentRepeater.code}}"
                                    }
                                  }
                                ]
                              },
                              "else": {
                                "if": {
                                  "repeater.attributes.PRI_GRP_CONTACTED_DATE.value": {
                                    "$exists": true,
                                    "$ne": "undefined"
                                  }
                                },
                                "then": {
                                  "items": [
                                    {
                                      "text": "View Detail",
                                      "href": "/applications/{{repeater.code}}"
                                    },
                                    {
                                      "text": "Request Condition Report",
                                      "buttonCode": "BTN_SHOW_COMPLIANCE_DOCUMENT",
                                      "value": {
                                        "itemCode": "{{repeater.code}}",
                                        "hint": "{{parentRepeater.code}}"
                                      }
                                    },
                                    {
                                      "text": "Decline Condition Report",
                                      "buttonCode": "BTN_START_INTERNSHIP",
                                      "value": {
                                        "itemCode": "{{repeater.code}}",
                                        "hint": "{{parentRepeater.code}}"
                                      }
                                    },
                                    {
                                      "text": "ReContact By Email",
                                      "buttonCode": "BTN_SHOW_COMPLIANCE_DOCUMENT",
                                      "value": {
                                        "itemCode": "{{repeater.code}}",
                                        "hint": "{{parentRepeater.code}}"
                                      }
                                    },
                                    {
                                      "text": "ReContact By Phone",
                                      "buttonCode": "BTN_FINISH_INTERNSHIP",
                                      "value": {
                                        "itemCode": "{{repeater.code}}",
                                        "hint": "{{parentRepeater.code}}"
                                      }
                                    },
                                    {
                                      "text": "ReContact By Letter",
                                      "buttonCode": "BTN_DEACTIVATE_APPLICATION",
                                      "value": {
                                        "itemCode": "{{repeater.code}}",
                                        "hint": "{{parentRepeater.code}}"
                                      }
                                    },
                                    {
                                      "text": "ReContact By Site Visit",
                                      "buttonCode": "BTN_DEACTIVATE_APPLICATION",
                                      "value": {
                                        "itemCode": "{{repeater.code}}",
                                        "hint": "{{parentRepeater.code}}"
                                      }
                                    }
                                  ]
                                },
                                "else": {
                                  "if": {
                                    "repeater.attributes.PRI_GRP_ACCEPTED_DATE.value": {
                                      "$exists": true,
                                      "$ne": "undefined"
                                    }
                                  },
                                  "then": {
                                    "items": [
                                      {
                                        "text": "View Detail",
                                        "href": "/application/{{repeater.code}}"
                                      },
                                      {
                                        "text": "Book Inspection",
                                        "buttonCode": "BTN_SHOW_COMPLIANCE_DOCUMENT",
                                        "value": {
                                          "itemCode": "{{repeater.code}}",
                                          "hint": "{{parentRepeater.code}}"
                                        }
                                      }
                                    ]
                                  },
                                  "else": {
                                    "if": {
                                      "repeater.attributes.PRI_GRP_INSPECTION_DATE.value": {
                                        "$exists": true,
                                        "$ne": "undefined"
                                      }
                                    },
                                    "then": {
                                      "items": [
                                        {
                                          "text": "View Detail",
                                          "href": "/application/{{repeater.code}}"
                                        },
                                        {
                                          "text": "Rebook Appointment",
                                          "buttonCode": "BTN_OFFER_APPLICATION",
                                          "value": {
                                            "itemCode": "{{repeater.code}}",
                                            "hint": "{{parentRepeater.code}}"
                                          }
                                        },
                                        {
                                          "text": "Upload Building Condition Report",
                                          "buttonCode": "BTN_DEACTIVATE_APPLICATION",
                                          "value": {
                                            "itemCode": "{{repeater.code}}",
                                            "hint": "{{parentRepeater.code}}"
                                          }
                                        },
                                        {
                                          "text": "Inspection Completed",
                                          "buttonCode": "BTN_DEACTIVATE_APPLICATION",
                                          "value": {
                                            "itemCode": "{{repeater.code}}",
                                            "hint": "{{parentRepeater.code}}"
                                          }
                                        }
                                      ]
                                    },
                                    "else": {
                                      "if": {
                                        "repeater.attributes.PRI_GRP_REPORT_DATE.value": {
                                          "$exists": true,
                                          "$ne": "undefined"
                                        }
                                      },
                                      "then": {
                                        "items": [
                                          {
                                            "text": "View Detail",
                                            "href": "/application/{{repeater.code}}"
                                          },
                                          {
                                            "text": "Report Prepared",
                                            "buttonCode": "BTN_INTERVIEW_APPLICATION",
                                            "value": {
                                              "itemCode": "{{repeater.code}}",
                                              "hint": "{{parentRepeater.code}}"
                                            }
                                          },
                                          {
                                            "text": "Report Reloaded",
                                            "buttonCode": "BTN_REJECT_APPLICATION",
                                            "value": {
                                              "itemCode": "{{repeater.code}}",
                                              "hint": "{{parentRepeater.code}}"
                                            }
                                          },
                                          {
                                            "text": "Upload Condition Report",
                                            "buttonCode": "BTN_DEACTIVATE_APPLICATION",
                                            "value": {
                                              "itemCode": "{{repeater.code}}",
                                              "hint": "{{parentRepeater.code}}"
                                            }
                                          }
                                        ]
                                      },
                                      "else": {
                                        "if": {
                                          "repeater.attributes.PRI_GRP_COMPLETED_DATE.value": {
                                            "$exists": true,
                                            "$ne": "undefined"
                                          }
                                        },
                                        "then": {
                                          "items": [
                                            {
                                              "text": "View Detail",
                                              "href": "/application/{{repeater.code}}"
                                            }
                                          ]
                                        },
                                        "else": {
                                          "items": [
                                            {
                                              "text": "View Detail",
                                              "href": "/student/{{repeater.code}}"
                                            }
                                          ]
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          },
                          "children": [
                            {
                              "component": "Box",
                              "children": [
                                {
                                  "component": "Icon",
                                  "props": {
                                    "name": "expand_more",
                                    "color": "#233a4e",
                                    "size": "smd"
                                  }
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginRight": 10,
                        "flexShrink": 0
                      },
                      "children": [
                        {
                          "component": "Image",
                          "props": {
                            "source": "{{repeater.attributes.PRI_IMAGE_URL.value}}",
                            "height": 50,
                            "width": 50
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "flexDirection": "column",
                        "flex": 1
                      },
                      "children": [
                        {
                          "component": "Box",
                          "props": {
                            "marginBottom": 5
                          },
                          "children": [
                            {
                              "component": "Text",
                              "conditional": {
                                "if": {
                                  "repeater.attributes.PRI_ADDRESS_FULL.value": {
                                    "$exists": true
                                  }
                                },
                                "then": {
                                  "text": "{{repeater.attributes.PRI_ADDRESS_FULL.value}}"
                                },
                                "else": {
                                  "text": "{{repeater.attributes.PRI_APPLICANT_FULLNAME.value}}"
                                }
                              },
                              "props": {
                                "size": "xs",
                                "bold": true
                              }
                            },
                            {
                              "component": "Box",
                              "conditional": {
                                "if": {
                                  "repeater.attributes.STA_PER_USER1.value": {
                                    "$exists": true
                                  }
                                },
                                "then": {
                                  
                                }
                              },
                              "props": {
                                "size": "xs",
                                "backgroundColor": "{{repeater.attributes.STA_PER_USER1.value}}",
                                "height": 40,
                                "width": 10,
                                "borderRadius": 20
                              }
                            }
                          ]
                        },
                        {
                          "component": "Box",
                          "onlyShowIf": {
                            "repeater.attributes.PRI_IS_DEACTIVATED.value": {
                              "$eq": true
                            }
                          },
                          "props": {
                            "marginBottom": 5
                          },
                          "children": [
                            {
                              "component": "Text",
                              "props": {
                                "size": "xxs",
                                "bold": true
                              },
                              "children": "ON HOLD"
                            }
                          ]
                        },
                        {
                          "component": "Box",
                          "onlyShowIf": {
                            "repeater.attributes.PRI_IS_DECLINED.value": {
                              "$eq": true
                            }
                          },
                          "props": {
                            "marginBottom": 5
                          },
                          "children": [
                            {
                              "component": "Text",
                              "props": {
                                "size": "xxs",
                                "bold": true
                              },
                              "children": "REJECTED"
                            }
                          ]
                        },
                        {
                          "component": "Box",
                          "onlyShowIf": {
                            "repeater.attributes.PRI_UNIT_ID.value": {
                              "$exists": true
                            }
                          },
                          "props": {
                            "marginBottom": 5
                          },
                          "children": [
                            {
                              "component": "Text",
                              "props": {
                                "size": "xxs"
                              },
                              "children": "Unit: {{repeater.attributes.PRI_UNIT_ID.value}}"
                            }
                          ]
                        },
                        {
                          "component": "Text",
                          "conditional": {
                            "if": {
                              "repeater.attributes.PRI_GRP_INDENTIFIED_DATE.value": {
                                "$exists": true,
                                "$ne": "undefined"
                              }
                            },
                            "then": {
                              "component": "Date",
                              "format": "[Since] Do MMM YY",
                              "date": "{{repeater.attributes.PRI_GRP_INDENTIFIED_DATE.value}}"
                            },
                            "else": {
                              "if": {
                                "repeater.attributes.PRI_GRP_CONTACTED_DATE.value": {
                                  "$exists": true,
                                  "$ne": "undefined"
                                }
                              },
                              "then": {
                                "component": "Date",
                                "format": "[Contacted on] Do MMM YY",
                                "date": "{{repeater.attributes.PRI_GRP_CONTACTED_DATE.value}}"
                              },
                              "else": {
                                "if": {
                                  "repeater.attributes.PRI_GRP_ACCEPTED_DATE.value": {
                                    "$exists": true,
                                    "$ne": "undefined"
                                  }
                                },
                                "then": {
                                  "component": "Date",
                                  "format": "[Offered on] Do MMM YY",
                                  "date": "{{repeater.attributes.PRI_GRP_ACCEPTED_DATE.value}}"
                                },
                                "else": {
                                  "if": {
                                    "repeater.attributes.PRI_GRP_INSPECTION_DATE.value": {
                                      "$exists": true,
                                      "$ne": "undefined"
                                    }
                                  },
                                  "then": {
                                    "component": "Date",
                                    "format": "[Inspected on] Do MMM YY",
                                    "date": "{{repeater.attributes.PRI_GRP_INSPECTION_DATE.value}}"
                                  },
                                  "else": {
                                    "if": {
                                      "repeater.attributes.PRI_GRP_REPORT_DATE.value": {
                                        "$exists": true,
                                        "$ne": "undefined"
                                      }
                                    },
                                    "then": {
                                      "component": "Date",
                                      "format": "[Shortlisted on] Do MMM YY",
                                      "date": "{{repeater.attributes.PRI_GRP_REPORT_DATE.value}}"
                                    },
                                    "else": {
                                      "if": {
                                        "repeater.attributes.PRI_GRP_COMPLETED_DATE.value": {
                                          "$exists": true,
                                          "$ne": "undefined"
                                        }
                                      },
                                      "then": {
                                        "component": "Date",
                                        "format": "[Applied on] Do MMM YY",
                                        "date": "{{repeater.attributes.PRI_GRP_COMPLETED_DATE.value}}"
                                      },
                                      "else": {
                                        "if": {
                                          "repeater.attributes.PRI_GRP_COMPLETED_DATE.value": {
                                            "$exists": true,
                                            "$ne": "undefined"
                                          }
                                        },
                                        "then": {
                                          "text": "{{repeater.attributes.PRI_GRP_IDENTIFIED_DATE.value}}"
                                        },
                                        "else": {
                                          "text": "{{repeater.attributes.STA_PER_USER1.value}}"
                                        }
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          },
                          "props": {
                            "size": "xxs"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_APPLICATIONS",
      "as": "applications"
    },
    {
      "operator": "scope",
      "path": "applications.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "as": "be",
        "id": "{{link.targetCode}}",
        "filterOutEmpty": false
      }
    },
    {
      "operator": "map",
      "fields": "applications.links"
    },
    {
      "operator": "sort",
      "by": "weight",
      "direction": "asc"
    },
    {
      "operator": "map",
      "fields": "be"
    },
    {
      "operator": "scope",
      "path": "links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "as": "be",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "links",
      "scope": {
        "operator": "find",
        "query": {
          "be.code": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "map",
      "fields": {
        "name": "name",
        "code": "code",
        "items": "links"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "map",
        "fields": "be"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "sort",
        "by": "attributes.PRI_ADDRESS_FULL.value",
        "direction": "asc"
      }
    }
  ]
}
