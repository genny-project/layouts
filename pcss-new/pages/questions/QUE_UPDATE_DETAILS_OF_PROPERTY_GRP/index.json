{
  "layout": {
    "title": "Owner Details",
    "appColor": "white",
    "backgroundColor": "white"
  },
  "children": [
    {
      "component": "Container",
      "props": {
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": 1,
        "height": "100%",
        "maxWidth": 700
      },
      "children": [
        {
            "component": "Box",
            "props": {
                "flex": 1,
                "padding": 40
            },
            "children": [
                {
                    "component": "Image",
                    "props": {
                        "height": 100,
                        "width": 400,
                        "top": 50,
                        "source": "http://www.rms.nsw.gov.au/assets/images/logo.png"
                    }
                }
            ]
        },
        {
          "component": "Box",
          "props": {
            "padding": 10
          },
          "children": [
            {
              "component": "Heading",
              "props": {
                "color": "#0592FD",
                "size": "xxl",
                "bold": false
              },
              "children": "Property Details"
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "padding": 10
          },
          "children": [
            {
              "component": "Text",
              "props": {
                "size": "xs",
                "bold": false
              },
              "children": "The purpose of the survey is to record the current condition of your property before major construction activity begins. The survey will include an inspection and photographs of the inside and outside of any buildings, sheds, garages, fences and paths. Please provide the following details so that an inspection can be arranged."
            }
          ]
        },
        {
          "component": "Form",
          "props": {
            "questionGroupCode": "QUE_UPDATE_DETAILS_OF_PROPERTY_GRP",
            "renderHeading": {
              "component": "Box",
              "props": {
                "marginTop": 20,
                "marginBottom": 20
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "color": "#0592FD",
                    "size": "xl",
                    "text": "{{heading}}"
                  }
                }
              ]
            },
            "renderFormInputLabel": {
            "component": "Box",
            "props": {
              "marginBottom": 5
            },
            "children": [
              {
                "component": "Text",
                "props": {
                  "size": "sm"
                },
                "children": "{{label}}"
              }
            ]
          },
            "renderSubheading": {
              "component": "Box",
              "props": {
                "marginY": 20,
                "marginBottom": 20
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "color": "#0592FD",
                    "size": "lg",
                    "align": "left",
                    "text": "{{subheading}}"
                  }
                }
              ]
            },
            "renderFormInputWrapper": {
              "component": "Box",
              "props": {
                "marginBottom": 20,
                "flexDirection": "column"
              }
            },
            "renderFormInput": {
              "component": "FormInput",
              "useThemeFrom": "Input",
              "variant": "default",
              "props": {
                "placeholder": "{{label}}",
                "borderWidth": 1,
                "borderColor": "lightgray",
                "borderRadius": 3
              }
            },
            "renderLoading": {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "ActivityIndicator",
                  "props": {
                    "size": "large"
                  }
                },
                {
                  "component": "Box",
                  "props": {
                    "marginTop": 10
                  },
                  "children": [
                    {
                      "component": "Text",
                      "props": {
                        "text": "Loading form..."
                      }
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
