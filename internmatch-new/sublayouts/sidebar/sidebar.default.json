{
  "rootCode": "GRP_ROOT",
  "width": 80,
  "flex": 1,
  "inline": true,
  "backgroundColor": "#233a4e",
  "openProps": {
    "width": 300
  },
  "renderBody": {
    "component": "Box",
    "conditional": {
      "if": {
        "sidebar.left.isOpen": {
          "$eq": true
        }
      },
      "then": {
        "width": 300
      },
      "else": {
        "width": 80
      }
    },
    "props": {
      "position": "fixed",
      "height": "100vh",
      "left": 0,
      "top": 0,
      "flexDirection": "column",
      "transition": "300ms ease all",
      "backgroundColor": "#233a4e"
    },
    "children": [
      {
        "component": "Box",
        "conditional": {
          "if": {
            "sidebar.left.isOpen": {
              "$eq": true
            }
          },
          "then": {
            "paddingRight": 10,
            "paddingTop": 15,
            "justifyContent": "space-between"
          },
          "else": {
            "paddingTop": 20,
            "justifyContent": "center"
          }
        },
        "props": {
          "paddingBottom": 0,
          "height": 115
        },
        "children": [
          {
            "component": "Box",
            "onlyShowIf": {
              "sidebar.left.isOpen": {
                "$eq": true
              }
            },
            "props": {
              "flex": 1,
              "justifyContent": "center"
            },
            "children": [
              {
                "component": "Image",
                "props": {
                  "source": "https://puu.sh/BB7km.png",
                  "height": 80
                }
              }
            ]
          },
          {
            "component": "Touchable",
            "props": {
              "withFeedback": true,
              "onPress": "_onToggle"
            },
            "children": {
              "component": "Icon",
              "props": {
                "color": "white",
                "name": "menu"
              },
              "conditional": {
                "if": {
                  "sidebar.left.isOpen": {
                    "$eq": true
                  }
                },
                "then": {
                  "name": "close"
                }
              }
            }
          }
        ]
      },
      {
        "component":"ScrollView",
        "props":{
           "style":{
              "flex":1,
              "backgroundColor":"green"
           }
        },
        "children":[
          {
            "component": "Box",
            "props": {
              "flexDirection": "column"
            },
            "repeat": "_items",
            "children": {
              "component": "Box",
              "props": {

              },
              "children": [
                {
                  "component": "Sublayout",
                  "onlyShowIf": {
                    "repeater.isDropdown": {
                      "$eq": true
                    }
                  },
                  "props": {
                    "layoutName": "sidebar/sidebar.dropdown",
                    "item": "_repeater",
                    "isSidebarOpen": "_sidebar.left.isOpen"
                  }
                },
                {
                  "component": "Sublayout",
                  "dontShowIf": {
                    "repeater.isDropdown": {
                      "$eq": true
                    }
                  },
                  "props": {
                    "layoutName": "sidebar/sidebar.card",
                    "item": "_repeater",
                    "isSidebarOpen": "_sidebar.left.isOpen"
                  }
                }
              ]
            }
          }
        ]
      }
    ]
  },
  "sortBy": "weight",
  "sortDirection": "asc"
}
