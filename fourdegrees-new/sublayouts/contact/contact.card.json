{
  "layout": {
    "title": "Profile Employment",
    "appColor": "dark"
  },
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "row",
        "backgroundColor": "white",
        "flex": 1,
        "padding": 20,
        "marginBottom": 10
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "marginRight": 20,
            "alignItems": "center"
          },
          "children": [
            {
              "component": "Image",
              "props": {
                "source": "{{props.contactImage}}",
                "shape": "circle",
                "width": 60,
                "height": 60
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "flex": 1,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "marginBottom": 5
              },
              "children": [
                {
                  "component": "Text",
                  "props": {
                    "text": "{{props.contactName}}",
                    "color": "grey",
                    "size": "xs"
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {},
              "children": [
                {
                  "component": "Text",
                  "props": {
                    "text": "{{props.contactCompany}}",
                    "color": "black",
                    "size": "xs"
                  }
                }
              ]
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "marginleft": 20,
            "alignItems": "center"
          },
          "children": [
            {
              "component": "Box",
              "props": {},
              "children": [
                {
                  "component": "Icon",
                  "props": {
                    "color": "black",
                    "size": "md",
                    "name": "chevron-right"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{props.contactID}}",
      "as": "be"
    },
    {
      "operator": "map",
      "fields": "be"
    },
    {
      "operator": "populateAttributes",
      "code": "{{props.contactID}}}",
      "as": "attributes"
    }
  ]
}
