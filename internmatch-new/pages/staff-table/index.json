{
  "layout": {
    "title": "Staffs",
    "appColor": "white",
    "backgroundColor": "whitesmoke",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Box",
      "children": [
        {
          "component": "Table",
          "props": {
            "columns": [
              {
                "Header": "Actions",
                "accessor": "actions",
                "buttonComponent": [
                  {
                    "text": "View",
                    "layoutName": "user-profile",
                    "btnCode": "BTN_EDIT_STAFF"
                  }
              ]
              },
              {
                "Header": "Mobile Phone",
                "accessor": "mobilePhone",
                "filterType": "number"
              },
              {
                "Header": "Username",
                "accessor": "email",
                "filterType": "string"
              }
            ],
            "tableBackgroundColor": "#cccccc",
            "data": "_query.tableData",
            "height": "500px",
            "width": "500px",
            "itemsPerPage": 15
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_STAFFS",
      "as": "staffs"
    },
    {
      "operator": "scope",
      "path": "staffs.links",
      "as": "staffs",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}",
        "as": "be"
      }
    },
    {
      "operator": "scope",
      "path": "staffs",
      "scope": {
        "operator": "scope",
        "path": "be",
        "scope": {
          "operator": "populateBEGAttributes",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "staffs",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          
          "fullName": "be.attributes.PRI_NAME.value",
          "mobilePhone": "be.attributes.PRI_MOBILE.value",
          "email": "be.attributes.PRI_USERNAME.value",
          "attributeCode": "code"

        }
      }
    }
  ]
}
