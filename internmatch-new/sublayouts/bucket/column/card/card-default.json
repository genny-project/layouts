{
  "children": [
    {
      "component": "Selectable",
      "props": {
        "padding": 0,
        "paddingX": 0,
        "paddingY": 0,
        "width": "100%",
        "key": "{{props.cardData.code}}",
        "eventType": "BTN_CLICK",
        "buttonCode": "SELECT_EVENT",
        "value": {
          "itemCode": "{{repeater.code}}",
          "userCode": "{{user.data.code}}"
        },
        "selectionProps": "_selection",
        "id": "{{props.cardData.code}}",
        "item": "_props.cardData"
      },
      "conditional": {
        "if": {
          "selection.selectedItem": {
            "$eq": "{{props.cardData.code}}"
          }
        },
        "then": {
          "buttonCode": "DESELECT_EVENT"
        },
        "else": {
          "buttonCode": "SELECT_EVENT"
        }
      },
      "children": [
        {
          "component": "Box",
          "conditional": {
            "if": {
              "selection.selectedItem": {
                "$eq": "{{props.cardData.code}}"
              }
            },
            "then": {
              "borderColor": "#1597c5"
            },
            "else": {
              "borderColor": "#fff"
            }
          },
          "props": {
            "borderLeftWidth": 5,
            "borderStyle": "solid",
            "width": "100%",
            "backgroundColor": "#ffffff",
            "padding": 10,
            "paddingRight": 35,
            "key": "{{props.cardData.code}}",
            "position": "relative"
          },
          "children": [
            {
              "component": "Box",
              "dontShowIf": {
                "props.cardData.code": {
                  "$exists": true
                }
              },
              "props": {
                "padding": 15,
                "width": "100%",
                "justifyContent": "center"
              },
              "children": [
                {
                  "component": "ActivityIndicator",
                  "props": {
                    "size": "small"
                  }
                }
              ]
            },
            {
              "component": "Box",
              "onlyShowIf": {
                "props.cardData.code": {
                  "$exists": true
                }
              },
              "conditional": {
                "if": {
                  "$or": [
                    {
                      "props.cardData.attributes.PRI_IS_DEACTIVATED.value": {
                        "$eq": true
                      }
                    },
                    {
                      "props.cardData.attributes.PRI_IS_DECLINED.value": {
                        "$eq": true
                      }
                    }
                  ]
                },
                "then": {
                  "opacity": 0.7
                }
              },
              "props": {
                "width": "100%",
                "position": "static"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "position": "absolute",
                    "right": 5,
                    "top": 5,
                    "zIndex": 5
                  },
                  "children": [
                    {
                      "component": "Sublayout",
                      "props": {
                        "layoutName": "bucket/column/card/dropdown/dropdown-default",
                        "cardData": "_repeater"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {
                    "marginRight": 10,
                    "flexShrink": 0
                  },
                  "children": [
                    {
                      "component": "Image",
                      "props": {
                        "source": "{{repeater.applicant.attributes.PRI_IMAGE_URL.value}}",
                        "height": 50,
                        "width": 50
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {
                    "flexDirection": "column",
                    "flex": 1
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 5
                      },
                      "children": [
                        {
                          "component": "Text",
                          "conditional": {
                            "if": {
                              "repeater.attributes.PRI_NAME.value": {
                                "$exists": true
                              }
                            },
                            "then": {
                              "text": "{{repeater.attributes.PRI_NAME.value}}"
                            },
                            "else": {
                              "text": "{{repeater.attributes.PRI_APPLICANT_FULLNAME.value}}"
                            }
                          },
                          "props": {
                            "size": "xs",
                            "bold": true
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "onlyShowIf": {
                        "repeater.attributes.PRI_IS_DEACTIVATED.value": {
                          "$eq": true
                        }
                      },
                      "props": {
                        "marginBottom": 5
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "size": "xxs",
                            "bold": true
                          },
                          "children": "ON HOLD"
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "onlyShowIf": {
                        "repeater.attributes.PRI_IS_DECLINED.value": {
                          "$eq": true
                        }
                      },
                      "props": {
                        "marginBottom": 5
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "size": "xxs",
                            "bold": true
                          },
                          "children": "REJECTED"
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "onlyShowIf": {
                        "repeater.attributes.PRI_STUDENT_ID.value": {
                          "$exists": true
                        }
                      },
                      "props": {
                        "marginBottom": 5
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "size": "xxs"
                          },
                          "children": "ID: {{repeater.attributes.PRI_STUDENT_ID.value}}"
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 5
                      },
                      "onlyShowIf": {
                        "repeater.attributes.PRI_EDU_PROVIDER_NAME.value": {
                          "$exists": true
                        }
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "size": "xxs"
                          },
                          "children": "{{repeater.attributes.PRI_EDU_PROVIDER_NAME.value}}"
                        }
                      ]
                    },
                    {
                      "component": "Text",
                      "conditional": {
                        "if": {
                          "repeater.attributes.PRI_GRP_IN_PROGRESS_DATE.value": {
                            "$exists": true,
                            "$ne": "undefined"
                          }
                        },
                        "then": {
                          "component": "Date",
                          "format": "[Since] Do MMM YY",
                          "date": "{{repeater.attributes.PRI_GRP_IN_PROGRESS_DATE.value}}"
                        },
                        "else": {
                          "if": {
                            "repeater.attributes.PRI_GRP_PLACED_DATE.value": {
                              "$exists": true,
                              "$ne": "undefined"
                            }
                          },
                          "then": {
                            "component": "Date",
                            "format": "[Placed on] Do MMM YY",
                            "date": "{{repeater.attributes.PRI_GRP_PLACED_DATE.value}}"
                          },
                          "else": {
                            "if": {
                              "repeater.attributes.PRI_GRP_OFFERED_DATE.value": {
                                "$exists": true,
                                "$ne": "undefined"
                              }
                            },
                            "then": {
                              "component": "Date",
                              "format": "[Offered on] Do MMM YY",
                              "date": "{{repeater.attributes.PRI_GRP_OFFERED_DATE.value}}"
                            },
                            "else": {
                              "if": {
                                "repeater.attributes.PRI_GRP_INTERVIEWS_DATE.value": {
                                  "$exists": true,
                                  "$ne": "undefined"
                                }
                              },
                              "then": {
                                "component": "Date",
                                "format": "[Interviewed on] Do MMM YY",
                                "date": "{{repeater.attributes.PRI_GRP_INTERVIEWS_DATE.value}}"
                              },
                              "else": {
                                "if": {
                                  "repeater.attributes.PRI_GRP_SHORTLISTED_DATE.value": {
                                    "$exists": true,
                                    "$ne": "undefined"
                                  }
                                },
                                "then": {
                                  "component": "Date",
                                  "format": "[Shortlisted on] Do MMM YY",
                                  "date": "{{repeater.attributes.PRI_GRP_SHORTLISTED_DATE.value}}"
                                },
                                "else": {
                                  "if": {
                                    "repeater.attributes.PRI_GRP_APPLIED_DATE.value": {
                                      "$exists": true,
                                      "$ne": "undefined"
                                    }
                                  },
                                  "then": {
                                    "component": "Date",
                                    "format": "[Applied on] Do MMM YY",
                                    "date": "{{repeater.attributes.PRI_GRP_APPLIED_DATE.value}}"
                                  },
                                  "else": {
                                    "if": {
                                      "repeater.attributes.PRI_MOBILE.value": {
                                        "$exists": true,
                                        "$ne": "undefined"
                                      }
                                    },
                                    "then": {
                                      "text": "{{repeater.attributes.PRI_MOBILE.value}}"
                                    },
                                    "else": {
                                      "text": "No mobile number on record"
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      },
                      "props": {
                        "size": "xxs"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}