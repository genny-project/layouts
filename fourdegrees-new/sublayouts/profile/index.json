{
  "layout": {
    "title": "Profile",
    "appColor": "dark"
  },
  "children": [
    {
      "component": "ScrollView",
      "props": {
        "width": "100%"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flex": 1,
            "flexDirection": "column",
            "backgroundColor": "#f8f8f8"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "flex": 1,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Image",
                  "props": {
                    "height": 400,
                    "width": "100%",
                    "source":
                      "{{query.profile.attributes.PRI_IMAGE_URL.value}}"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "flex": 1,
                        "height": "100%",
                        "flexDirection": "column",
                        "justifyContent": "flex-end",
                        "top": 0
                      },
                      "children": [
                        {
                          "component": "Box",
                          "props": {
                            "width": "100%",
                            "backgroundColor": "rgba(0,0,0,0.4)",
                            "padding": 20
                          },
                          "children": [
                            {
                              "component": "Box",
                              "props": {
                                "flexDirection": "column"
                              },
                              "children": [
                                {
                                  "component": "Heading",
                                  "props": {
                                    "text":
                                      "{{query.profile.attributes.PRI_FIRSTNAME.value}} {{query.profile.attributes.PRI_LASTNAME.value}}",
                                    "color": "white",
                                    "size": "xl"
                                  }
                                },
                                {
                                  "component": "Text",
                                  "props": {
                                    "text": "Not Connected",
                                    "color": "white",
                                    "size": "xs"
                                  },
                                  "conditional": [
                                    {
                                      "if": {
                                        "navigation.degree": 1
                                      },
                                      "then": {
                                        "text": "Connected - 1st Degree"
                                      }
                                    },
                                    {
                                      "if": {
                                        "navigation.degree": 2
                                      },
                                      "then": {
                                        "text": "Connected - 2nd Degree"
                                      }
                                    },
                                    {
                                      "if": {
                                        "navigation.degree": 3
                                      },
                                      "then": {
                                        "text": "Connected - 3rd Degree"
                                      }
                                    },
                                    {
                                      "if": {
                                        "navigation.degree": 4
                                      },
                                      "then": {
                                        "text": "Connected - 4th Degree"
                                      }
                                    },
                                    {
                                      "if": {
                                        "user.data.code": "{{props.userID}}"
                                      },
                                      "then": {
                                        "text": ""
                                      }
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "component": "Box",
                              "props": {
                                "flex": 1,
                                "justifyContent": "flex-end",
                                "alignItems": "center"
                              },
                              "children": [
                                {
                                  "component": "EventButton",
                                  "props": {
                                    "eventType": "ROUTE_CHANGE",
                                    "buttonCode": "profile/add-details",
                                    "color": "transparent",
                                    "paddingY": 0,
                                    "paddingX": 0
                                  },
                                  "onlyShowIf": {
                                    "user.data.code": "{{props.userID}}"
                                  },
                                  "children": [
                                    {
                                      "component": "Icon",
                                      "props": {
                                        "name": "image",
                                        "color": "white",
                                        "size": "md"
                                      }
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flex": 1,
                "flexDirection": "column",
                "backgroundColor": "#f8f8f8"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "flex": 1,
                    "flexDirection": "column"
                  },
                  "dontShowIf": {
                    "user.data.code": "{{props.userID}}"
                  },
                  "children": [
                    {
                      "component": "EventLink",
                      "props": {
                        "eventType": "ROUTE_CHANGE",
                        "value": "{{props.userID}}",
                        "to": "introduction",
                        "params": {
                          "targetUserID": "{{props.userID}}"
                        }
                      },
                      "children": [
                        {
                          "component": "Box",
                          "props": {
                            "width": "100%",
                            "flexDirection": "row",
                            "alignItems": "center",
                            "backgroundColor": "white",
                            "paddingX": 10,
                            "paddingY": 20
                          },
                          "children": [
                            {
                              "component": "Box",
                              "props": {
                                "marginRight": 10
                              },
                              "children": [
                                {
                                  "component": "Icon",
                                  "props": {
                                    "name": "hdr-strong",
                                    "color": "black",
                                    "size": "sm"
                                  }
                                }
                              ]
                            },
                            {
                              "component": "Text",
                              "props": {
                                "text": "Introduce Me",
                                "color": "black",
                                "size": "xs"
                              },
                              "conditional": [
                                {
                                  "if": {
                                    "navigation.degree": 1
                                  },
                                  "then": {
                                    "text": "Introduce {{query.profile.attributes.PRI_FIRSTNAME.value}}"
                                  }
                                }
                              ]
                            },
                            {
                              "component": "Box",
                              "props": {
                                "marginLeft": "auto"
                              },
                              "children": [
                                {
                                  "component": "Icon",
                                  "props": {
                                    "name": "chevron-right",
                                    "color": "black",
                                    "size": "md"
                                  }
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {
                    "flex": 1,
                    "flexDirection": "column",
                    "paddingX": 20,
                    "paddingY": 10
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 10,
                        "flexDirection": "row",
                        "justifyContent": "space-between"
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "color": "black",
                            "size": "sm",
                            "text": "Summary"
                          }
                        },
                        {
                          "component": "EventButton",
                          "props": {
                            "eventType": "ROUTE_CHANGE",
                            "buttonCode": "profile/add-summary",
                            "color": "transparent",
                            "paddingY": 0,
                            "paddingX": 0
                          },
                          "onlyShowIf": {
                            "user.data.code": "{{props.userID}}"
                          },
                          "children": [
                            {
                              "component": "Icon",
                              "props": {
                                "name": "edit",
                                "color": "#202532",
                                "size": "sm"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 20
                      },
                      "onlyShowIf": {
                        "query.profile.attributes.PRI_MOBILE.value": {
                          "$exists": true
                        }
                      },
                      "children": [
                        {
                          "component": "Heading",
                          "props": {
                            "text": "Phone",
                            "color": "black",
                            "size": "xs"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 20
                      },
                      "onlyShowIf": {
                        "query.profile.attributes.PRI_MOBILE.value": {
                          "$exists": true
                        }
                      },
                      "conditional": {
                        "if": {
                          "query.profile.attributes.PRI_PHONE_ADDITIONAL.value": {
                            "$exists": true
                          }
                        },
                        "then": {
                          "marginBottom": 0
                        }
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "text": "{{query.profile.attributes.PRI_MOBILE.value}}",
                            "color": "black",
                            "size": "xs"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "flexDirection": "column",
                        "marginBottom": 20
                      },
                      "onlyShowIf": {
                        "query.profile.attributes.PRI_PHONE_ADDITIONAL.value": {
                          "$exists": true
                        }
                      },
                      "repeat": "_query.profile.attributes.PRI_PHONE_ADDITIONAL.value",
                      "children": {
                        "component": "Text",
                        "props": {
                          "text": "{{repeater}}",
                          "color": "black",
                          "size": "xs"
                        }
                      }
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 20
                      },
                      "onlyShowIf": {
                        "query.profile.attributes.PRI_WEBSITE.value": {
                          "$exists": true
                        }
                      },
                      "children": [
                        {
                          "component": "Heading",
                          "props": {
                            "text": "Website",
                            "color": "black",
                            "size": "xs"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 20
                      },
                      "onlyShowIf": {
                        "query.profile.attributes.PRI_WEBSITE.value": {
                          "$exists": true
                        }
                      },
                      "conditional": {
                        "if": {
                          "query.profile.attributes.PRI_WEBSITE_ADDITIONAL.value": {
                            "$exists": true
                          }
                        },
                        "then": {
                          "marginBottom": 0
                        }
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "text": "{{query.profile.attributes.PRI_WEBSITE.value}}",
                            "color": "black",
                            "size": "xs"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "flexDirection": "column",
                        "marginBottom": 20
                      },
                      "onlyShowIf": {
                        "query.profile.attributes.PRI_WEBSITE_ADDITIONAL.value": {
                          "$exists": true
                        }
                      },
                      "repeat": "_query.profile.attributes.PRI_WEBSITE_ADDITIONAL.value",
                      "children": {
                        "component": "Text",
                        "props": {
                          "text": "{{repeater}}",
                          "color": "black",
                          "size": "xs"
                        }
                      }
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 20
                      },
                      "onlyShowIf": {
                        "query.profile.attributes.PRI_EMAIL.value": {
                          "$exists": true
                        }
                      },
                      "children": [
                        {
                          "component": "Heading",
                          "props": {
                            "text": "Email",
                            "color": "black",
                            "size": "xs"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 20
                      },
                      "onlyShowIf": {
                        "query.profile.attributes.PRI_EMAIL.value": {
                          "$exists": true
                        }
                      },
                      "conditional": {
                        "if": {
                          "query.profile.attributes.PRI_EMAIL_ADDITIONAL.value": {
                            "$exists": true
                          }
                        },
                        "then": {
                          "marginBottom": 0
                        }
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "text": "{{query.profile.attributes.PRI_EMAIL.value}}",
                            "color": "black",
                            "size": "xs"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "flexDirection": "column",
                        "marginBottom": 20
                      },
                      "onlyShowIf": {
                        "query.profile.attributes.PRI_EMAIL_ADDITIONAL.value": {
                          "$exists": true
                        }
                      },
                      "repeat": "_query.profile.attributes.PRI_EMAIL_ADDITIONAL.value",
                      "children": {
                        "component": "Text",
                        "props": {
                          "text": "{{repeater}}",
                          "color": "black",
                          "size": "xs"
                        }
                      }
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 20
                      },
                      "onlyShowIf": {
                        "query.profile.attributes.PRI_MOBILE": {
                          "$exists": false
                        },
                        "query.profile.attributes.PRI_PHONE_ADDITIONAL": {
                          "$exists": false
                        },
                        "query.profile.attributes.PRI_EMAIL": {
                          "$exists": false
                        },
                        "query.profile.attributes.PRI_EMAIL_ADDITIONAL": {
                          "$exists": false
                        },
                        "query.profile.attributes.PRI_WEBSITE": {
                          "$exists": false
                        },
                        "query.profile.attributes.PRI_WEBSITE_ADDITIONAL": {
                          "$exists": false
                        }
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "text": "No contact information to show.",
                            "color": "black",
                            "size": "xs"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 20
                      },
                      "children": [
                        {
                          "component": "Text",
                          "conditional": {
                            "if": {
                              "query.profile.attributes.PRI_DESCRIPTION.value": {
                                "$exists": true
                              }
                            },
                            "then": {
                              "text": "{{query.profile.attributes.PRI_DESCRIPTION.value}}"
                            },
                            "else": {
                              "text": "No description to show."
                            }
                          },
                          "props": {
                            "color": "black",
                            "size": "xs"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Link",
                      "props": {
                        "style": {
                          "width": "100%"
                        },
                        "to": "profile/profile-bio",
                        "params": {
                          "userID": "{{props.userID}}"
                        }
                      },
                      "children": [
                        {
                          "component": "Box",
                          "props": {
                            "marginBottom": 10
                          },
                          "children": [
                            {
                              "component": "Label",
                              "props": {
                                "text": "Read Full Bio",
                                "color": "black",
                                "fontWeight": "bold",
                                "size": "xs"
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flex": 1,
                "flexDirection": "row"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "flex": 1,
                    "backgroundColor": "#202532",
                    "justifyContent": "center",
                    "paddingX": 20,
                    "paddingY": 30
                  },
                  "children": [
                    {
                      "component": "Label",
                      "props": {
                        "text": "Individual",
                        "color": "white",
                        "size": "xs"
                      }
                    }
                  ]
                },
                {
                  "component": "Link",
                  "props": {
                    "style": {
                      "flex": 1
                    },
                    "to": "profile/profile-business",
                    "params": {
                      "userID": "{{props.userID}}"
                    }
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "flex": 1,
                        "backgroundColor": "white",
                        "justifyContent": "center",
                        "paddingX": 20,
                        "paddingY": 30
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "text": "Business",
                            "color": "black",
                            "size": "xs"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flex": 1,
                "paddingY": 10
              },
              "children": [
                {
                  "component": "Tabs",
                  "props": {
                    "scrollEnabled": true,
                    "showDots": true,
                    "restrictSceneHeights": true,
                    "activeTabBackground": "#202532",
                    "tabBarBackground": "white",
                    "labelColor": "#202532",
                    "labelProps": {
                      "fontWeight": "bold"
                    },
                    "indicatorProps": {
                      "height": 5
                    },
                    "sceneProps": {
                      "marginTop": 0
                    },
                    "tabs": [
                      {
                        "key": 0,
                        "route": "Skills",
                        "title": "Skills"
                      },
                      {
                        "key": 1,
                        "route": "Services",
                        "title": "Services"
                      },
                      {
                        "key": 2,
                        "route": "Products",
                        "title": "Products"
                      },
                      {
                        "key": 3,
                        "route": "Interests",
                        "title": "Interests"
                      },
                      {
                        "key": 4,
                        "route": "Groups",
                        "title": "Groups & Associations"
                      },
                      {
                        "key": 5,
                        "route": "Employment",
                        "title": "Employment"
                      },
                      {
                        "key": 6,
                        "route": "Education",
                        "title": "Education"
                      }
                    ]
                  },
                  "children": [
                    {
                      "component": "Sublayout",
                      "props": {
                        "layoutName": "profile/profile.skills",
                        "userID": "{{props.userID}}"
                      }
                    },
                    {
                      "component": "Sublayout",
                      "props": {
                        "layoutName": "profile/profile.services",
                        "userID": "{{props.userID}}"
                      }
                    },
                    {
                      "component": "Sublayout",
                      "props": {
                        "layoutName": "profile/profile.products",
                        "userID": "{{props.userID}}"
                      }
                    },
                    {
                      "component": "Sublayout",
                      "props": {
                        "layoutName": "profile/profile.interests",
                        "userID": "{{props.userID}}"
                      }
                    },
                    {
                      "component": "Sublayout",
                      "props": {
                        "layoutName": "profile/profile.groups",
                        "userID": "{{props.userID}}"
                      }
                    },
                    {
                      "component": "Sublayout",
                      "props": {
                        "layoutName": "profile/profile.employment",
                        "userID": "{{props.userID}}"
                      }
                    },
                    {
                      "component": "Sublayout",
                      "props": {
                        "layoutName": "profile/profile.education",
                        "userID": "{{props.userID}}"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "padding": 10,
                "marginBottom": 10
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "flex": 1,
                    "backgroundColor": "#202532",
                    "justifyContent": "center",
                    "padding": 15
                  },
                  "children": [
                    {
                      "component": "Label",
                      "props": {
                        "text": "Message",
                        "color": "white",
                        "size": "xs"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{props.userID}}",
      "as": "profile"
    },
    {
      "operator": "scope",
      "path": "profile",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "profile.links",
      "as": "requests",
      "scope": {
        "operator": "find",
        "query": {
          "valueString": {
            "$eq": "REQUEST"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "requests",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    }
  ]
}
