{
  "layout": {
    "title": "Pages/Accepted Properties View",
    "appColor": "white",
    "backgroundColor": "whitesmoke",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    },
    "sidebarRight": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Box",
      "props": {
        "width": "100%"
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "tables/table-default",     
            "columns": [
              {
                "Header": "Action",
                "editable": true,
                "accessor": "actions",
                "renderButton": [
                  {
                    "component": "EventButton",
                    "props": {
                      "buttonCode": "BTN_VIEW_APPLICATION",
                      "color": "#5fa5ec",
                      "textColor": "#fff",
                      "height": 25,
                      "width": "100%",
                      "text": "Property Details",
                      "padding": 10,
                      "size": "xs",
                      "hoverProps": {
                        "color": "#d2e8ff"
                      },
                      "value": {
                        "itemCode":"{{code}}",
                        "hint": "BTN_VIEW_APPLICATION"
                      }
                    }
                  }
                ]
              },
              {
                "Header": "Unit Number",
                "accessor": "unitid",
                "filterType": "string"
              },
              {
                "Header": "Address Of Property",
                "accessor": "address",
                "filterType": "string"
              }
            ],
            "tableBackgroundColor": "#e05b5b",
            "data": "_query.tableData",
            "rootCode": "GRP_REQUESTED"
           
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_REQUESTED",
      "as": "acceptedProperties"
    },
    {
      "operator": "scope",
      "path": "acceptedProperties.links",
      "as": "acceptedProperties",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}",
        "as": "properties"
      }
    },
    {
      "operator": "scope",
      "path": "acceptedProperties",
      "scope": {
        "operator": "scope",
        "path": "properties",
        "scope": {
          "operator": "populateBEGAttributes",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "acceptedProperties",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "address": "properties.attributes.PRI_ADDRESS_FULL.value",
          "unitid": "properties.attributes.PRI_UNIT_ID.value",
          "code": "properties.code"
        }
      }
    }
  ]
}
