{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "backgroundColor": "#f6f6f6",
        "padding": 20,
        "flex": 1
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "application/details/header",
            "showBackButton": "_props.showBackButton"
          }
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "marginBottom": 20
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "marginRight": 20
              },
              "children": [
                {
                  "component": "Image",
                  "props": {
                    "source": "{{props.application.APPLICANT.attributes.PRI_IMAGE_URL.value}}",
                    "width": 100,
                    "height": 100
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 10
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "props": {
                        "text": "{{props.application.APPLICANT.attributes.PRI_NAME.value}}",
                        "bold": true
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "children": [
                    {
                      "component": "Date",
                      "props": {
                        "date": "_props.application.created",
                        "format": "[Submitted on] Do MMM YYYY"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "marginBottom": 20,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "marginBottom": 20,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 10
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "children": "Preferred skills"
                    }
                  ]
                },
                {
                  "component": "Box",
                  "onlyShowIf": {
                    "props.internshipSkills": {
                      "$exists": true,
                      "$ne": "undefined",
                      "$size": {
                        "$gt": 0
                      }
                    }
                  },
                  "props": {
                    "flexDirection": "column"
                  },
                  "repeat": "_props.internshipSkills",
                  "children": {
                    "component": "Box",
                    "props": {
                      "marginRight": 15
                    },
                    "children": [
                      {
                        "component": "Text",
                        "children": "{{repeater}}"
                      }
                    ]
                  }
                },
                {
                  "component": "Text",
                  "dontShowIf": {
                    "props.internshipSkills": {
                      "$exists": true,
                      "$ne": "undefined",
                      "$size": {
                        "$gt": 0
                      }
                    }
                  },
                  "children": "None"
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "marginBottom": 20,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 10
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "children": "Internship description"
                    }
                  ]
                },
                {
                  "component": "Text",
                  "children": "{{props.internshipDescription}}"
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 10
                  },
                  "children": [
                    {
                      "component": "Text",
                      "text": "Learning outcomes"
                    }
                  ]
                },
                {
                  "component": "DisplayHTML",
                  "conditional": {
                    "if": {
                      "props.internshipLearningOutcomes": {
                        "$exists": true,
                        "$ne": "undefined"
                      }
                    },
                    "then": {
                      "html": "{{props.internshipLearningOutcomes}}"
                    },
                    "else": {
                      "html": "None"
                    }
                  }
                }
              ]
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "marginBottom": 20
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 20
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginRight": 15
                      },
                      "children": [
                        {
                          "component": "Icon",
                          "props": {
                            "name": "person",
                            "color": "black"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Text",
                      "children": "{{props.studentName}} ({{props.studentName}})"
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 20
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginRight": 15
                      },
                      "children": [
                        {
                          "component": "Icon",
                          "props": {
                            "name": "school",
                            "color": "black"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Text",
                      "conditional": {
                        "if": {
                          "props.application.attributes.PRI_STUDENT_ID.value": {
                            "$exists": true,
                            "$ne": "undefined"
                          }
                        },
                        "then": {
                          "text": "Student ID: {{props.application.attributes.PRI_STUDENT_ID.value}}"
                        },
                        "else": {
                          "text": "No student ID"
                        }
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 20
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginRight": 15
                      },
                      "children": [
                        {
                          "component": "Icon",
                          "props": {
                            "name": "mail",
                            "color": "black"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Text",
                      "conditional": {
                        "if": {
                          "props.application.attributes.PRI_EMAIL.value": {
                            "$exists": true,
                            "$ne": "undefined"
                          }
                        },
                        "then": {
                          "text": "{{props.application.attributes.PRI_EMAIL.value}}"
                        },
                        "else": {
                          "text": "No email"
                        }
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 20
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginRight": 15
                      },
                      "children": [
                        {
                          "component": "Icon",
                          "props": {
                            "name": "call",
                            "color": "black"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Text",
                      "conditional": {
                        "if": {
                          "props.mobilePhone": {
                            "$exists": true,
                            "$ne": "undefined"
                          }
                        },
                        "then": {
                          "text": "{{props.mobilePhone}}"
                        },
                        "else": {
                          "text": "No phone number"
                        }
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginRight": 15
                      },
                      "children": [
                        {
                          "component": "Icon",
                          "props": {
                            "name": "event",
                            "color": "black"
                          }
                        }
                      ]
                    },
                    {
                      "component": "Text",
                      "conditional": {
                        "if": {
                          "props.application.attributes.PRI_DOB.value": {
                            "$exists": true,
                            "$ne": "undefined"
                          }
                        },
                        "then": {
                          "text": "Born {{props.application.attributes.PRI_DOB.value}}"
                        },
                        "else": {
                          "text": "No date of birth"
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "marginBottom": 20,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 10
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "children": "Occupation"
                    }
                  ]
                },
                {
                  "component": "Box",
                  "onlyShowIf": {
                    "props.occupation": {
                      "$exists": true,
                      "$ne": "undefined",
                      "$size": {
                        "$gt": 0
                      }
                    }
                  },
                  "props": {
                    "flexDirection": "column"
                  },
                  "repeat": "_props.occupation",
                  "children": {
                    "component": "Box",
                    "props": {
                      "marginRight": 15
                    },
                    "children": [
                      {
                        "component": "Text",
                        "children": "{{repeater}}"
                      }
                    ]
                  }
                },
                {
                  "component": "Text",
                  "dontShowIf": {
                    "props.application.attributes.LNK_OCCUPATION.value": {
                      "$exists": true,
                      "$ne": "undefined",
                      "$size": {
                        "$gt": 0
                      }
                    }
                  },
                  "children": "No occupation"
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "marginBottom": 20,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 10
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "children": "Education provider"
                    }
                  ]
                },
                {
                  "component": "Box",
                  "onlyShowIf": {
                    "props.application.attributes.LNK_EDU_PROVIDER.value": {
                      "$exists": true,
                      "$ne": "undefined",
                      "$size": {
                        "$gt": 0
                      }
                    }
                  },
                  "props": {
                    "flexDirection": "column"
                  },
                  "repeat": "_props.application.attributes.LNK_EDU_PROVIDER.value",
                  "children": {
                    "component": "Box",
                    "props": {
                      "marginRight": 15
                    },
                    "children": [
                      {
                        "component": "Text",
                        "children": "{{repeater}}"
                      }
                    ]
                  }
                },
                {
                  "component": "Text",
                  "dontShowIf": {
                    "props.application.attributes.LNK_EDU_PROVIDER.value": {
                      "$exists": true,
                      "$ne": "undefined",
                      "$size": {
                        "$gt": 0
                      }
                    }
                  },
                  "children": "No education provider"
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 10
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "children": "Industry"
                    }
                  ]
                },
                {
                  "component": "Text",
                  "conditional": {
                    "if": {
                      "props.industry": {
                        "$exists": true,
                        "$ne": "undefined"
                      }
                    },
                    "then": {
                      "text": "{{props.industry}}"
                    },
                    "else": {
                      "text": "No industry"
                    }
                  }
                }
              ]
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "#FFF",
            "marginY": 21
          },
          "children":[
            {
              "component": "Sublayout",
              "props": {
                "layoutName": "timeline",
                "navigationId": "{{props.id}}"
              }
            }
          ]
        }
      ]
    }
  ]
}
