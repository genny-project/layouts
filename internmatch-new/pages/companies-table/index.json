{
  "layout": {
    "title": "All Companies",
    "appColor": "white",
    "backgroundColor": "whitesmoke",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    },
    "sidebarRight": {
      "variant": "default",
      "onlyShowIf": {
        "$or": [
          {
            "user.attributes.PRI_IS_AGENT.value": {
              "$eq": true
            }
          },
          {
            "user.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
              "$eq": true
            }
          },
          {
            "user.attributes.PRI_IS_BUYER.value": {
              "$eq": true
            }
          }
        ]
      }
    }
  },
  "children": [
    {
      "component": "Box",
      "props" : {
        "width" : "100%"
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "tables/table-default",
            "code": "GRP_COMPANIES",
            "rootCode": "GRP_RESULTS",
            "data": "_query.tableData",
            "columns": [
              {
                "Header": "Comapany Name",
                "accessor": "name",
                "id": "name",
                "key": "name",
                "filterType": "string"
              },
              {
                "Header": "Legal Name",
                "accessor": "legalName",
                "filterType": "string"
              },
              {
                "Header": "Email",
                "accessor": "email",
                "filterType": "string"
              },
              {
                "Header": "Contact Number",
                "accessor": "contactNumber",
                "filterType": "string"
              },
              {
                "Header": "Website",
                "accessor": "website",
                "filterType": "string"
              },
              {
                "Header": "Address",
                "accessor": "address",
                "filterType": "string"
              },
              {
                "Header": "ABN",
                "accessor": "abn",
                "filterType": "string"
              }
            ]
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_RESULTS",
      "as": "companies"
    },
    {
      "operator": "scope",
      "path": "companies.links",
      "as": "companies",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "companies",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "companies",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "companies",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "code": "code",
          "name": "attributes.PRI_NAME.value",
          "legalName": "attributes.PRI_LEGAL_NAME.value",
          "contactNumber": "companyRep.attributes.PRI_LANDLINE.value",
          "website": "attributes.PRI_COMPANY_WEBSITE_URL.value",
          "abn": "attributes.PRI_ABN.value",
          "email": "attributes.PRI_EMAIL.value",
          "address": "attributes.PRI_ADDRESS_ADDRESS1.value"
        }
      }
    }
  ]
}