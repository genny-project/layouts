{
  "layout": {
    "title": "Chat Conversation",
    "appColor": "dark",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Box",
      "props": {
        "justifyContent": "center",
        "padding": 20,
        "fontWeight": "bold",
        "backgroundColor": "#f8f8f8",
        "borderBottomWidth": 1,
        "borderColor": "lightgrey",
        "borderStyle": "solid"
      },
      "children": [
        {
          "component": "Text",
          "props": {
            "size": "sm"
          },
          "children": {
            "component": "Join",
            "renderAsComponent": true,
            "props": {
              "joiner": ", ",
              "items": "_query.names"
            }
          }
        }
      ]
    },
    {
      "component": "Box",
      "props": {
        "justifyContent": "center",
        "flexDirection": "column",
        "onlyShowIf": {
          "navigation.itemID": {
            "$exists": true
          }
        }
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "cards/introduction/introduction.card",
            "itemID": "PER_USER1",
            "requestID": "PER_USER1",
            "backgroundColor": "#f8f8f8",
            "borderBottomWidth": 1,
            "borderColor": "lightgrey",
            "borderStyle": "solid"
          }
        }
      ]
    },
    {
      "component": "Chat",
      "props": {
        "bubbleRightColor": "#09D0B7",
        "sendIcon": "chevron-right",
        "sendIconColor": "white",
        "sendIconBackgroundColor": "#09D0B7",
        "itemCode": "{{navigation.chatCode}}",
        "users": "_query.users",
        "messages": "_query.messages",
        "names": "_query.names",
        "user": {
          "_id": "{{user.data.code}}"
        }
      }
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{navigation.chatCode}}",
      "as": "results"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "as": "messages",
      "scope": {
        "operator": "find",
        "query": {
          "valueString": {
            "$eq": "message"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "results.links",
      "as": "users",
      "scope": {
        "operator": "find",
        "query": {
          "link.attributeCode": {
            "$eq": "LNK_USER"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "messages",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "messages",
      "scope": {
        "operator": "populateAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "scope": {
        "operator": "populateAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "as": "names",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$ne": "{{user.data.code}}"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "names",
      "scope": {
        "operator": "map",
        "fields": "name"
      }
    }
  ]
}
