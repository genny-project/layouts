{
  "div": {
    "style": {
      "fontSize": "1em",
      "borderBottom": "1px solid #bbb",
      "borderRadius": 0,
      "padding": "5px",
      "display": "flex",
      "alignItems": "center",
      "justifyContent": "space-around"
    },
    "children": [
      {
        "Grid": {
          "cols": 1,
          "rows": 2,
          "style": {
            "height": "initial"
          },
          "children": [
            {
              "span": {
                "position": [
                  0,
                  0
                ],
                "style": {
                  "display": "flex",
                  "alignItems": "center"
                },
                "children": [
                  {
                    "h3": {
                      "style": {
                        "marginRight": "5px"
                      },
                      "children": "BE.PRI_NAME"
                    }
                  },
                  {
                    "p": {
                      "children": "BE.link.COMPANY.PRI_NAME"
                    }
                  }
                ]
              }
            },
            {
              "span": {
                "position": [
                  1,
                  0
                ],
                "style": {
                  "display": "flex",
                  "alignItems": "center"
                },
                "children": [
                  {
                    "span": {
                      "style": {
                        "marginRight": "5px"
                      },
                      "children": "Posted on:"
                    }
                  },
                  {
                    "DateLabel": {
                      "children": "${BE.created}",
                      "format": "DD MMM YYYY"
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "GennyButton": {
          "style": {
            "height": "30px"
          },
          "buttonStyle": {
            "background": "PROJECT.PRI_COLOR"
          },
          "children": "View",
          "buttonCode": "BTN_VIEW_BEG",
          "value": {
            "itemCode": "BE.code",
            "hint": "ROOT"
          }
        }
      }
    ]
  }
}
