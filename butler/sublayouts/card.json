                        "children":"${BE.PRI_COMPANY_NAME}"
                     }
                  },
                  {  
                     "span":{  
                        "position":[  
                           0,
                           1
                        ],
                        "style":{  
                           "fontSize":"0.85em"
                        },
                        "children":"Rel: ${BE.PRI_RELEASE_NUMBER}"
                     }
                  },
                  {  
                     "span":{  
                        "position":[  
                           0,
                           1
                        ],
                        "style":{  
                           "display":"flex",
                           "alignItems":"center",
                           "justifyContent":"flex-start"
                        },
                        "children":[  
                           {  
                              "span":{  
                                 "style":{  
                                    "fontSize":"0.85em",
                                    "marginRight":"5px"
                                 },
                                 "children":"Date: "
                              }
                           },
                           {  
                              "DateLabel":{  
                                 "format":"DD/MM/YY",
                                 "style":{  
                                    "fontSize":"0.85em"
                                 },
                                 "children":"${BE.PRI_RELEASE_DATE}"
                              }
                           }
                        ]
                     }
                  },
                  {  
                     "GennyStatus":{  
                        "position":[  
                           0,
                           2
                        ],
                        "root":"BE.code",
                        "style":{  
                           "height":"100%",
                           "maxHeight":"40px"
                        },
                        "statusStyle":{  
                           "height":"100%",
                           "maxHeight":"40px"
                        }
                     }
                  }
               ]
            }
         },
         {  
            "GennyDropdown":{  
               "inline":true,
               "isSlide":false,
               "animateHeader":false,
               "animateFooter":true,
               "contentStyle":{  
                  "backgroundColor":"white",
                  "padding":"0"
               },
               "footer":[  
                  {  
                     "SublayoutLoader":{  
                        "layoutCode":"card-footer",
                        "aliases":{  
                           "GROUP":"ROOT",
                           "BE":"BE.code"
                        }
                     }
                  }
               ],
               "children":[  
                  {  
                     "div":{  
                        "style":{  
