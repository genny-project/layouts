{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": 1,
        "padding": 20
      },
      "children": [
        {
          "component": "BucketView",
          "props": {
            "tabBarSize": "md",
            "backgroundColor": "#f6f6f6",
            "tabBarBackground": "#3f3f3f",
            "activeTabBackground": "#232323",
            "iconColor": "white",
            "iconSize": "md",
            "labelColor": "white",
            "labelProps": {
              "transform": "upperCase"
            },
            "overflowX": "auto",
            "overflowY": "auto",
            "width": "100%",
            "gutter": 20,
            "contentProps": {
              "minWidth": 240
            }
          },
          "repeat": "_query",
          "children": {
            "component": "List",
            "repeat": "_repeater.items",
            "props": {
              "headerText": "{{repeater.name}}",
              "contentBackground": "#eaeaea",
              "headerProps": {
                "paddingX": 20,
                "paddingY": 15,
                "justifyContent": "space-between",
                "alignItems": "center",
                "backgroundColor": "#eaeaea",
                "position": "sticky",
                "top": 0
              },
              "headerTextProps": {
                "bold": true
              },
              "showCountInHeader": true,
              "contentBodyProps": {
                "paddingX": 10,
                "paddingY": 20
              },
              "emptyProps": {
                "padding": 10
              },
              "headerCountTextProps": {
                "bold": true,
                "size": "xs"
              },
              "emptyTextProps": {
                "size": "xs"
              },
              "scrollViewProps": {
                "horizontal": true
              }
            },
            "children": {
              "component": "EventButton",
              "props": {
                "padding": 0,
                "paddingX": 0,
                "paddingY": 0,
                "width": "100%",
                "eventType": "BTN_CLICK",
                "buttonCode": "SELECT_EVENT",
                "value": {
                  "itemCode": "{{repeater.code}}",
                  "userCode": "{{user.data.code}}"
                },
                "dispatchActionOnClick": {
                  "type": "ALIAS_TOGGLE",
                  "payload": {
                    "alias": "CURRENT_NOTE",
                    "value": "{{repeater.code}}"
                  }
                }
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "borderColor": "#fff",
                    "borderLeftWidth": 5,
                    "borderStyle": "solid",
                    "width": "100%",
                    "backgroundColor": "#ffffff",
                    "padding": 10,
                    "paddingRight": 35,
                    "position": "relative"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "dontShowIf": {
                        "repeater.code": {
                          "$exists": true
                        }
                      },
                      "props": {
                        "padding": 15,
                        "width": "100%",
                        "justifyContent": "center"
                      },
                      "children": [
                        {
                          "component": "ActivityIndicator",
                          "props": {
                            "size": "small"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ]
}