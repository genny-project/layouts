{
    "rootCode": "GRP_ROOT",
    "width": 300,
    "flex": 1,
    "inline": true,
    "openProps": {
      "width": 80
    },
    "renderBody": {
      "component": "Box",
      "conditional": {
        "if": {
          "sidebar.left.isOpen": {
            "$eq": true
          }
        },
        "then": {
          "width": 80,
          "backgroundColor": "#e05b5b"
        },
        "else": {
          "width": 300,
          "backgroundColor": "#e05b5b"
        }
      },
      "props": {
        "position": "fixed",
        "height": "100vh",
        "left": 0,
        "top": 0,
        "flexDirection": "column",
        "transition": "300ms ease all"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "padding": 20,
            "paddingBottom": 0,
            "height": 115,
            "justifyContent": "space-between"
          },
          "children": [
            {
              "component": "Image",
              "dontShowIf": {
                "sidebar.left.isOpen": {
                  "$eq": true
                }
              },
              "props": {
                "source": "https://bouncer.outcome-hub.com/auth/resources/3.4.0.final/login/pcss/img/logo.png",
                "height": 40
              }
            },
            {
              "component": "Touchable",
              "props": {
                "withFeedback": true,
                "onPress": "_onToggle",
                "padding": 10
              },
              "children": {
                "component": "Icon",
                "conditional": {
                  "if": {
                    "sidebar.left.isOpen": {
                      "$eq": true
                    }
                  },
                  "then": {
                    "name": "menu",
                    "color": "white",
                    "size": "lg"
                  },
                  "else": {
                    "name": "menu",
                    "color": "white",
                    "size": "lg"
                  }
                }
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "flexDirection": "column"
          },
          "repeat": "_items",
          "children": {
            "component": "Touchable",
            "conditional": {
              "if": {
                "sidebar.left.isOpen": {
                  "$eq": true
                }
              },
              "then": {
                "paddingY": 20,
                "width": "100%",
                "justifyContent": "center"
              },
              "else": {
                "padding": 20,
                "paddingLeft": 50
              }
            },
            "props": {
              "onPress": "_repeater.onPress",
              "withFeedback": true,
              "alignItems": "center"
            },
            "children": {
              "component": "Box",
              "children": [
                {
                  "component": "Box",
                  "conditional": {
                    "if": {
                      "sidebar.left.isOpen": {
                        "$eq": true
                      }
                    },
                    "then": {},
                    "else": {
                      "marginRight": 15
                    }
                  },
                  "children": [
                    {
                      "component": "Icon",
                      "conditional": {
                        "if": {
                          "sidebar.left.isOpen": {
                            "$eq": true
                          }
                        },
                        "then": {
                          "color": "white"
                        },
                        "else": {
                          "color": "#ffff"
                        }
                      },
                      "props": {
                        "name": "{{repeater.icon}}"
                      }
                    }
                  ]
                },
                {
                  "component": "Text",
                  "dontShowIf": {
                    "sidebar.left.isOpen": {
                      "$eq": true
                    }
                  },
                  "conditional": {
                    "if": {
                      "sidebar.left.isOpen": {
                        "$eq": true
                      }
                    },
                    "then": {
                      "color": "white"
                    },
                    "else": {
                      "color": "#ffffff"
                    }
                  },
                  "children": "{{repeater.name}}"
                }
              ]
            }
          }
        }
      ]
    }
  }
  