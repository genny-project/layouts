{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "padding": 10
          },
          "onlyShowIf": {
            "user.data.code": "{{props.userID}}"
          },
          "children": [
            {
              "component": "EventButton",
              "props": {
                "eventType": "ROUTE_CHANGE",
                "buttonCode": "profile/add-contact",
                "text": "Edit Contacts",
                "color": "#202532",
                "textColor": "#FFF",
                "paddingY": 15,
                "paddingX": 15
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "marginBottom": 5
          },
          "children": [
            {
              "component": "Heading",
              "props": {
                "text": "Phone",
                "color": "black",
                "size": "xs"
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "marginBottom": 5
          },
          "children": [
            {
              "component": "Text",
              "props": {
                "text": "{{query.profile.attributes.PRI_MOBILE.value}}",
                "color": "black",
                "size": "xs"
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "marginBottom": 5
          },
          "children": [
            {
              "component": "Heading",
              "props": {
                "text": "Website",
                "color": "black",
                "size": "xs"
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "marginBottom": 5
          },
          "children": [
            {
              "component": "Text",
              "props": {
                "text": "{{query.profile.attributes.PRI_WEBSITE.value}}",
                "color": "black",
                "size": "xs"
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "marginBottom": 5
          },
          "children": [
            {
              "component": "Heading",
              "props": {
                "text": "Email",
                "color": "black",
                "size": "xs"
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20
          },
          "children": [
            {
              "component": "Text",
              "props": {
                "text": "{{query.profile.attributes.PRI_EMAIL.value}}",
                "color": "black",
                "size": "xs"
              }
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{props.userID}}",
      "as": "profile"
    },
    {
      "operator": "scope",
      "path": "profile",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    }
  ]
}