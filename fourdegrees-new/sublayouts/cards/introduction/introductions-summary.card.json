{
  "layout": {
    "title": "Introductions Summary",
    "appColor": "dark"
  },
  "children": [
    {
      "component": "EventLink",
      "props": {
        "to": "introduction/introductions-list",
        "style": {
          "width": "100%"
        },
        "value": "{{user.data.code}}",
        "params": {
          "requests": "_props.requests",
          "names": "_props.names"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flexDirection": "row",
            "padding": 20,
            "alignItems": "center",
            "width": "100%"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "flex": 1
              },
              "children": [
                {
                  "component": "Text",
                  "conditional": {
                    "if" : {
                      "query.count": {
                        "$size": {
                          "$eq": 1
                        }
                      }
                    },
                    "then": {
                      "text": "1 Active Introduction Request"
                    }
                  },
                  "props": {
                    "text": "{{query.count}} Active Introduction Requests",
                    "color": "black",
                    "size": "md"
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "marginleft": 20,
                "alignItems": "center"
              },
              "children": [
                {
                  "component": "Box",
                  "children": [
                    {
                      "component": "Icon",
                      "props": {
                        "color": "black",
                        "size": "lg",
                        "name": "keyboard_arrow_right"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator":"scope",
      "path": "props.requests",
      "as": "count",
      "scope": {
        "operator":"count",
        "query":{
          "code": {
            "$exists":true
          }
        }
      }
    }
  ]
}
