{
  "layout": {
    "title": "Message",
    "appColor": "dark"
  },
  "children": [
    {
      "component": "EventButton",
      "props": {
        "alignItems": "flex-start",
        "paddingX": 0,
        "paddingY": 0,
        "eventType": "BTN_CLICK",
        "buttonCode": "BTN_CREATE_CONVERSATION",
        "value": {
          "itemCode": "{{props.itemID}}"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flexDirection": "row",
            "backgroundColor": "white",
            "flex": 1,
            "padding": 20,
            "marginBottom": 10,
            "alignItems": "center"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "marginRight": 20,
                "alignItems": "center",
                "shape": "circle"
              },
              "children": [
                {
                  "component": "Image",
                  "props": {
                    "source": "{{query.images.0.attributes.PRI_IMAGE_URL.valueString}}",
                    "shape": "circle",
                    "width": 60,
                    "height": 60
                  },
                  "dontShowIf": {
                    "query.senderBE.name": {
                      "$eq": "{{user.data.name}}"
                    }
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flex": 1,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 5
                  },
                  "children": [
                    {
                      "component": "Text",
                      "children": [
                        {
                          "component": "Join",
                          "renderAsComponent": true,
                          "props": {
                            "delimiter": ", ",
                            "items": "_query.names"
                          }
                        }
                      ],
                      "props": {
                        "color": "grey",
                        "size": "xs"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 5
                  },
                  "onlyShowIf": {
                    "query.introductions": {
                      "$gt": 0
                    }
                  },
                  "children": [
                    {
                      "component": "Text",
                      "conditional": [
                        {
                          "if": {
                            "query.introductions": {
                              "$gt": 1
                            }
                          },
                          "then": {
                            "text": "{{query.introductions}} Introductions"
                          }
                        }
                      ],
                      "props": {
                        "text": "1 Introduction",
                        "color": "grey",
                        "size": "xxs"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "onlyShowIf": {
                    "query.invites": {
                      "$gt": 0
                    }
                  },
                  "children": [
                    {
                      "component": "Text",
                      "conditional": [
                        {
                          "if": {
                            "query.invites": {
                              "$gt": 1
                            }
                          },
                          "then": {
                            "text": "{{query.invites}} Invite Requests"
                          }
                        }
                      ],
                      "props": {
                        "text": "1 Invite Request",
                        "color": "grey",
                        "size": "xxs"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "alignItems": "flex-start",
                "paddingX": 0,
                "paddingY": 0
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginleft": 20,
                    "alignItems": "center"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {},
                      "children": [
                        {
                          "component": "Icon",
                          "props": {
                            "color": "black",
                            "size": "lg",
                            "name": "chevron-right"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{props.itemID}}",
      "as": "results"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "as": "users",
      "scope": {
        "operator": "find",
        "query": {
          "link.attributeCode": {
            "$eq": "LNK_USER"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "scope": {
        "operator": "populateAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "as": "otherUsers",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$ne": "{{user.data.code}}"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "otherUsers",
      "as": "names",
      "scope": {
        "operator": "map",
        "fields": "name"
      }
    },
    {
      "operator": "scope",
      "path": "users",
      "as": "images",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$ne": "{{user.data.code}}"
          }
        }
      }
    },
    {
      "operator": "external",
      "name": "getBeWithAttributes",
      "params": {
        "idField": "{{user.data.code}}",
        "asField": "currentUser"
      }
    },
    {
      "operator": "external",
      "name": "getLinkedBesWithAttributes",
      "params": {
        "linksField": "currentUser.links",
        "asField": "requests",
        "linkValue": "REQUEST"
      }
    },
    {
      "onlyShowIf": {
        "otherUsers": {
          "$size": {
            "$eq": 1
          }
        }
      },
      "query": [
        {
          "operator": "scope",
          "path": "otherUsers",
          "as": "otherUser",
          "scope": {
            "operator": "findOne",
            "query": {
              "code": {
                "$exists": true
              }
            }
          }
        },
        {
          "operator":"scope",
          "path": "requests",
          "as": "invites",
          "scope": {
            "operator":"count",
            "query": {
              "$and": [
                {
                  "$or": [
                    {
                      "attributes.PRI_CREATOR_CODE.value": {
                        "$eq": "{{otherUser.code}}"
                      }
                    },
                    {
                      "attributes.PRI_INTRODUCER_CODE.value": {
                        "$eq": "{{otherUser.code}}"
                      }
                    }
                  ]
                },
                {
                  "$and": [
                    {
                      "attributes.PRI_INTRODUCER_CODE.value": {
                        "$exists": true
                      }
                    },
                    {
                      "attributes.PRI_CREATOR_CODE.value": {
                        "$exists": true
                      }
                    },
                    {
                      "attributes.STA_STATUS": {
                        "$exists": false
                      }
                    }
                  ]
                },
                {
                  "attributes.PRI_REQUEST_TYPE.value": {
                    "$eq": "INVITE"
                  }
                }
              ]
            }
          }
        },
        {
          "operator":"scope",
          "path": "requests",
          "as": "introductions",
          "scope": {
            "operator":"count",
            "query": {
              "$and": [
                {
                  "$or": [
                    {
                      "attributes.PRI_CREATOR_CODE.value": {
                        "$eq": "{{otherUser.code}}"
                      }
                    },
                    {
                      "attributes.PRI_INTRODUCER_CODE.value": {
                        "$eq": "{{otherUser.code}}"
                      }
                    }
                  ]
                },
                {
                  "$and": [
                    {
                      "$and": [
                        {
                          "attributes.PRI_INTRODUCER_CODE.value": {
                            "$exists": true
                          }
                        },
                        {
                          "attributes.PRI_INTRODUCER_CODE.value": {
                            "$ne": "undefined"
                          }
                        }
                      ]
                    },
                    {
                      "attributes.PRI_CREATOR_CODE.value": {
                        "$exists": true
                      }
                    },
                    {
                      "query.requestBe.attributes.STA_GREEN.value": {
                        "$size": {
                          "$lt": 2
                        }
                      }
                    }
                  ]
                },
                {
                  "attributes.PRI_REQUEST_TYPE.value": {
                    "$eq": "INTRODUCTION"
                  }
                }
              ]
            }
          }
        }
      ]
    }
  ]
}