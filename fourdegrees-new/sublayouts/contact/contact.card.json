{
  "layout": {
    "title": "Profile Employment",
    "appColor": "dark"
  },
  "children": [
    {
      "component": "Link",
      "props": {
        "style": {
          "width": "100%"
        },
        "to": "profile/",
        "params": {
          "userID": "{{props.contactID}}",
          "degree": "_props.depths.{{props.contactID}}"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flexDirection": "row",
            "backgroundColor": "white",
            "flex": 1,
            "padding": 20,
            "marginBottom": 10,
            "alignItems": "center"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "marginRight": 20,
                "alignItems": "center"
              },
              "children": [
                {
                  "component": "Image",
                  "props": {
                    "source": "{{query.attributes.PRI_IMAGE_URL.valueString}}",
                    "shape": "circle",
                    "width": 60,
                    "height": 60
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flex": 1,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 5
                  },
                  "children": [
                    {
                      "component": "Text",
                      "props": {
                        "text": "{{query.attributes.PRI_FIRSTNAME.valueString}} {{query.attributes.PRI_LASTNAME.valueString}}",
                        "color": "grey",
                        "size": "xs"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {},
                  "children": [
                    {
                      "component": "Text",
                      "props": {
                        "color": "black",
                        "text": "Not Connected",
                        "size": "xs"
                      },
                      "conditional": [
                        {
                          "if": {
                            "props.depths.{{props.contactID}}": 1
                          },
                          "then": {
                            "text": "1st Degree"
                          }
                        },
                        {
                          "if": {
                            "props.depths.{{props.contactID}}": 2
                          },
                          "then": {
                            "text": "2nd Degree"
                          }
                        },
                        {
                          "if": {
                            "props.depths.{{props.contactID}}": 3
                          },
                          "then": {
                            "text": "3rd Degree"
                          }
                        },
                        {
                          "if": {
                            "props.depths.{{props.contactID}}": 4
                          },
                          "then": {
                            "text": "4th Degree"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "component": "EventButton",
              "dontShowIf": {
                "props.depths.{{props.contactID}}": 1
              },
              "props": {
                "alignItems": "flex-start",
                "paddingX": 0,
                "paddingY": 0,
                "eventType": "BTN_CLICK",
                "buttonCode": "CONNECT_WITH_PEOPLE",
                "value": {
                  "itemCode": "{{props.contactID}}"
                }
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginleft": 20,
                    "alignItems": "center"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {},
                      "children": [
                        {
                          "component": "Icon",
                          "props": {
                            "color": "black",
                            "size": "lg",
                            "name": "add-circle-outline"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{props.contactID}}",
      "as": "be"
    },
    {
      "operator": "populateAttributes",
      "code": "{{props.contactID}}",
      "as": "attributes"
    }
  ]
}
