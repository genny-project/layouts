{
  "layout": {
    "title": "Login",
    "appColor": "white",
    "backgroundColor": "#FFF",
    "header": {
      "variant": "public-transparent"
    }
  },
  "children": [
    {
      "component": "StatusBar",
      "props": {
        "barStyle": "light-content"
      }
    },
    {
      "component": "KeyboardAwareScrollView",
      "props": {
        "style": {
          "flex": 1
        },
        "contentContainerStyle": {
          "flex": 1
        }
      },
      "children": [
        {
          "component": "AuthenticationForm",
          "props": {
            "type": "login"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "marginBottom": 20
              },
              "children": [
                {
                  "component": "FormGenericInput",
                  "useThemeFrom": "Input",
                  "variant": "default",
                  "props": {
                    "type": "text",
                    "placeholder": "Username",
                    "name": "username"
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "marginBottom": 20
              },
              "children": [
                {
                  "component": "FormGenericInput",
                  "useThemeFrom": "Input",
                  "variant": "default",
                  "props": {
                    "type": "password",
                    "placeholder": "Password",
                    "name": "password"
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 20
                  },
                  "children": [
                    {
                      "component": "FormGenericStatus",
                      "props": {
                        "wrapperProps": {
                          "borderWidth": 2,
                          "borderColor": "red",
                          "borderStyle": "solid",
                          "alignItems": "center",
                          "justifyContent": "center",
                          "padding": 20,
                          "cleanStyleObject": true,
                          "width": "100%"
                        },
                        "textProps": {
                          "color": "red",
                          "bold": true,
                          "align": "center"
                        }
                      }
                    }
                  ]
                },
                {
                  "component": "FormGenericSubmit",
                  "props": {
                    "text": "Next",
                    "inverted": true,
                    "color": "white"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
