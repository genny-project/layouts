{
  "onlyUpdateIf": ["agencies", "tableData"],
  "layout": {
    "title": "All Education Providers Table"
  },
  "children": [
    {
      "component": "Box",
      "props" : {
        "width" : "100%"
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "tables/default",
            "code": "GRP_RESULT_AGENCIES",
            "rootCode": "GRP_RESULT_AGENCIES",
            "totalItems": "_query.agencies.totalCount",
            "data": "_query.tableData",
            "columns": [
              {
                "Header": "Actions",
                "accessor": "actions",
                "renderButton": [
                  {
                    "component": "EventButton",
                    "props": {
                      "height": "30px",
                      "width": "80px",
                      "backgroundColor": "red",
                      "color": "#5173c6",
                      "textColor": "#fff",
                      "text": "Edit",
                      "buttonCode": "BTN_EDIT_AGENCY",
                      "value": {
                        "itemCode": "{{attributeCode}}"
                      }
                    }
                  }
                ]
              },
              {
                "Header": "Company Name",
                "accessor": "companyName",
                "attributeCode": "PRI_NAME",
                "filterType": "string"
              },
              {
                "Header": "Email",
                "accessor": "email",
                "attributeCode": "PRI_EMAIL",
                "filterType": "string"
              },
              {
                "Header": "Phone Number",
                "accessor": "phoneNumber",
                "attributeCode": "PRI_PHONE_NUMBER",
                "filterType": "string"
              },
              {
                "Header": "Address ",
                "accessor": "fullAddress",
                "attributeCode": "PRI_ADDRESS_FULL",
                "filterType": "string"
              }
            ]
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_RESULT_AGENCIES",
      "as": "agencies"
    },
    {
      "operator": "scope",
      "path": "agencies.links",
      "as": "agencies",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.attributes",
        "id": "{{link.targetCode}}",
        "as": "be"
      }
    },
    {
      "operator": "scope",
      "path": "agencies",
      "scope": {
        "operator": "scope",
        "path": "be",
        "scope": {
          "operator": "populateBEGAttributes",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "agencies",
      "scope": {
        "operator": "getBE",
        "as": "company",
        "basePath": "baseEntities.data",
        "id": "{{be.attributes.LNK_EDU_PROVIDER.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "agencies",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "agencies",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "code": "code",
          "companyName": "be.attributes.PRI_NAME.value",
          "email": "be.attributes.PRI_EMAIL.value",
          "phoneNumber": "be.attributes.PRI_LANDLINE.value",
          "fullAddress": "be.attributes.PRI_ADDRESS_FULL.value",
          "attributeCode": "code"
        }
      }
    },
    {
      "operator": "clean",
      "fields": ["agencies", "tableData"]
    }
  ]
}