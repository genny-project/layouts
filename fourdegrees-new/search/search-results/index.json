{
  "layout": {
    "title": "Search - Search Results",
    "appColor": "dark",
    "hideHeaderRight": true
  },
  "children": [
    {
      "component": "Box",
      "props": {
        "flex": 1,
        "height": "100%",
        "backgroundColor": "lightgrey",
        "flexDirection": "column"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "padding": 20,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {},
              "children": [
                {
                  "component": "Label",
                  "props": {
                    "text": "Services",
                    "color": "gray",
                    "size": "xs"
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "marginBottom": 20
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "text": "Accounting",
                    "size": "xl"
                  }
                }
              ]
            }
          ]
        },
        {
          "component": "ScrollView",
          "props": {},
          "repeat": "_query",
          "children": {
            "component": "Sublayout",
            "props": {
              "layoutName": "contact/contact.card",
              "contactID": "{{repeater.code}},
              "contactImage": "{{repeater.attributes.PRI_IMAGE_URL.valueString}}",
              "contactName": "{{repeater.attributes.PRI_FIRSTNAME.valueString}} {{repeater.attributes.PRI_LASTNAME.valueString}}",
              "contactCompany": "{{repeater.attributes.PRI_COMPANY_NAME.valueString}}",
              "contactDegree": "{{repeater.attributes.PRI_DEGREE.valueString}}"
            }
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_RESULTS",
      "as": "results"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "map",
      "fields": "results.links"
    },
    {
      "operator": "sort",
      "by": "weight",
      "direction": "asc"
    }
  ]
}
