{
  "layout": {
    "title": "Internship Templates"
  },
  "children": [
    {
      "component": "Box",
      "props": {
        "width": "100%"
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "tables/default",
            "code": "GRP_INTERNSHIP_TEMPLATES",
            "rootCode": "GRP_INTERNSHIP_TEMPLATES",
            "data": "_query.tableData",
            "totalItems": "_query.internshipGroup.totalCount",
            "columns": [
              {
                "Header": "Actions",
                "accessor": "actions",
                "fakeButton": "View"
              },
              {
                "Header": "Template Name ",
                "accessor": "templateName",
                "attributeCode": "PRI_NAME"
              },
              {
                "Header": "Industry",
                "accessor": "industry",
                "attributeCode": "LNK_INDUSTRY"
              },
              {
                "Header": "Occupation",
                "accessor": "occupation",
                "attributeCode": "LNK_OCCUPATION"
              },
              {
                "Header": "Duration",
                "accessor": "internshipDuration",
                "attributeCode": "LNK_INTERNSHIP_DURATION"
              },
              {
                "Header": "Number of Interns",
                "accessor": "noOfInterns",
                "attributeCode": "LNK_NO_OF_INTERNS"
              },
              {
                "Header": "Scope of Internship",
                "accessor": "internshipDescription",
                "attributeCode": "PRI_INTERNSHIP_DESCRIPTION"
              },
              {
                "Header": "Roles and Responsibilities",
                "accessor": "positionDescription",
                "attributeCode": "PRI_POSITION_DESCRIPTION"
              },
              {
                "Header": "Learning Outcomes",
                "accessor": "learningOutcomes",
                "attributeCode": "PRI_INTERNSHIP_LEARNING_OUTCOMES"
              },
              {
                "Header": "Internship Skills",
                "accessor": "internshipSkills",
                "attributeCode": "PRI_INTERNSHIP_SKILLS"
              }
            ]
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_INTERNSHIP_TEMPLATES",
      "as": "templates"
    },
    {
      "operator": "scope",
      "path": "templates.links",
      "as": "templates",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "scope": {
        "operator": "getBE",
        "as": "industry",
        "basePath": "baseEntities.data",
        "id": "{{attributes.LNK_INDUSTRY.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "scope": {
        "operator": "scope",
        "path": "industry",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "scope": {
        "operator": "getBE",
        "as": "occupation",
        "basePath": "baseEntities.data",
        "id": "{{attributes.LNK_OCCUPATION.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "scope": {
        "operator": "scope",
        "path": "occupation",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "scope": {
        "operator": "getBE",
        "as": "internshipDuration",
        "basePath": "baseEntities.data",
        "id": "{{attributes.LNK_INTERNSHIP_DURATION.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "scope": {
        "operator": "scope",
        "path": "internshipDuration",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "scope": {
        "operator": "getBE",
        "as": "noOfInterns",
        "basePath": "baseEntities.data",
        "id": "{{attributes.LNK_NO_OF_INTERNS.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "scope": {
        "operator": "scope",
        "path": "noOfInterns",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "templates",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "code": "code",
          "templateName": "attributes.PRI_NAME.value",
          "industry": "industry.name",
          "occupation": "occupation.name",
          "internshipDuration": "internshipDuration.name",
          "noOfInterns": "noOfInterns.name",
          "internshipDescription": "attributes.PRI_INTERNSHIP_DESCRIPTION.value",
          "positionDescription": "attributes.PRI_POSITION_DESCRIPTION.value",
          "learningOutcomes": "attributes.PRI_INTERNSHIP_LEARNING_OUTCOMES.value",
          "internshipSkills": "attributes.PRI_INTERNSHIP_SKILLS.value"
        }
      }
    },
    {
      "operator": "getFromAlias",
      "alias": "CURRENT_NOTE",
      "as": "currentItem"
    },
    {
      "operator": "getBE",
      "id": "GRP_INTERNSHIP_TEMPLATES",
      "as": "internshipGroup"
    },
    {
      "operator": "clean",
      "fields": ["tableData", "internshipGroup"]
    }
  ]
}
