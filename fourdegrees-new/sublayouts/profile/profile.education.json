{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "width": "100%"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "paddingX": 10,
            "flexDirection": "column"
          },
          "onlyShowIf": {
            "query.educationLinks": {
              "$size": {
                "$gt": 0
              }
            }
          },
          "repeat": "_query.educationLinks",
          "children": {
            "component": "Sublayout",
            "props": {
              "layoutName": "cards/education/education.card",
              "itemID": "{{repeater.code}}"
            }
          }
        },
        {
          "component": "Box",
          "props": {
            "backgroundColor": "white",
            "padding": 20,
            "width": "100%",
            "justifyContent": "center"
          },
          "dontShowIf": {
            "query.educationLinks": {
              "$size": {
                "$gt": 0
              }
            }
          },
          "children": [
            {
              "component": "Text",
              "props": {
                "text": "No education to show.",
                "color": "black",
                "size": "xs"
              }
            }
          ]
        },
        {
          "component": "Box",
          "props": {
            "paddingX": 10,
            "paddingBottom": 10
          },
          "onlyShowIf": {
            "user.data.code": "{{props.userID}}"
          },
          "children": [
            {
              "component": "EventButton",
              "props": {
                "eventType": "ROUTE_CHANGE",
                "buttonCode": "profile/add-education-history",
                "text": "Add Education",
                "color": "#202532",
                "textColor": "#FFF",
                "paddingY": 15,
                "paddingX": 15
              }
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{props.userID}}",
      "as": "profile"
    },
    {
      "operator": "scope",
      "path": "profile",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "profile.links",
      "as": "educationLinks",
      "scope": {
        "operator": "find",
        "query": {
          "valueString": {
            "$eq": "EDUCATION"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "educationLinks",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    }
  ]
}