{

  "children": [
    {
      "component": "Box",
      "props": {
        "width": "100%",
        "height": "100%"
      },
      "children": [
        {
          "component": "Image",
          "props": {
            "flex": 1,
            "minHeight": "100%",
            "source": "https://puu.sh/BdU7u.png"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "flexDirection": "column",
                "marginTop": 20,
                "paddingX": 10,
                "flex": 1,
                "justifyContent": "flex-start"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "display": "flex",
                    "flexDirection": "column"
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "conditional": {
                        "if": {
                          "user.attributes.PRI_FIRSTNAME.value": {
                            "$exists": true
                          }
                        },
                        "then": {
                          "text": "Good {{time.timeOfDay}}, {{user.attributes.PRI_FIRSTNAME.value}}."
                        },
                        "else": {
                          "text": "Good {{time.timeOfDay}}."
                        }
                      },
                      "props": {
                        "color": "white",
                        "size": "xl"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {
                    "flexDirection": "column",
                    "flex": 1,
                    "width": "100%"
                  },
                  "children": [
                    {
                      "component": "SafeAreaView",
                      "props": {
                        "forceInset": {
                          "top": "never"
                        },
                        "style": {
                          "flex": 1
                        }
                      },
                      "children": [
                        {
                          "component": "Form",
                          "props": {
                            "questionGroupCode": "QUE_KEYWORD_SEARCH_GRP",
                            "displayDirection": "row",

                            "renderSubheading": {
                              "component": "Box",
                              "props": {
                                "marginY": 20
                              },
                              "children": [
                                {
                                  "component": "Heading",
                                  "props": {
                                    "color": "white",
                                    "size": "lg",
                                    "align": "left",
                                    "text": "{{subheading}}"
                                  }
                                }
                              ]
                            },
                            "renderFormInputWrapper": {
                              "component": "Box",
                              "props": {
                                "marginBottom": 20,
                                "flexDirection": "column",
                                "padding": 20,
                                "backgroundColor": "white",
                                "borderTopLeftRadius": 5,
                                "borderBottomLeftRadius": 5,
                                "flex": 1
                              }
                            },
                            "renderFormInput": {
                              "component": "FormInput",
                              "useThemeFrom": "Input",
                              "variant": "search",
                              "props": {
                                "placeholder": "{{label}}"
                              }
                            },
                            "renderSubmitButtonWrapper": {
                              "component": "Box",
                              "props": {
                                "flexDirection": "column",
                                "alignItems": "center",
                                "justifyContent": "center",
                                "marginBottom": 20,
                                "backgroundColor": "white",
                                "borderTopRightRadius": 5,
                                "borderBottomRightRadius": 5
                              }
                            },
                            "renderSubmitButton": {
                              "component": "Button",
                              "props": {
                                "padding": 10,
                                "text": null,
                                "size": "lg",
                                "icon": "search",
                                "showSpinnerOnClick": true,
                                "textColor": "black",
                                "color": "transparent"
                              }
                            },
                            "renderLoading": {
                              "component": "Box",
                              "props": {
                                "flexDirection": "column"
                              },
                              "children": [
                                {
                                  "component": "ActivityIndicator",
                                  "props": {
                                    "size": "large"
                                  }
                                },
                                {
                                  "component": "Box",
                                  "props": {
                                    "marginTop": 10
                                  },
                                  "children": [
                                    {
                                      "component": "Text",
                                      "props": {
                                        "color": "white",
                                        "text": "Loading form..."
                                      }
                                    }
                                  ]
                                }
                              ]
                            }
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "flexDirection": "row"
                      },
                      "children": [
                        {
                          "component": "EventLink",
                          "props": {
                            "style": {
                              "flex": 1,
                              "alignItems": "center"
                            },
                            "to": "search/categories",
                            "value": "GRP_PRODUCTS",
                            "params": {
                              "searchID": "GRP_PRODUCTS"
                            }
                          },
                          "children": [
                            {
                              "component": "Box",
                              "props": {
                                "flex": 1,
                                "alignItems": "center",
                                "justifyContent": "center"
                              },
                              "children": [
                                {
                                  "component": "Text",
                                  "props": {
                                    "color": "white",
                                    "text": "Advanced Search"
                                  }
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "component": "Box",
                          "props": {
                            "flex": 1,
                            "alignItems": "center"
                          },
                          "children": [
                            {
                              "component": "EventButton",
                              "props": {
                                "buttonCode": "BTN_BROWSE_NETWORK",
                                "width": "100%"
                              },
                              "children": [
                                {
                                  "component": "Text",
                                  "props": {
                                    "color": "white",
                                    "text": "Browse network"
                                  }
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
