{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": 1,
        "padding": 20
      },
      "children": [
        {
          "component": "Heading",
          "props": {
            "text": "Students"
          }
        },
        {
          "component": "Box",
          "props": {
            "marginTop": "50px",
            "flexWrap": "wrap"
          },
          "children": [
            {
              "component": "Sublayout",
              "onlyShowIf": {
                "props.showAllStudentsRow": {
                  "$eq": true
                }
              },
              "props": {
                "title": "All Interns",
                "value": "-",
                "layoutName": "home/dashboard/stats.box",
                "buttonCode": "GRP_ROOT",
                "buttonValue": "GRP_OVERVIEW"
              }
            },
            {
              "component": "Sublayout",
              "props": {
                "title": "Available (No Applications)",
                "value": "{{query.stats.attributes.PRI_GRP_AVAILABLE_INTERNS.valueDouble}}",
                "layoutName": "home/dashboard/stats.box",
                "buttonCode": "xx",
                "buttonValue": "xx"
              }
            },
            {
              "component": "Sublayout",
              "props": {
                "title": "Applied, Shortlisted or Interviewed",
                "value": "{{query.processedInterns}}",
                "layoutName": "home/dashboard/stats.box",
                "buttonCode": "xx",
                "buttonValue": "xx"
              }
            },
            {
              "component": "Sublayout",
              "props": {
                "title": "Offered",
                "value": "{{query.stats.attributes.PRI_GRP_OFFERED_INTERNS.valueDouble}}",
                "layoutName": "home/dashboard/stats.box",
                "buttonCode": "xx",
                "buttonValue": "xx"
              }
            },
            {
              "component": "Sublayout",
              "props": {
                "title": "Placed (Waiting To Start)",
                "value": "{{query.stats.attributes.PRI_GRP_PLACED_INTERNS.valueDouble}}",
                "layoutName": "home/dashboard/stats.box",
                "buttonCode": "xx",
                "buttonValue": "xx"
              }
            },
            {
              "component": "Sublayout",
              "props": {
                "title": "In Progress",
                "value": "{{query.stats.attributes.PRI_GRP_IN_PROGRESS_INTERNS.valueDouble}}",
                "layoutName": "home/dashboard/stats.box",
                "buttonCode": "xx",
                "buttonValue": "xx"
              }
            },
            {
              "component": "Sublayout",
              "props": {
                "title": "Completed (Internships)",
                "value": "{{query.stats.attributes.PRI_GRP_COMPLETED_INTERNS.valueDouble}}",
                "layoutName": "home/dashboard/stats.box",
                "buttonCode": "xx",
                "buttonValue": "xx"
              }
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getLinks",
      "id": "{{user.data.code}}",
      "as": "stats"
    },
    {
      "operator": "scope",
      "path": "stats",
      "scope": {
        "operator": "getBE",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "stats",
      "scope": {
        "operator": "findOne",
        "query": {
          "$and": [
            {
              "code": {
                "$exists": true
              }
            },
            {
              "name": {
                "$eq": "studentsStats"
              }
            }
          ]
        }
      }
    },
    {
      "operator": "scope",
      "path": "stats",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "add",
      "as": "processedInterns",
      "values": [
        "{{stats.attributes.PRI_GRP_APPLIED_INTERNS.valueDouble}}",
        "{{stats.attributes.PRI_GRP_SHORTLISTED_INTERNS.valueDouble}}",
        "{{stats.attributes.PRI_GRP_INTERVIEWED_INTERNS.valueDouble}}"
      ]
    }
  ]
}