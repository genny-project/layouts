{
  "Grid": {
    "rows": 1,
    "cols": [
      2,
      1
    ],
    "style": {
      "height": "initial",
      "backgroundColor": "white",
      "lineHeight": "1.8em"
    },
    "children": [
      {
        "Grid": {
          "position": [
            0,
            0
          ],
          "style": {
            "color": "rgb(72,84,98)",
            "height": "initial",
            "paddingBottom": "50px"
          },
          "rows": [
            0.1,
            1
          ],
          "cols": [
            {
              "style": {
                "flexGrow": 1,
                "marginLeft": "10%"
              }
            }
          ],
          "children": [
            {
              "SublayoutLoader": {
                "position": [
                  0,
                  0
