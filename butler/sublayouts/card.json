{  
   "div":{  
      "style":{  
         "marginBottom":"5px"
      },
      "children":[  
         {  
            "Grid":{  
               "rows":[  
                  {  
                     "style":{  
                        "flexGrow":1,
                        "flexWrap":"nowrap"
                     }
                  },
                  1
               ],
               "cols":[  
                  0.1,
                  {  
                     "style":{  
                        "display":"flex",
                        "flexDirection":"column",
                        "flexWrap":"no-wrap",
                        "flexGrow":1,
                        "paddingRight":"10px",
                        "justifyContent":"space-evenly"
                     }
                  },
                  "10px"
               ],
               "children":[  
                  {  
                     "ImageView":{  
                        "position":[  
                           0,
                           0
