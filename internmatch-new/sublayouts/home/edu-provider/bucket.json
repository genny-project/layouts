{
  "children": [
    {
      "component": "Box",
      "props": {
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": 1,
        "padding": 20
      },
      "children": [
        {
          "component": "BucketView",
          "props": {
            "tabBarSize": "md",
            "backgroundColor": "#f6f6f6",
            "tabBarBackground": "#3f3f3f",
            "activeTabBackground": "#232323",
            "iconColor": "white",
            "iconSize": "md",
            "labelColor": "white",
            "labelProps": {
              "transform": "upperCase"
            },
            "overflowX": "auto",
            "overflowY": "auto",
            "width": "100%",
            "gutter": 20,
            "contentProps": {
              "minWidth": 240
            },
            "rootCode": "GRP_INTERNS"
          }, 
          "repeat": "_query",
          "children": {
            "component": "List",
            "repeat": "_repeater.items",
            "props": {
              "height": "100vh",
              "overflow": "scroll",
              "headerText": "{{repeater.name}}",
              "contentBackground": "#eaeaea",
              "headerProps": {
                "paddingX": 20,
                "paddingY": 15,
                "justifyContent": "space-between",
                "alignItems": "center",
                "backgroundColor": "#eaeaea",
                "height": "100vh",
                "overflow": "scroll",
                "position": "sticky",
                "top": 0
              },
              "headerTextProps": {
                "bold": true
              },
              "showCountInHeader": true,
              "contentBodyProps": {
                "height": "100vh",
                "overflow": "scroll",
                "paddingX": 10,
                "paddingY": 20
              },
              "emptyProps": {
                "padding": 10
              },
              "headerCountTextProps": {
                "bold": true,
                "size": "xs"
              },
              "emptyTextProps": {
                "size": "xs"
              },
              "scrollViewProps": {
                "horizontal": true
              }
            },
            "children": {
              "component": "EventButton",
              "props": {
                "padding": 0,
                "paddingX": 0,
                "paddingY": 0,
                "width": "100%",
                "eventType": "BTN_CLICK",
                "buttonCode": "SELECT_EVENT",
                "value": {
                  "itemCode": "{{repeater.code}}",
                  "userCode": "{{user.data.code}}"
                },
                "dispatchActionOnClick": {
                  "type": "ALIAS_TOGGLE",
                  "payload": {
                    "alias": "CURRENT_NOTE",
                    "value": "{{repeater.code}}"
                  }
                }
              },
              "children": [
                {
                  "component": "Box",
                  "dontShowIf": {
                    "repeater.code": {
                      "$exists": true
                    }
                  },
                  "props": {
                    "padding": 15,
                    "width": "100%",
                    "justifyContent": "center"
                  },
                  "children": [
                    {
                      "component": "ActivityIndicator",
                      "props": {
                        "size": "small"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "onlyShowIf": {
                    "repeater.code": {
                      "$exists": true
                    }
                  },
                  "props": {
                    "width": "100%",
                    "marginY": 5,
                    "borderWidth":"1px",
                    "borderColor":"white",
                    "backgroundColor":"#f9f9f9",
                    "padding": "5px"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginRight": 10,
                        "flexShrink": 0
                      },
                      "children": [
                        {
                          "component": "Image",
                          "props": {
                            "source": "{{repeater.applicant.attributes.PRI_IMAGE_URL.value}}",
                            "height": 50,
                            "width": 50
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "props": {
                        "flexDirection": "column",
                        "flex": 1
                      },
                      "children": [
                        {
                          "component": "Box",
                          "props": {
                            "marginBottom": 5
                          },
                          "children": [
                            {
                              "component": "Text",
                              "conditional": {
                                "if": {
                                  "repeater.attributes.PRI_NAME.value": {
                                    "$exists": true
                                  }
                                },
                                "then": {
                                  "text": "{{repeater.attributes.PRI_NAME.value}}"
                                },
                                "else": {
                                  "text": "{{repeater.attributes.PRI_APPLICANT_FULLNAME.value}}"
                                }
                              },
                              "props": {
                                "size": "xs",
                                "bold": true
                              }
                            }
                          ]
                        },
                        {
                          "component": "Box",
                          "onlyShowIf": {
                            "repeater.attributes.PRI_STUDENT_ID.value": {
                              "$exists": true
                            }
                          },
                          "props": {
                            "marginBottom": 5
                          },
                          "children": [
                            {
                              "component": "Text",
                              "props": {
                                "size": "xxs"
                              },
                              "children": "ID: {{repeater.attributes.PRI_STUDENT_ID.value}}"
                            }
                          ]
                        },
                        {
                          "component": "Text",
                          "conditional": {
                            "if": {
                              "repeater.attributes.PRI_GRP_IN_PROGRESS_DATE.value": {
                                "$exists": true,
                                "$ne": "undefined"
                              }
                            },
                            "then": {
                              "component": "Date",
                              "format": "[Since] Do MMM YY",
                              "date": "{{repeater.attributes.PRI_GRP_IN_PROGRESS_DATE.value}}"
                            },
                            "else": {
                              "if": {
                                "repeater.attributes.PRI_GRP_PLACED_ON_DATE.value": {
                                  "$exists": true,
                                  "$ne": "undefined"
                                }
                              },
                              "then": {
                                "component": "Date",
                                "format": "[Placed on] Do MMM YY",
                                "date": "{{repeater.attributes.PRI_GRP_PLACED_ON_DATE.value}}"
                              },
                              "else": {
                                "if": {
                                  "repeater.attributes.PRI_GRP_OFFERED_DATE.value": {
                                    "$exists": true,
                                    "$ne": "undefined"
                                  }
                                },
                                "then": {
                                  "component": "Date",
                                  "format": "[Offered on] Do MMM YY",
                                  "date": "{{repeater.attributes.PRI_GRP_OFFERED_DATE.value}}"
                                },
                                "else": {
                                  "if": {
                                    "repeater.attributes.PRI_GRP_INTERVIEWS_DATE.value": {
                                      "$exists": true,
                                      "$ne": "undefined"
                                    }
                                  },
                                  "then": {
                                    "component": "Date",
                                    "format": "[Interviewed on] Do MMM YY",
                                    "date": "{{repeater.attributes.PRI_GRP_INTERVIEWS_DATE.value}}"
                                  },
                                  "else": {
                                    "if": {
                                      "repeater.attributes.PRI_GRP_SHORTLISTED_DATE.value": {
                                        "$exists": true,
                                        "$ne": "undefined"
                                      }
                                    },
                                    "then": {
                                      "component": "Date",
                                      "format": "[Shortlisted on] Do MMM YY",
                                      "date": "{{repeater.attributes.PRI_GRP_SHORTLISTED_DATE.value}}"
                                    },
                                    "else": {
                                      "if": {
                                        "repeater.attributes.PRI_GRP_APPLIED_DATE.value": {
                                          "$exists": true,
                                          "$ne": "undefined"
                                        }
                                      },
                                      "then": {
                                        "component": "Date",
                                        "format": "[Applied on] Do MMM YY",
                                        "date": "{{repeater.attributes.PRI_GRP_APPLIED_DATE.value}}"
                                      },
                                      "else": {
                                        "text": "{{repeater.attributes.PRI_MOBILE.value}}"
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          },
                          "props": {
                            "size": "xxs"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getLinks",
      "id": "GRP_APPLICATIONS",
      "as": "applications"
    },
    {
      "operator": "scope",
      "path": "applications",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "as": "be",
        "id": "{{link.targetCode}}",
        "filterOutEmpty": true
      }
    },
    {
      "operator": "map",
      "fields": "applications"
    },
    {
      "operator": "sort",
      "by": "weight",
      "direction": "asc"
    },
    {
      "operator": "map",
      "fields": "be"
    },
    {
      "operator": "getLinks",
      "id": "{{code}}",
      "as": "links"
    },
    {
      "operator": "scope",
      "path": "links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "as": "be",
        "id": "{{link.targetCode}}",
        "filterOutEmpty": true
      }
    },
    {
      "operator": "map",
      "fields": {
        "name": "name",
        "code": "code",
        "items": "links"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "map",
        "fields": "be"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "id": "{{attributes.PRI_APPLICANT_CODE}}",
        "as": "applicant"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "applicant",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "sort",
        "by": "attributes.PRI_NAME.value",
        "direction": "asc"
      }
    }
  ]
}
