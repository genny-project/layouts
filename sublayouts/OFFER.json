                                                {
                                                    "IconSmall" : {
                                                        "name": "check_circle"
                                                    }
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "GennyButton": {
                                            "position": [0,1],
                                            "buttonCode": "BTN_COUNTER_OFFER",
                                            "value": {
                                              "itemCode": "ITEMCODE",
                                              "hint": "ROOT"
                                            },
                                            "children": [
                                                {
                                                    "IconSmall" : {
                                                        "name": "cancel"
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
