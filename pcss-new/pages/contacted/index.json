{
  "layout": {
    "title": "Contacted Properties View",
    "appColor": "white",
    "backgroundColor": "whitesmoke",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Box",
      "children": [
        {
          "component": "Table",
          "props": {
            "columns": [
              {
                "Header": "Action",
                "editable": true,
                "accessor": "actions",
                "renderButton": [
                  {
                    "component": "EventButton",
                    "props": {
                      "buttonCode": "BTN_VIEW_BEG",
                      "color": "#5fa5ec",
                      "textColor": "#fff",
                      "height": 25,
                      "width": "100%",
                      "text": "Property Details",
                      "padding": 10,
                      "size": "xs",
                      "value": {
                        "itemCode":"{{code}}",
                        "hint": "BTN_VIEW_BEG"
                      }
                    }
                  }
                ]
              },
              {
                "Header": "Address Of Property",
                "accessor": "address",
                "filterType": "string"
              },
              {
                "Header": "Precinct",
                "accessor": "precinct",
                "filterType": "string"
              },
              {
                "Header": "Property Type",
                "accessor": "propertytype",
                "filterType": "string"
              }
            ],
            "tableBackgroundColor": "#e05b5b",
            "data": "_query.tableData",
            "height": "500px",
            "width": "500px",
            "itemsPerPage": 15
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_CONTACTED",
      "as": "items"
    },
    {
      "operator": "scope",
      "path": "items.links",
      "as": "items",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}",
        "as": "be"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "be",
        "scope": {
          "operator": "populateBEGAttributes",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "as" : "company",
        "basePath": "baseEntities.data",
        "id": "{{be.attributes.LNK_PROPERTY_PRECINCT_SELECT.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "getBE",
        "as" : "property",
        "basePath": "baseEntities.data",
        "id": "{{be.attributes.LNK_PROPERTY_TYPE_SELECT.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "scope",
        "path": "items",
        "scope": {
          "operator": "populateAttributes",
          "as" : "attributes",
          "code": "{{code}}"
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "address": "be.attributes.PRI_ADDRESS_FULL.value",
          "precinct": "company.name",
          "propertytype": "property.name",
          "code": "be.code"
        }
      }
    }
  ]
}
