            {
              "span": {
                "style": {
                  "margin": "0",
                  "display": "flex"
                },
                "children": [
                  {
                    "h3": {
                      "style": {
                        "marginRight": "20px"
                      },
                      "children": "BE.PRI_TITLE"
                    }
