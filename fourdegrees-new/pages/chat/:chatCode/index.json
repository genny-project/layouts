{
  "layout": {
    "title": "Chat Conversation",
    "appColor": "dark",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Box",
      "props": {
        "justifyContent": "center",
        "padding": 20,
        "fontWeight": "bold",
        "backgroundColor": "#f8f8f8",
        "borderBottomWidth": 1,
        "borderColor": "lightgrey",
        "borderStyle": "solid"
      },
      "children": [
        {
          "component": "Text",
          "props": {
            "text": "{{query.introducerBE.attributes.PRI_FIRSTNAME.value}} {{query.introducerBE.attributes.PRI_LASTNAME.value}}",
            "size": "sm"
          }
        }
      ]
    },
    {
      "component": "Box",
      "props": {
        "justifyContent": "center",
        "flexDirection": "column",
        "backgroundColor": "#f8f8f8"
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "cards/introduction/introduction.card",
            "requestID": "{{query.requestBE.code}}",
            "recipientID": "{{query.recipientBE.code}}"
          }
        }
      ]
    },
    {
      "component": "Chat",
      "props": {
        "bubbleRightColor": "#09D0B7",
        "sendIcon": "chevron-right",
        "sendIconColor": "white",
        "raw": "_query.results",
        "sendIconBackgroundColor": "#09D0B7",
        "itemCode": "{{navigation.chatCode}}",
        "users": "_query.results.links",
        "user": {
          "_id": "{{user.data.code}}"
        }
      }
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{navigation.chatCode}}",
      "as": "results"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "getLinkDepths",
      "code": "{{user.data.code}}",
      "as": "depths"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "populateAttributes",
        "basePath": "baseEntities.attributes",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "getBE",
      "id": "{{navigation.itemID}}",
      "as": "requestBE"
    },
    {
      "operator": "scope",
      "path": "requestBE",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "getBE",
      "id": "{{requestBE.attributes.PRI_CREATOR_CODE.value}}",
      "as": "creatorBE"
    },
    {
      "operator": "scope",
      "path": "creatorBE",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "getBE",
      "id": "{{requestBE.attributes.PRI_RECIPIENT_CODE.value}}",
      "as": "recipientBE"
    },
    {
      "operator": "scope",
      "path": "recipientBE",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "getBE",
      "id": "{{requestBE.attributes.PRI_INTRODUCER_CODE.value}}",
      "as": "introducerBE"
    },
    {
      "operator": "scope",
      "path": "introducerBE",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    }
  ]
}
