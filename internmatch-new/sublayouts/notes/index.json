{
  "children": [
    {
      "component": "Box",
      "props": {
        "paddingX": 20,
        "marginBottom": 50
      },
      "children": [
        {
          "component": "Heading",
          "props": {
            "text": "Notes",
            "size": "xxl"
          }
        }
      ]
    },
    {
      "component": "Box",
      "props": {
        "marginBottom": 20,
        "width": "100%",
        "flexDirection": "column"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "paddingX": 20
          },
          "dontShowIf": {
            "query.notes": {
              "$size": {
                "$gt": 0
              }
            }
          },
          "children": [
            {
              "component": "Text",
              "props": {
                "align": "center"
              },
              "children": "No notes to display"
            }
          ]
        },
        {
          "component": "Box",
          "onlyShowIf": {
            "query.notes": {
              "$size": {
                "$gt": 0
              }
            }
          },
          "props": {
            "flexDirection": "column",
            "maxWidth": "100%",
            "paddingX": 20
          },
          "repeat": "_query.notes",
          "sort": "reverse",
          "children": {
            "component": "Sublayout",
            "conditional": {
              "if": {
                "repeater.attributes.PRI_CREATOR_TYPE.value": {
                  "$eq": "SYSTEM"
                }
              },
              "then": {
                "layoutName": "notes/note-bubble-system"
              },
              "else": {
                "layoutName": "notes/note-bubble-user"
              }
            },
            "props": {
              "text": "{{repeater.attributes.PRI_CONTENT.value}}",
              "created": "{{repeater.attributes.PRI_CREATED_DATE.value}}",
              "creator": "{{repeater.attributes.PRI_CREATOR_NAME.value}}"
            }
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getLinks",
      "id": "GRP_NOTES",
      "as": "notes"
    },
    {
      "operator": "scope",
      "path": "notes",
      "scope": {
        "operator": "getBE",
        "id": "code"
      }
    },
    {
      "operator": "scope",
      "path": "notes",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    }
  ]
}