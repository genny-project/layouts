{
  "layout": {
    "title": "Message",
    "appColor": "dark"
  },
  "children": [
    {
      "component": "Link",
      "props": {
        "style": {
          "width": "100%"
        },
        "to": "profile/",
        "params": {
          "userID": "{{props.contactID}}",
          "degree": "_props.depths.{{props.contactID}}"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flexDirection": "row",
            "backgroundColor": "white",
            "flex": 1,
            "padding": 20,
            "marginBottom": 10,
            "alignItems": "center"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "marginRight": 20,
                "alignItems": "center"
              },
              "children": [
                {
                  "component": "Image",
                  "props": {
                    "source": "{{query.attributes.PRI_IMAGE_URL.valueString}}",
                    "shape": "circle",
                    "width": 60,
                    "height": 60
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flex": 1,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 5
                  },
                  "children": [
                    {
                      "component": "Text",
                      "dontShowIf": {
                        "query.senderBE.name" : {
                          "$eq": "{{user.data.name}}"
                        }
                      },
                      "props": {
                        "text": "{{query.senderBE.name}}",
                        "color": "grey",
                        "size": "xs"
                      }
                    },
                    {
                      "component": "Text",
                      "dontShowIf": {
                        "query.receiverBE.name" : {
                          "$eq": "{{user.data.name}}"
                        }
                      },
                      "props": {
                        "text": "{{query.receiverBE.name}}",
                        "color": "grey",
                        "size": "xs"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "component": "EventButton",
              "props": {
                "alignItems": "flex-start",
                "paddingX": 0,
                "paddingY": 0,
                "eventType": "BTN_CLICK",
                "buttonCode": "BTN_CREATE_CONVERSATION",
                "value": {
                  "itemCode": "{{props.itemID}}"
                }
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginleft": 20,
                    "alignItems": "center"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {},
                      "children": [
                        {
                          "component": "Icon",
                          "props": {
                            "color": "black",
                            "size": "lg",
                            "name": "chevron-right"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{props.itemID}}",
      "as": "chatBE"
    },
    {
      "operator": "scope",
      "path": "chatBE",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "chatBE.links",
      "as": "senderBE",
      "scope": {
        "operator": "find",
        "query": {
          "valueString": {
            "$eq": "sender"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "senderBE",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator":"scope",
      "path": "senderBE",
      "scope": {
        "operator": "findOne",
        "query": {
          "code": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "chatBE.links",
      "as": "receiverBE",
      "scope": {
        "operator": "find",
        "query": {
          "valueString": {
            "$eq": "receiver"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "receiverBE",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator":"scope",
      "path": "receiverBE",
      "scope": {
        "operator": "findOne",
        "query": {
          "code": {
            "$exists": true
          }
        }
      }
    }
  ]
}
