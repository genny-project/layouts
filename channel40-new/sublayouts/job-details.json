        {
          "component": "Label",
          "props": {
            "text": "W: {{BE.link.LOAD.PRI_LOAD_WIDTH_MM}}mm"
          }
        },
        {
          "component": "Label",
          "props": {
            "text": "H: {{BE.link.LOAD.PRI_LOAD_HEIGHT_MM}}mm"
