{
  "layout": {
    "title": "Profile Employment",
    "appColor": "dark"
  },
  "children": [
    {
      "component": "Link",
      "props": {
        "style": {
          "width": "100%"
        },
        "to": "profile/",
        "params": {
          "userID": "{{props.itemID}}",
          "degree": "_props.depths.{{props.itemID}}"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flexDirection": "row",
            "backgroundColor": "white",
            "flex": 1,
            "padding": 20,
            "marginBottom": 10,
            "alignItems": "center"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "marginRight": 20,
                "alignItems": "center"
              },
              "children": [
                {
                  "component": "Image",
                  "props": {
                    "source": "{{query.be.attributes.PRI_IMAGE_URL.valueString}}",
                    "shape": "circle",
                    "width": 60,
                    "height": 60
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flex": 1,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 5
                  },
                  "children": [
                    {
                      "component": "Text",
                      "props": {
                        "text": "{{query.be.attributes.PRI_FIRSTNAME.valueString}} {{query.be.attributes.PRI_LASTNAME.valueString}}",
                        "color": "black",
                        "size": "sm"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 5
                  },
                  "onlyShowIf": {
                    "query.attributes.PRI_NETWORK_NAME.valueString": {
                      "$exists": true
                    }
                  },
                  "children": [
                    {
                      "component": "Text",
                      "props": {
                        "text": "{{query.be.attributes.PRI_NETWORK_NAME.valueString}}",
                        "color": "grey",
                        "size": "xs"
                      }
                    }
                  ]
                },
                {
                  "component": "Box",
                  "props": {},
                  "children": [
                    {
                      "component": "Text",
                      "props": {
                        "color": "black",
                        "text": "4th Degree",
                        "size": "xs"
                      },
                      "conditional": [
                        {
                          "if": {
                            "props.depths.{{props.itemID}}": 1
                          },
                          "then": {
                            "text": "1st Degree"
                          }
                        },
                        {
                          "if": {
                            "props.depths.{{props.itemID}}": 2
                          },
                          "then": {
                            "text": "2nd Degree"
                          }
                        },
                        {
                          "if": {
                            "props.depths.{{props.itemID}}": 3
                          },
                          "then": {
                            "text": "3rd Degree"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "marginleft": 20,
                "alignItems": "center"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {},
                  "children": [
                    {
                      "component": "Icon",
                      "props": {
                        "color": "black",
                        "size": "lg",
                        "name": "keyboard_arrow_right"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "external",
      "name": "getBeWithAttributes",
      "params": {
        "idField": "{{props.item.code}}",
        "asField": "networkBe"
      }
    },
    {
      "operator": "external",
      "name": "getBeWithAttributes",
      "params": {
        "idField": "{{user.data.code}}",
        "asField": "userBe"
      }
    },
    {
      "operator": "external",
      "name": "getLinkedBesWithAttributes",
      "params": {
        "linksField": "userBe.links",
        "asField": "requests",
        "linkValue": "REQUEST"
      }
    },
    {
      "operator": "external",
      "name": "getRequestInvites",
      "params": {
        "idField": "requests",
        "asField": "invites",
        "operator": "count",
        "userCode": "{{userBe.code}}"
      }
    },
    {
      "operator": "external",
      "name": "getRequestIntroductions",
      "params": {
        "idField": "requests",
        "asField": "introductions",
        "operator": "count",
        "userCode": "{{userBe.code}}"
      }
    }
  ]
}
