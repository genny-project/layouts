{
  "onlyUpdateIf": ["hcRepList", "tableData"],
  "layout": {
    "title": "host Company Representatives"
  },
  "children": [
    {
      "component": "Box",
      "props" : {
        "width" : "100%"
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "tables/default",
            "code": "GRP_RESULT_HOST_COMPANY_REP",
            "rootCode": "GRP_RESULT_HOST_COMPANY_REP",
            "totalItems": "_query.hcRepList.totalCount",
            "data": "_query.tableData",
            "columns": [
              {
                "Header": "Actions",
                "accessor": "actions",
                "fakeButton": "View"
              },
              {
                "Header": "Full Name",
                "accessor": "firstName",
                "attributeCode": "PRI_FIRSTNAME",
                "filterType": "string"
              },
              {
                "Header": "Email",
                "accessor": "uname",
                "attributeCode": "PRI_EMAIL",
                "filterType": "string"
              },
              {
                "Header": "Contact Number",
                "accessor": "mobilePhone",
                "attributeCode": "PRI_PHONE_NUMBER",
                "filterType": "string"
              },
              {
                "Header": "Host Company",
                "accessor": "hostCompany",
                "attributeCode": "LNK_HOST_COMPANY",
                "filterType": "string"
              }
            ]
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_RESULT_HOST_COMPANY_REP",
      "as": "hcRepList"
    },
    {
      "operator": "scope",
      "path": "hcRepList.links",
      "as": "hcRepList",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}",
        "as": "be"
      }
    },
    {
      "operator": "scope",
      "path": "hcRepList",
      "scope": {
        "operator": "scope",
        "path": "be",
        "scope": {
          "operator": "populateBEGAttributes",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "hcRepList",
      "scope": {
        "operator": "getBE",
        "as" : "company",
        "basePath": "baseEntities.data",
        "id": "{{be.attributes.LNK_CONTACT.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "hcRepList",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "firstName": "be.attributes.PRI_NAME.value",
          "eduProvider": "company.name",
          "mobilePhone": "be.attributes.PRI_MOBILE.value",
          "uname": "be.attributes.PRI_USERNAME.value",
          "hostCompany": "be.attributes.LNK_HOST_COMPANY.value",
          "attributeCode": "code"
        }
      }
    },
    {
      "operator": "scope",
      "path": "tableData",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{hostCompany}}",
        "as": "hostCompanyAttributes"
      }
    },
    {
      "operator": "scope",
      "path": "tableData",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "firstName": "firstName",
          "eduProvider": "eduProvider",
          "mobilePhone": "mobilePhone",
          "uname": "uname",
          "hostCompany": "hostCompanyAttributes.PRI_NAME.value",
          "attributeCode": "attributeCode"
        }
      }
    },
    {
      "operator": "clean",
      "fields": ["tableData", "hcRepList"]
    }
  ]
}
