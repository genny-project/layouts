{
  "layout": {
    "title": "Home",
    "appColor": "dark",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    },
    "backgroundColor": "#f8f8f8"
  },
  "children": [
    {
      "component": "SafeAreaView",
      "props": {
        "forceInset": {
          "top": "never"
        },
        "style": {
          "flex": 1
        }
      },
      "children": [
        {
          "component": "Tabs",
          "props": {
            "bottomTabs": true,
            "tabBarBackground": "white",
            "iconColor": "#898f9f",
            "activeIconColor": "#202532",
            "iconSize": "lg",
            "labelColor": "#898f9f",
            "activeLabelColor": "#202532",
            "labelProps": {
              "minHeight": 20,
              "paddingY": 0,
              "size": "xs"
            },
            "flex": 1,
            "tabWrapperProps": {
              "paddingLeft": 20,
              "height": 50,
              "flexBasis": "auto"
            },
            "textColor": "#FFF",
            "tabBackground": "#41505d",
            "activeTabBackground": "#fff",
            "activeTabTextColor": "#000",
            "tabProps": {
              "paddingX": 20,
              "paddingY": 20,
              "minWidth": 180,
              "justifyContent": "center"
            },
            "tabTitleProps": {
              "size": "xs"
            },
            "activeTabTitleProps": {
              "bold": true
            },
            "inactiveTabProps": {
              "borderColor": "#233a4e",
              "borderRightWidth": 1,
              "borderStyle": "solid"
            },
            "childProps": {
              "overflow": "auto",
              "maxHeight": "calc(100vh - 65px - 50px)"
            },
            "overflowX": "auto",
            "backgroundColor": "#f6f6f6",
            "tabs": [
              {
                "key": 0,
                "route": "Search",
                "title": "Home",
                "icon": "home"
              },
              {
                "key": 1,
                "route": "alerts",
                "title": "Alerts",
                "icon": "notifications",
                "badge": "_query.alertCount"
              },
              {
                "key": 2,
                "route": "chat",
                "title": "Chat",
                "icon": "insert_comment"
              },
              {
                "key": 3,
                "route": "more",
                "title": "Account",
                "icon": "people"
              }
            ],
            "renderIcon": {
              "component": "Box",
              "props": {
                "position": "relative"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "position": "absolute",
                    "top": -5,
                    "right":-5,
                    "borderRadius": 10,
                    "zIndex": 5,
                    "minWidth": 20,
                    "height": 20,
                    "paddingX": 5,
                    "backgroundColor": "red",
                    "alignItems": "center",
                    "justifyContent": "center"
                  },
                  "onlyShowIf": {
                    "route.badge": {
                      "$gt": 0
                    }
                  },
                  "children": [
                    {
                      "component": "Text",
                      "props": {
                        "align": "center",
                        "color": "white",
                        "size": "xxs",
                        "text": "{{route.badge}}"
                      }
                    }
                  ]
                },
                {
                  "component": "Icon",
                  "props": {
                    "name": "{{iconProps.name}}",
                    "size": "{{iconProps.size}}",
                    "color": "{{iconProps.color}}"
                  }
                }
              ]
            }
          },
          "children": [
            {
              "component": "Sublayout",
              "props": {
                "layoutName": "search"
              }
            },
            {
              "component": "Sublayout",
              "props": {
                "layoutName": "alerts"
              }
            },
            {
              "component": "Sublayout",
              "props": {
                "layoutName": "chat"
              }
            },
            {
              "component": "Sublayout",
              "props": {
                "layoutName": "more"
              }
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "external",
      "name": "getAllAlerts",
      "params": {
        "asField": "alerts",
        "linksField": "alerts.links"
      }
    },
    {
      "operator":"scope",
      "path": "alerts",
      "as": "alertCount",
      "scope": {
        "operator":"count",
        "query":{
          "code": {
            "$exists": true
          }
        }
      }
    }
  ]
}
