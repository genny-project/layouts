{
  "layout": {
    "title": "Results",
    "backgroundColor": "#f8f8f8",
    "header": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "ScrollView",
      "props": {
        "style": {
          "flex": 1,
          "backgroundColor": "#f8f8f8"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flex": 1,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "padding": 20,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 20
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "props": {
                        "text": "Results",
                        "size": "xl"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "justifyContent": "center"
              },
              "repeat": "_query",
              "children": {
                "component": "Sublayout",
                "props": {
                  "layoutName": "contact/contact.card",
                  "contactImage": "{{repeater.attributes.PRI_IMAGE_URL.valueString}}",
                  "contactName": "{{repeater.attributes.PRI_FIRSTNAME.valueString}} {{repeater.attributes.PRI_LASTNAME.valueString}}",
                  "contactCompany": "GADA Technology",
                  "contactDegree": "-"
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_RESULTS",
      "as": "results"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "populateAttributes",
        "basePath": "baseEntities.attributes",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "map",
      "fields": "results.links"
    },
    {
      "operator": "sort",
      "by": "weight",
      "direction": "asc"
    }
  ]
}
