{
  "renderHeading": {
    "component": "Box",
    "props": {
      "marginTop": 20,
      "marginBottom": 20
    },
    "children": [
      {
        "component": "Heading",
        "props": {
          "color": "#222",
          "size": "xl",
          "text": "{{heading}}"
        }
      }
    ]
  },
  "renderSubheading": {
    "component": "Box",
    "props": {
      "marginY": 20
    },
    "children": [
      {
        "component": "Heading",
        "props": {
          "color": "#222",
          "size": "lg",
          "align": "left",
          "text": "{{subheading}}"
        }
      }
    ]
  },
  "renderFormInputWrapper": {
    "component": "Box",
    "props": {
      "marginBottom": 20,
      "flexDirection": "column"
    }
  },
  "renderFormInputLabel": {
    "component": "Box",
    "props": {
      "margin": 10,
      "alignItems": "center",
      "justifyContent": "space-between"
    },
    "children": [
      {
        "component": "Text",
        "props": {
          "text": "{{label}}"
        },
        "conditional": {
          "if": {
            "$or": [
              {
                "submitCount": { "$gt": 0 },
                "error": { "$exists": true }
              },
              {
                "touched": { "$eq": true },
                "error": { "$exists": true }
              }
            ]
          },
          "then": {
            "color": "red"
          }
        }
      },
      {
        "component": "Text",
        "onlyShowIf": {
          "$or": [
            { "required": { "$eq": true } },
            { "error": { "$exists": true } }
          ]
        },
        "conditional": {
          "if": {
            "error": { "$exists": true }
          },
          "then": {
            "color": "red",
            "text": "{{error}}"
          },
          "else": {
            "text": "*required"
          }
        },
        "props": {
          "size": "xs"
        }
      }
    ]
  },
  "renderFormInput": {
    "component": "FormInput",
    "props": {
      "paddingX": 20,
      "paddingY": 15,
      "borderRadius": 30,
      "borderWidth": 1,
      "borderColor": "#233a4e",
      "borderStyle": "solid",
      "appearance": "none",
      "renderTag": {
        "component": "Box",
        "props": {
          "paddingX": 20,
          "paddingY": 15,
          "borderRadius": 30,
          "borderWidth": 1,
          "borderColor": "#233a4e",
          "borderStyle": "solid",
          "position": "relative",
          "width": "100%",
          "marginBottom": 10
        },
        "children": [
          {
            "component": "Text",
            "props": {
              "text": "{{name}}"
            }
          },
          {
            "component": "Touchable",
            "props": {
              "withFeedback": true,
              "position": "absolute",
              "right": 15,
              "top": 15,
              "onPress": "_onRemove"
            },
            "children": {
              "component": "Icon",
              "props": {
                "name": "clear",
                "color": "black",
                "size": "sm"
              }
            }
          }
        ]
      }
    }
  },
  "renderSubmitButtonWrapper": {
    "component": "Box",
    "props": {
      "marginTop": 10,
      "flexDirection": "column",
      "width": "100%"
    }
  },
  "renderSubmitButton": {
    "component": "Button",
    "props": {
      "showSpinnerOnClick": true,
      "color": "#1597c5",
      "textColor": "white",
      "width": "100%",
      "borderRadius": 30,
      "hoverProps": {
        "color": "#10799e"
      }
    }
  },
  "renderLoading": {
    "component": "Box",
    "props": {
      "flexDirection": "column"
    },
    "children": [
      {
        "component": "ActivityIndicator",
        "props": {
          "size": "large"
        }
      },
      {
        "component": "Box",
        "props": {
          "marginTop": 10
        },
        "children": [
          {
            "component": "Text",
            "props": {
              "color": "#222",
              "text": "Loading form..."
            }
          }
        ]
      }
    ]
  }
}
