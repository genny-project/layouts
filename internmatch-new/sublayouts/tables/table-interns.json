{
  "layout": {
    "title": "Interns Table"
  },
  "children": [
    {
      "component": "Box",
      "props" : {
        "width" : "100%"
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "tables/table-default",
            "rootCode": "GRP_RESULTS",
            "data": "_query.tableData",
            "columns": [
              {
                "Header": "Actions",
                "accessor": "actions",
                "renderButton": [
                  {
                    "component": "EventButton",
                    "props": {
                      "height": "30px",
                      "width": "80px",
                      "backgroundColor": "red",
                      "color": "#5173c6",
                      "textColor": "#fff",
                      "text": "View",
                      "buttonCode": "BTN_VIEW_BUCKET_INTERN",
                      "value": {
                        "itemCode": "{{code}}"
                      },
                      "dispatchActionOnClick": {
                        "type": "ALIAS_ADD",
                        "payload": {
                          "alias": "CURRENT_NOTE",
                          "value": "{{code}}"
                        }
                      }
                    }
                  }
                ]
              },
              {
                "Header": "Full Name",
                "accessor": "firstName",
                "id": "firstName",
                "key": "firstName",
                "filterType": "string"
              },
              {
                "Header": "Student ID",
                "accessor": "studentId",
                "id": "studentId",
                "key": "firstName",
                "filterType": "string"
              },
              {
                "Header": "Email",
                "accessor": "uname",
                "filterType": "string"
              },
              {
                "Header": "Edu Provider",
                "accessor": "eduProvider",
                "filterType": "string"
              },
              {
                "Header": "Mobile Phone",
                "accessor": "mobilePhone",
                "filterType": "number"
              }
            ]
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_RESULTS",
      "as": "interns"
    },
    {
      "operator": "scope",
      "path": "interns.links",
      "as": "interns",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "interns",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "interns",
      "scope": {
        "operator": "getBE",
        "as": "company",
        "basePath": "baseEntities.data",
        "id": "{{attributes.LNK_EDU_PROVIDER.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "interns",
      "scope": {
        "operator": "sort",
        "by": "created",
        "direction": "desc"
      }
    },
    {
      "operator": "scope",
      "path": "interns",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "firstName": "attributes.PRI_NAME.value",
          "eduProvider": "company.name",
          "mobilePhone": "attributes.PRI_MOBILE.value",
          "uname": "attributes.PRI_USERNAME.value",
          "code": "code",
          "studentId": "attributes.PRI_STUDENT_ID.value"
        }
      }
    }
  ]
}