{
  "layout": {
    "title": "Profile Bio",
    "appColor": "dark",
    "header": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "ScrollView",
      "props": {
        "flex": 1
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flex": 1,
            "height": "100%",
            "flexDirection": "column",
            "backgroundColor": "lightgrey"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "flex": 1,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "ImageProxy",
                  "props": {
                    "screenWidth": true,
                    "width": "100%",
                    "source": "{{query.profile.attributes.PRI_IMAGE_URL.value}}"
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "flex": 1,
                        "height": "100%",
                        "flexDirection": "column",
                        "justifyContent": "space-between",
                        "top": 0,
                        "padding": 20
                      },
                      "children": [
                        {
                          "component": "Box",
                          "props": {
                            "flexDirection": "column"
                          },
                          "children": [
                            {
                              "component": "Heading",
                              "props": {
                                "text":
                                  "{{query.profile.attributes.PRI_FIRSTNAME.value}} {{query.profile.attributes.PRI_LASTNAME.value}}",
                                "color": "white",
                                "size": "xl"
                              }
                            },
                            {
                              "component": "Text",
                              "props": {
                                "text": "Bio",
                                "color": "white",
                                "size": "xs"
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "flex": 1,
                "flexDirection": "column",
                "backgroundColor": "lightgrey"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "flex": 1,
                    "flexDirection": "column",
                    "paddingX": 20,
                    "paddingY": 30
                  },
                  "children": [
                    {
                      "component": "Box",
                      "props": {
                        "marginBottom": 20
                      },
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "color": "black",
                            "size": "sm"
                          },
                          "conditional": {
                            "if": {
                              "query.profile.attributes.PRI_DESCRIPTION.value": {
                                "$exists": true
                              }
                            },
                            "then": {
                              "text": "{{query.profile.attributes.PRI_DESCRIPTION.value}}"
                            },
                            "else": {
                              "text": "No description to show."
                            }
                          }
                        }
                      ]
                    },
                    {
                      "component": "Box",
                      "children": [
                        {
                          "component": "Text",
                          "props": {
                            "color": "black",
                            "size": "xs"
                          },
                          "conditional": {
                            "if": {
                              "query.profile.attributes.PRI_PERSONAL_INFO.value": {
                                "$exists": true
                              }
                            },
                            "then": {
                              "text": "{{query.profile.attributes.PRI_PERSONAL_INFO.value}}"
                            },
                            "else": {
                              "text": "No additional information to show."
                            }
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "{{navigation.userID}}",
      "as": "profile"
    },
    {
      "operator": "scope",
      "path": "profile",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    }
  ]
}
