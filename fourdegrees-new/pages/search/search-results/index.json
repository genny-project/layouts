{
  "layout": {
    "title": "Results",
    "backgroundColor": "#f8f8f8",
    "header": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "ScrollView",
      "props": {
        "style": {
          "flex": 1,
          "backgroundColor": "#f8f8f8"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "flex": 1,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "padding": 20,
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "Box",
                  "props": {
                    "marginBottom": 20
                  },
                  "children": [
                    {
                      "component": "Heading",
                      "props": {
                        "text": "Results",
                        "size": "xl"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "component": "ActivityIndicator",
              "props": {
                "size": "large"
              },
              "dontShowIf": {
                "query.results.links": {
                  "$exists": true
                }
              }
            },
            {
              "component": "Box",
              "props": {
                "justifyContent": "center",
                "flexDirection": "column"
              },
              "onlyShowIf": {
                "query.results.links": {
                  "$size": {
                    "$gt": 0
                  }
                }
              },
              "repeat": "_query.results.links",
              "children": {
                "component": "Sublayout",
                "props": {
                  "layoutName": "cards/contact/contact.card",
                  "itemID": "{{repeater.be.code}}",
                  "depth": "_repeater.depth.value"
                }
              }
            },
            {
              "component": "Box",
              "props": {
                "backgroundColor": "white",
                "padding": 20,
                "width": "100%",
                "justifyContent": "center"
              },
              "dontShowIf": {
                "query.results.links": {
                  "$size": {
                    "$gt": 0
                  }
                }
              },
              "children": [
                {
                  "component": "Text",
                  "props": {
                    "text": "No results to show.",
                    "color": "black",
                    "size": "xs"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_RESULTS",
      "as": "results"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "as": "be",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "getLinkDepths",
      "code": "{{user.data.code}}",
      "onlyIncludeIf": [
        {
          "path": "valueString",
          "value": "CONTACT"
        }
      ],
      "as": "depths"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "populateAttributes",
        "basePath": "baseEntities.attributes",
        "as": "attributes",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "map",
        "fields": {
          "be": "be",
          "attributes": "attributes",
          "depth": {
            "operator": "findOne",
            "global": true,
            "path": "depths",
            "query": {
              "beCode": {
                "$eq": "{{be.code}}"
              }
            }
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "sort",
        "by": [
          "depth.value",
          "attributes.PRI_FIRSTNAME.value"
        ],
        "direction": "asc"
      }
    }
  ]
}