{
    "GennyDropdown":{
        "inline":true,
        "isSlide":false,
        "animateHeader":false,
        "animateFooter":true,
        "contentStyle":{
            "backgroundColor":"white",
            "padding":"0"
        },
        "header":[
            {
                "SublayoutLoader": {
                    "layoutCode": "card-header",
                    "aliases": {
                        "GROUP": "ROOT",
                        "BE": "BE.code"
                    }
                }
            }
        ],
        "footer":[
            {
                "SublayoutLoader": {
                    "layoutCode": "card-footer",
                    "aliases": {
                        "GROUP": "ROOT",
                        "BE": "BE.code"
                    }
                }
            }
        ],
        "children":[
            {
                  "div":  {
                    "style": {
                      "display": "flex",
                      "flexDirection": "column",
                      "padding": "5px 0",
                      "width": "100%"
                    },
                    "children": [
                      {
                        "span": {
                          "style": {
                            "fontSize": "0.85em",
                            "padding": "5px",
                            "backgroundColor": "#ddd",
                            "marginBottom":"5px",
                            "flexGrow": 1
                          },
                          "children": "RY: ${BE.PRI_RYAIL_YARD}"
                        }
                      },
                      {
                        "span": {
                          "style": {
                            "fontSize": "0.85em",
                            "padding": "5px",
                            "backgroundColor": "#ddd",
                            "marginBottom":"5px",
                            "flexGrow": 1
                          },
                          "children": "SC: ${BE.PRI_SHIPPING_COMPANY}"
                        }
                      },
                      {
                        "span": {
                          "style": {
                            "fontSize": "0.85em",
                            "padding": "5px",
                            "backgroundColor": "#ddd",
                            "marginBottom":"5px",
                            "flexGrow": 1
                          },
                          "children": "DD: ${BE.link.PRODUCTS.PRI_DELIVERY_DATE}"
                        }
                      }
                    ]
                  }
                },
                {
                   "SublayoutLoader": {
                                "layoutCode": "card-button-actions",
                                "aliases": {
                                  "BE": "BE.code",
                                  "GROUP": "ROOT"
                     }
             }
          }
        ]
    }
}
