{
  "layout": {
    "title": "Question",
    "appColor": "dark",
    "backgroundColor": "white",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "Container",
      "props": {
        "flexDirection": "column",
        "alignItems": "center",
        "justifyContent": "center",
        "flex": 1,
        "height": "100%",
        "maxWidth": 700
      },
      "children": [
        {
          "component": "Form",
          "props": {
            "questionGroupCode": "{{navigation.id}}",
            "renderHeading": {
              "component": "Box",
              "props": {
                "marginTop": 20,
                "marginBottom": 20
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "color": "#222",
                    "size": "xl",
                    "text": "{{heading}}"
                  }
                }
              ]
            },
            "renderSubheading": {
              "component": "Box",
              "props": {
                "marginY": 20
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "color": "#222",
                    "size": "lg",
                    "align": "left",
                    "text": "{{subheading}}"
                  }
                }
              ]
            },
            "renderFormInputWrapper": {
              "component": "Box",
              "props": {
                "marginBottom": 20,
                "flexDirection": "column"
              }
            },
            "renderFormInputLabel": {
              "component": "Box",
              "props": {
                "margin": 10,
                "alignItems": "center",
                "justifyContent": "space-between"
              },
              "children": [
                {
                  "component": "Text",
                  "props": {
                    "text": "{{label}}"
                  },
                  "conditional": {
                    "if": {
                      "error": {
                        "$or": [
                          { "$eq": true },
                          { "$exists": true }
                        ]
                      },
                      "$or": [
                        { "submitCount": { "$gt": 0 } },
                        { "touched": { "$eq": true } }
                      ]
                    },
                    "then": {
                      "color": "red"
                    }
                  }
                },
                {
                  "component": "Text",
                  "onlyShowIf": {
                    "required": {
                      "$eq": true
                    }
                  },
                  "props": {
                    "text": "*required",
                    "size": "xs"
                  }
                }
              ]
            },
            "renderFormInput": {
              "component": "FormInput",
              "props": {
                "placeholder": "{{label}}",
                "paddingX": 20,
                "paddingY": 15,
                "borderRadius": 30,
                "borderWidth": 1,
                "borderColor": "#233a4e",
                "borderStyle": "solid"
              }
            },
            "renderSubmitButtonWrapper": {
              "component": "Box",
              "props": {
                "marginTop": 10,
                "flexDirection": "column",
                "width": "100%"
              }
            },
            "renderSubmitButton": {
              "component": "Button",
              "props": {
                "showSpinnerOnClick": true,
                "color": "#1597c5",
                "textColor": "white",
                "width": "100%",
                "borderRadius": 30,
                "hoverProps": {
                  "color": "#10799e"
                }
              }
            },
            "renderLoading": {
              "component": "Box",
              "props": {
                "flexDirection": "column"
              },
              "children": [
                {
                  "component": "ActivityIndicator",
                  "props": {
                    "size": "large"
                  }
                },
                {
                  "component": "Box",
                  "props": {
                    "marginTop": 10
                  },
                  "children": [
                    {
                      "component": "Text",
                      "props": {
                        "color": "#222",
                        "text": "Loading form..."
                      }
                    }
                  ]
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
