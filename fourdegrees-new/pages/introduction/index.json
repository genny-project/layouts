{
  "layout": {
    "title": "IntroduceMe",
    "appColor": "dark",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    }
  },
  "children": [
    {
      "component": "ScrollView",
      "props": {
        "style": {
          "flex": 1,
          "backgroundColor": "#f8f8f8"
        }
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "alignItems": "center",
            "flex": 1,
            "height": "100%",
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {
                "flexDirection": "column",
                "padding": 20,
                "backgroundColor": "#f8f8f8",
                "width": "100%"
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "text": "Introduce Me",
                    "size": "xl"
                  }
                },
                {
                  "component": "Text",
                  "props": {
                    "size": "xxs",
                    "text": "You can only be introduded to {{query.targetUser.attributes.PRI_FIRSTNAME.value}} through",
                    "color": "grey"
                  }
                }
              ]
            },
            {
              "component": "ActivityIndicator",
              "props": {
                "size": "large"
              },
              "dontShowIf": {
                "query.results.links": {
                  "$exists": true
                }
              }
            },
            {
              "component": "Box",
              "props": {
                "justifyContent": "center",
                "flexDirection": "column",
                "width": "100%"
              },
              "onlyShowIf": {
                "query.results.links": {
                  "$size": {
                    "$gt": 0
                  }
                }
              },
              "repeat": "_query.results.links",
              "children": {
                "component": "Sublayout",
                "props": {
                  "layoutName": "cards/contact/contact.default",
                  "itemID": "{{repeater.code}}",
                  "depths": "_query.depths",
                  "itemCode": "{{query.requests.code}}",
                  "buttonComponent": {
                    "component":"EventButton",
                    "renderAsComponent": true,
                    "props":{
                       "buttonCode":"START_INTRODUCTION",
                       "value":{
                          "itemCode": "{{props.itemCode}}",
                          "userCode": "{{props.itemID}}"
                       }
                    },
                    "children":[
                       {
                        "component":"Box",
                        "props":{
                            "marginleft":20,
                            "alignItems":"center"
                        },
                        "children":[
                          {
                            "component":"Box",
                            "props":{

                            },
                            "children":[
                              {
                                "component":"Icon",
                                "props":{
                                    "color":"black",
                                    "size":"lg",
                                    "name":"keyboard_arrow_right"
                                }
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                }
              }
            },
            {
              "component": "Box",
              "props": {
                "backgroundColor": "white",
                "padding": 20,
                "width": "100%",
                "justifyContent": "center"
              },
              "onlyShowIf": {
                "query.results.links": {
                  "$size": {
                    "$lt": 1
                  }
                }
              },
              "children": [
                {
                  "component": "Text",
                  "props": {
                    "text": "No results to show.",
                    "color": "black",
                    "size": "xs"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_FIRST_DEGREE_CONNECTIONS",
      "as": "results"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "getLinkDepths",
      "code": "{{user.data.code}}",
      "as": "depths"
    },
    {
      "operator": "scope",
      "path": "results.links",
      "scope": {
        "operator": "populateAttributes",
        "basePath": "baseEntities.attributes",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "getBE",
      "id": "{{user.data.code}}",
      "as": "profile"
    },
    {
      "operator": "scope",
      "path": "profile",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "profile.links",
      "as": "requests",
      "scope": {
        "operator": "find",
        "query": {
          "valueString": {
            "$eq": "REQUEST"
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "requests",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "requests",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "requests",
      "scope": {
        "operator": "populateAttributes",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "requests",
      "scope": {
        "operator": "findOne",
        "query": {
          "attributes.PRI_RECIPIENT_CODE.value": {
            "$eq": "{{navigation.targetUserID}}"
          }
        }
      }
    },
    {
      "operator": "getBE",
      "id": "{{navigation.targetUserID}}",
      "as": "targetUser"
    },
    {
      "operator": "scope",
      "path": "targetUser",
      "scope": {
        "operator": "populateBEGAttributes",
        "as": "attributes"
      }
    }
  ]
}
