{
  "barStyle": "light-content",
  "renderHeader": {
    "component": "Box",
    "conditional": {
      "if": {
        "deviceSize": {
          "$eq": "sm"
        }
      },
      "then": {
        "paddingLeft": 50,
        "paddingRight": 40
      }
    },
    "props": {
      "justifyContent": "space-between",
      "alignItems": "center",
      "height": 65,
      "paddingLeft": 20,
      "paddingRight": 10,
      "backgroundColor": "#233a4e",
      "overflowX": "hidden"
    },
    "children": [
      {
        "component": "Box",
        "children": [
          {
            "component": "Heading",
            "props": {
              "color": "white"
            },
            "children": "{{title}}"
          }
        ]
      },
      {
        "component": "Box",
        "props": {
          "alignItems": "center"
        },
        "children": [
          {
            "component": "Dropdown",
            "onlyShowIf": {
              "$or": [
                {
                  "user.attributes.PRI_IS_AGENT.value": {
                    "$eq": true
                  }
                },
                {
                  "user.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
                    "$eq": true
                  }
                },
                {
                  "user.attributes.PRI_IS_BUYER.value": {
                    "$eq": true
                  }
                }
              ]
            },
            "props": {
              "facingRight": true,
              "menuButtonStyle": {
                "backgroundColor": "transparent",
                "border": 0,
                "padding": 10,
                "fontSize": 16,
                "cursor": "pointer",
                "color": "white"
              },
              "menuListStyle": {
                "background": "#233a4e",
                "borderWidth": 2,
                "borderColor": "#192835",
                "borderStyle": "solid"
              },
              "menuItemStyle": {
                "textAlign": "right",
                "padding": 15,
                "color": "white"
              },
              "testID": "ADD_ITEMS_DROPDOWN"
            },
            "conditional": {
              "if": {
                "user.attributes.PRI_IS_AGENT.value": {
                  "$eq": true
                }
              },
              "then": {
                "items": [
                  {
                    "text": "New internship",
                    "buttonCode": "BTN_ADD_INTERNSHIP"
                  },
                  {
                    "text": "New company",
                    "buttonCode": "BTN_ADD_COMPANY"
                  },
                  {
                    "text": "New person",
                    "buttonCode": "BTN_ADD_PEOPLE"
                  }
                ]
              },
              "else": {
                "if": {
                  "user.attributes.PRI_IS_BUYER.value": {
                    "$eq": true
                  }
                },
                "then": {
                  "items": [
                    {
                      "text": "New internship",
                      "buttonCode": "BTN_ADD_INTERNSHIP"
                    },
                    {
                      "text": "New person",
                      "buttonCode": "BTN_ADD_PEOPLE"
                    }
                  ]
                },
                "else": {
                  "if": {
                    "user.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
                      "$eq": true
                    }
                  },
                  "then": {
                    "items": [
                      {
                        "text": "New person",
                        "buttonCode": "BTN_ADD_PEOPLE"
                      }
                    ]
                  }
                }
              }
            },
            "children": [
              {
                "component": "Box",
                "props": {
                  "alignItems": "center",
                  "borderWidth": "1px",
                  "borderStyle": "solid",
                  "borderColor": "white",
                  "padding": "8px"
                },
                "children": [
                  {
                    "component": "Box",
                    "onlyShowIf": {
                      "deviceSize": {
                        "$ne": "sm"
                      }
                    },
                    "props": {
                      "marginRight": 10
                    },
                    "children": [
                      {
                        "component": "Text",
                        "props": {
                          "color": "white",
                          "text": "ADD"
                        }
                      }
                    ]
                  },
                  {
                    "component": "Icon",
                    "onlyShowIf": {
                      "deviceSize": {
                        "$ne": "sm"
                      }
                    },
                    "props": {
                      "name": "expand_more",
                      "color": "white",
                      "size": "xs"
                    }
                  },
                  {
                    "component": "Icon",
                    "onlyShowIf": {
                      "deviceSize": {
                        "$eq": "sm"
                      }
                    },
                    "props": {
                      "name": "add",
                      "color": "white",
                      "size": "xs"
                    }
                  }
                ]
              }
            ]
          },
          {
            "component": "Dropdown",
            "props": {
              "facingRight": true,
              "menuButtonStyle": {
                "backgroundColor": "transparent",
                "border": 0,
                "padding": 10,
                "fontSize": 16,
                "cursor": "pointer",
                "color": "white"
              },
              "menuListStyle": {
                "background": "#233a4e",
                "borderWidth": 2,
                "borderColor": "#192835",
                "borderStyle": "solid",
                "color": "white",
                "textAlign": "center",
                "minWidth": 150
              },
              "menuLinkStyle": {
                "textAlign": "right",
                "padding": 15,
                "color": "white"
              },
              "items": [
                {
                  "text": "Profile",
                  "icon": "person",
                  "buttonCode": "PROFILE",
                  "eventType": "PROFILE"
                },
                {
                  "text": "Logout",
                  "icon": "exit-to-app",
                  "href": "logout"
                }
              ],
              "renderItem": {
                "component": "Box",
                "props": {
                  "alignItems": "center",
                  "justifyContent": "flex-end",
                  "padding": 15
                },
                "children": [
                  {
                    "component": "Box",
                    "props": {
                      "marginRight": 15
                    },
                    "children": [
                      {
                        "component": "Text",
                        "onlyShowIf": {
                          "item.text": {
                            "$eq": "Profile"
                          }
                        },
                        "props": {
                          "text": "{{item.text}}",
                          "color": "white",
                          "align": "right",
                          "testID": "SEL_USER_PROFILE"
                        }
                      },
                      {
                        "component": "Text",
                        "onlyShowIf": {
                          "item.text": {
                            "$eq": "Logout"
                          }
                        },
                        "props": {
                          "text": "{{item.text}}",
                          "color": "white",
                          "align": "right",
                          "testID": "SEL_USER_LOGOUT"
                        }
                      }
                    ]
                  },
                  {
                    "component": "Icon",
                    "props": {
                      "name": "{{item.icon}}",
                      "color": "white"
                    }
                  }
                ]
              },
              "testID": "QUE_SELECT_ACCOUNT_FUNCTIONS"
            },
            "children": [
              {
                "component": "Box",
                "props": {
                  "alignItems": "center"
                },
                "children": [
                  {
                    "component": "Box",
                    "props": {
                      "marginRight": 10
                    },
                    "children": [
                      {
                        "component": "ActivityIndicator",
                        "dontShowIf": {
                          "user.attributes.PRI_FIRSTNAME.value": {
                            "$exists": true
                          }
                        },
                        "props": {
                          "color": "white",
                          "size": "small"
                        }
                      },
                      {
                        "component": "Text",
                        "onlyShowIf": {
                          "user.attributes.PRI_FIRSTNAME.value": {
                            "$exists": true
                          }
                        },
                        "props": {
                          "color": "white",
                          "text": "{{user.attributes.PRI_FIRSTNAME.value}}"
                        }
                      }
                    ]
                  },
                  {
                    "component": "Icon",
                    "props": {
                      "name": "expand_more",
                      "color": "white",
                      "size": "xs"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
