{
  "layout": {
    "title": "Search - Search Results",
    "appColor": "dark",
    "hideHeaderRight": true
  },
  "children": [
    {
      "component": "Box",
      "props": {
        "flex": 1,
        "height": "100%",
        "backgroundColor": "lightgrey",
        "flexDirection": "column"
      },
      "children": [
        {
          "component": "Box",
          "props": {
            "padding": 20,
            "flexDirection": "column"
          },
          "children": [
            {
              "component": "Box",
              "props": {},
              "children": [
                {
                  "component": "Label",
                  "props": {
                    "text": "Services",
                    "color": "gray",
                    "size": "xs"
                  }
                }
              ]
            },
            {
              "component": "Box",
              "props": {
                "marginBottom": 20
              },
              "children": [
                {
                  "component": "Heading",
                  "props": {
                    "text": "Accounting",
                    "size": "xl"
                  }
                }
              ]
            }
          ]
        },
        {
          "component": "ScrollView",
          "props": {},
          "repeat": "_query",
          "children": {
            "component": "Sublayout",
            "props": {
              "layoutName": "contact/contact.card",
              "contactID": "{{repeater.code}}",
              "contactImage": "{{repeater.attributes.PRI_IMAGE_URL.valueString}}",
              "contactName": "{{repeater.attributes.PRI_FIRSTNAME.valueString}} {{repeater.attributes.PRI_LASTNAME.valueString}}",
              "contactCompany": "{{repeater.attributes.PRI_COMPANY_NAME.valueString}}",
              "contactDegree": "{{repeater.attributes.PRI_DEGREE.valueString}}"
            }
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "basePath": "baseEntities.data",
      "id": "GRP_RESULTS",
      "as": "be"
    },
    {
      "operator": "scope",
      "path": "be",
      "scope": {
        "operator": "map",
        "fields": {
          "name": "name",
          "items": "links"
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "find",
        "query": {
          "be": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "map",
        "fields": {
          "linkValue": "link.linkValue",
          "item": "be"
        }
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateLinkValues",
        "field": "item",
        "as": "links"
      }
    },
    {
      "operator": "scope",
      "path": "items",
      "scope": {
        "operator": "populateAttributes",
        "path": "links"
      }
    }
  ]
}
