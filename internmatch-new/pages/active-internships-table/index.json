{
  "layout": {
    "title": "Active Internships",
    "appColor": "white",
    "backgroundColor": "whitesmoke",
    "header": {
      "variant": "default"
    },
    "sidebar": {
      "variant": "default"
    },
    "sidebarRight": {
      "variant": "default",
      "onlyShowIf": {
        "$or": [
          {
            "user.attributes.PRI_IS_AGENT.value": {
              "$eq": true
            }
          },
          {
            "user.attributes.PRI_IS_EDU_PROVIDER_STAFF.value": {
              "$eq": true
            }
          },
          {
            "user.attributes.PRI_IS_BUYER.value": {
              "$eq": true
            }
          }
        ]
      }
    }
  },
  "children": [
    {
      "component": "Box",
      "props" : {
        "width" : "100%"
      },
      "children": [
        {
          "component": "Sublayout",
          "props": {
            "layoutName": "tables/table-default",
            "code": "GRP_ACTIVE_INTERNSHIPS",
            "rootCode": "GRP_RESULT_AVAILABLE_INTERNSHIPS",
            "data": "_query.tableData",
            "columns": [
              {
                "Header": "Actions",
                "accessor": "actions",
                "renderButton": [
                  {
                    "component": "EventButton",
                    "props": {
                      "height": "30px",
                      "width": "80px",
                      "backgroundColor": "red",
                      "color": "#5173c6",
                      "textColor": "#fff",
                      "text": "View",
                      "buttonCode": "BTN_VIEW_BUCKET_INTERNSHIP",
                      "value": {
                        "itemCode": "{{code}}"
                      },
                      "dispatchActionOnClick": {
                        "type": "ALIAS_ADD",
                        "payload": {
                          "alias": "CURRENT_NOTE",
                          "value": "{{code}}"
                        }
                      }
                    }
                  }
                ]
              },
              {
                "Header": "Internship Title",
                "accessor": "name",
                "id": "name",
                "key": "name",
                "filterType": "string",
                "attributeCode": "PRI_NAME"
              },
              {
                "Header": "Host Company",
                "accessor": "company",
                "attributeCode": "PRI_HOST_COMPANY",
                "filterType": "string"
              },
              {
                "Header": "Representative",
                "accessor": "companyRep",
                "attributeCode": "PRI_HOST_COMPANY_REP",
                "filterType": "string"
              },
              {
                "Header": "Contact Number",
                "accessor": "contactNumber",
                "filterType": "string",
                "attributeCode": "PRI_MOBILE"
              },
              {
                "Header": "Applied",
                "accessor": "countApplied",
                "filterType": "string",
                "attributeCode": "PRI_COUNT_GRP_APPLIED"
              },
              {
                "Header": "Shortlisted",
                "accessor": "countShortlisted",
                "filterType": "string",
                "attributeCode": "PRI_COUNT_GRP_SHORTLISTED"
              },
              {
                "Header": "Interviews",
                "accessor": "countInterviews",
                "filterType": "string",
                "attributeCode": "PRI_COUNT_GRP_INTERVIEWS"
              },
              {
                "Header": "Offered",
                "accessor": "countOffered",
                "filterType": "string",
                "attributeCode": "PRI_COUNT_GRP_OFFERED"
              },
              {
                "Header": "In Progress",
                "accessor": "countInProgress",
                "filterType": "string",
                "attributeCode": "PRI_COUNT_GRP_IN_PROGRESS"
              },
              {
                "Header": "Placed",
                "accessor": "countPlaced",
                "filterType": "string",
                "attributeCode": "PRI_COUNT_GRP_PLACED"
              }
            ]
          }
        }
      ]
    }
  ],
  "query": [
    {
      "operator": "getBE",
      "id": "GRP_RESULT_AVAILABLE_INTERNSHIPS",
      "as": "internships"
    },
    {
      "operator": "scope",
      "path": "internships.links",
      "as": "internships",
      "scope": {
        "operator": "getBE",
        "basePath": "baseEntities.data",
        "id": "{{link.targetCode}}"
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "populateAttributes",
        "code": "{{code}}",
        "as": "attributes"
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "getBE",
        "as": "company",
        "basePath": "baseEntities.data",
        "id": "{{attributes.LNK_HOST_COMPANY.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "scope",
        "path": "company",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "getBE",
        "as": "companyRep",
        "basePath": "baseEntities.data",
        "id": "{{attributes.LNK_HOST_COMPANY_REP.value}}"
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "scope",
        "path": "companyRep",
        "scope": {
          "operator": "populateAttributes",
          "code": "{{code}}",
          "as": "attributes"
        }
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "scope": {
        "operator": "find",
        "query": {
          "code": {
            "$exists": true
          }
        }
      }
    },
    {
      "operator": "scope",
      "path": "internships",
      "as": "tableData",
      "scope": {
        "operator": "map",
        "fields": {
          "code": "code",
          "name": "attributes.PRI_NAME.value",
          "company": "company.name",
          "companyRep": "companyRep.name",
          "contactNumber": "companyRep.attributes.PRI_MOBILE.value",
          "countApplied": "attributes.PRI_COUNT_GRP_APPLIED.value",
          "countInterviews": "attributes.PRI_COUNT_GRP_INTERVIEWS.value",
          "countInProgress": "attributes.PRI_COUNT_GRP_IN_PROGRESS.value",
          "countOffered": "attributes.PRI_COUNT_GRP_OFFERED.value",
          "countPlaced": "attributes.PRI_COUNT_GRP_PLACED.value",
          "countShortlisted": "attributes.PRI_COUNT_GRP_SHORTLISTED.value"
        }
      }
    }
  ]
}