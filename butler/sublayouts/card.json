                                             {  
                                                "span":{  
                                                   "style":{  
                                                      "fontSize":"0.85em",
                                                      "padding":"5px",
                                                      "backgroundColor":"#ddd",
                                                      "marginBottom":"5px",
                                                      "flexGrow":1
                                                   },
                                                   "children":"TC: ${BE.PRI_ALLOCATED_TC}"
