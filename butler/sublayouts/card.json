                                 "aliases":{  
                                    "BE":"BE.code",
                                    "GROUP":"ROOT"
                                 }
                              }
                           },
                           {  
                              "Selector":{  
                                 "checkValues":[  
                                    "ROOT"
                                 ],
                                 "showValues":[  
                                    "GRP_ORDER_ACTIVE_INTRANSIT",
                                    "GRP_ORDER_ACTIVE_DELIVERED",
                                    "GRP_ORDER_ACTIVE_COMPLETED"
                                 ],
                                 "children":[  
                                    {  
                                       "GennyList":{  
                                          "root":"BE.code",
                                          "showEmpty":false,
                                          "showTitle":false,
                                          "itemLayout":"CARD_CONTAINERS",
                                          "showLinks":[  
                                             "CONTAINER"
                                          ],
                                          "localAliases":{  
                                             "PARENT":"ROOT"
                                          },
                                          "hideHeader":true,
                                          "hideCount":true,
                                          "style":{  
                                             "maxWidth":"800px",
                                             "backgroundColor":"#fff",
                                             "padding": "0"
                                          }
                                       }
                                    }
                                 ]
                              }
                           }
                        ]
                     }
                  }
               ]
            }
