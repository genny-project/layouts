{
    "layout": {
      "title": "Question",
      "appColor": "dark",
      "backgroundColor": "white",
      "header": {
        "variant": "default"
      },
      "sidebar": {
        "variant": "default"
      }
    },
    "children": [
      {
        "component": "Container",
        "props": {
          "flexDirection": "column",
          "alignItems": "center",
          "justifyContent": "center",
          "flex": 1,
          "height": "100%",
          "maxWidth": 700
        },
        "children": [
          {
            "component": "Form",
            "props": {
              "questionGroupCode": "{{navigation.id}}",
              "renderHeading": {
                "component": "Box",
                "props": {
                  "marginTop": 20,
                  "marginBottom": 20
                },
                "children": [
                  {
                    "component": "Heading",
                    "props": {
                      "color": "#222",
                      "size": "xl",
                      "text": "{{heading}}"
                    }
                  }
                ]
              },
              "renderSubheading": {
                "component": "Box",
                "props": {
                  "marginY": 20
                },
                "children": [
                  {
                    "component": "Heading",
                    "props": {
                      "color": "red",
                      "size": "lg",
                      "align": "left"
                    }
                  }
                ]
              },
              "renderFormInputWrapper": {
                "component": "Box",
                "props": {
                  "marginBottom": 20,
                  "flexDirection": "column"
                }
              },
              "renderFormInput": {
                "component": "FormInput",
                "useThemeFrom": "Input",
                "variant": "default",
                "props": {
                  "placeholder": "{{label}}",
                 "appearance": "none",
                  "height": 50,
                  "borderRadius": 25,
                  "paddingX": 20,
                  "paddingY": 15,
                  "borderWidth":1

                }
              },
              "renderFormInputLabel": {
                "component": "Box",
                "props": {
                  "margin": 10,
                  "alignItems": "center",
                  "justifyContent": "space-between"
                },
                "children": [
                  {
                    "component": "Text",
                    "props": {
                      "text": "{{label}}"
                    },
                    "conditional": {
                      "if": {
                        "$or": [
                          {
                            "submitCount": { "$gt": 0 },
                            "error": { "$exists": true }
                          },
                          {
                            "touched": { "$eq": true },
                            "error": { "$exists": true }
                          }
                        ]
                      },
                      "then": {
                        "color": "red"
                      }
                    }
                  },
                  {
                    "component": "Text",
                    "onlyShowIf": {
                      "$or": [
                        { "required": { "$eq": true } },
                        { "error": { "$exists": true } }
                      ]
                    },
                    "conditional": {
                      "if": {
                        "error": { "$exists": true }
                      },
                      "then": {
                        "color": "red",
                        "text": "{{error}}"
                      },
                      "else": {
                        "text": "*required"
                      }
                    },
                    "props": {
                      "size": "xs"
                    }
                  }
                ]
              },
              "renderSubmitButtonWrapper": {
                "component": "Box",
                "props": {
                  "marginTop": 10,
                  "flexDirection": "row"
                }
              },
              "renderSubmitButton": {
                "component": "Button",
                "props": {
                  "inverted": true,
                  "showSpinnerOnClick": true, 
                  "width": "100%",
                  "color": "black",
                  "hoverProps": {
                    "color": "#093f7f",
                    "textColor": "green"
                  }
                }
              },
              "renderLoading": {
                "component": "Box",
                "props": {
                  "flexDirection": "column"
                },
                "children": [
                  {
                    "component": "ActivityIndicator",
                    "props": {
                      "size": "large"
                    }
                  },
                  {
                    "component": "Box",
                    "props": {
                      "marginTop": 10
                    },
                    "children": [
                      {
                        "component": "Text",
                        "props": {
                          "color": "#222",
                          "text": "Loading form..."
                        }
                      }
                    ]
                  }
                ]
              }
            }
          }
        ]
      }
    ]
  }
  