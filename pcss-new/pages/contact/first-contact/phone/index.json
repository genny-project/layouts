{
    "layout": {
      "title": "Contact By Phone Form",
      "appColor": "dark",
      "backgroundColor": "white",
      "header": {
        "variant": "default"
      },
      "sidebar": {
        "variant": "default"
      }
    },
    "children": [
      {
        "component": "Container",
        "props": {
          "flexDirection": "column",
          "alignItems": "center",
          "justifyContent": "center",
          "flex": 1,
          "height": "100%",
          "maxWidth": 700
        },
        "children": [
          {
            "component": "Form",
            "props": {
              "questionGroupCode": "QUE_CONTACTED_DETAILS_GRP",
              "renderHeading": {
                "component": "Box",
                "props": {
                  "marginTop": 20,
                  "marginBottom": 20
                },
                "children": [
                  {
                    "component": "Heading",
                    "props": {
                      "color": "#222",
                      "size": "xl",
                      "text": "{{heading}}"
                    }
                  }
                ]
              },
              "renderSubheading": {
                "component": "Box",
                "props": {
                  "marginY": 20
                },
                "children": [
                  {
                    "component": "Heading",
                    "props": {
                      "color": "red",
                      "size": "lg",
                      "align": "left",
                      "text": "ldfdlfkl"
                    }
                  }
                ]
              },
              "renderFormInputWrapper": {
                "component": "Box",
                "props": {
                  "marginBottom": 20,
                  "flexDirection": "column",
                  "borderWidth": 2,
                  "borderRadius": 20
                }
              },
              "renderFormInput": {
                "component": "FormInput",
                "useThemeFrom": "Input",
                "variant": "default",
                "props": {
                  "placeholder": "{{label}}",
                  "backgroundColor": "#dddddd",
                  "height": 50,
                  "borderRadius": 20
                }
              },
              "renderSubmitButtonWrapper": {
                "component": "Box",
                "props": {
                  "marginTop": 10,
                  "flexDirection": "column"
                }
              },
              "renderSubmitButton": {
                "component": "Button",
                "props": {
                  "inverted": true,
                  "showSpinnerOnClick": true, 
                  "color": "red",
                  "hoverProps": {
                    "color": "#093f7f",
                    "textColor": "black"
                  }
                }
              },
              "renderLoading": {
                "component": "Box",
                "props": {
                  "flexDirection": "column"
                },
                "children": [
                  {
                    "component": "ActivityIndicator",
                    "props": {
                      "size": "large"
                    }
                  },
                  {
                    "component": "Box",
                    "props": {
                      "marginTop": 10
                    },
                    "children": [
                      {
                        "component": "Text",
                        "props": {
                          "color": "#222",
                          "text": "Loading form..."
                        }
                      }
                    ]
                  }
                ]
              }
            }
          }
        ]
      }
    ]
  }
  